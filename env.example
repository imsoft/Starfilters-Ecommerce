# Configuración de Base de Datos MySQL (Hostinger)
# Copia este archivo como .env y reemplaza los valores con los datos de tu hosting

DB_HOST=localhost
DB_PORT=3306
DB_NAME=tu_nombre_de_base_de_datos
DB_USER=tu_usuario_de_base_de_datos
DB_PASSWORD=tu_contraseña_de_base_de_datos

# Configuración del sitio
SITE_URL=https://starfilters.mx
ADMIN_EMAIL=admin@tu-dominio.com

# Configuración de autenticación
JWT_SECRET=tu-secreto-super-seguro-cambiar-en-produccion

# Configuración de desarrollo
NODE_ENV=development

# Configuración de Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_CURRENCY=MXN

# Variable pública para el cliente (debe tener el prefijo PUBLIC_)
PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Configuración de Cloudinary
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret

# Configuración de Resend (Email)
RESEND_API_KEY=re_...
RESEND_FROM_EMAIL=noreply@tu-dominio.com
RESEND_FROM_NAME=Star Filters

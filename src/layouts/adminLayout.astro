                  <a
                    href="/admin/products"
                    class={`-mx-3 block rounded-lg px-3 py-2 text-base font-semibold text-foreground ${
                      currentPath.startsWith('/admin/products')
                        ? 'bg-muted'
                        : 'hover:bg-muted'
                    }`}
                  >
                    Productos

                  <a
                    href="/admin/filter-categories"
                    class={`-mx-3 block rounded-lg px-3 py-2 text-base font-semibold text-foreground ${
                      currentPath.startsWith('/admin/filter-categories')
                        ? 'bg-muted'
                        : 'hover:bg-muted'
                    }`}
                  >
                    Categorías Filtros

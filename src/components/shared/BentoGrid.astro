---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="bg-background py-12 sm:py-16">
  <div class="mx-auto max-w-7xl px-4 lg:px-6">
    <h2 class="text-center text-base/7 font-semibold text-primary">
      {t('features.title')}
    </h2>
    <p
      class="mx-auto mt-2 max-w-3xl text-center text-4xl font-semibold tracking-tight text-balance text-foreground sm:text-5xl"
    >
      {t('features.subtitle')}
    </p>
    <div class="mt-10 grid gap-3 sm:mt-12 grid-cols-1 sm:grid-cols-2 lg:grid-cols-4">
      <a 
        href={lang === 'en' ? '/en/cleanrooms' : '/cuartos-limpios'}
        class="relative group cursor-pointer transition-transform hover:scale-[1.02] h-full"
      >
        <div class="absolute inset-px rounded-lg bg-card">
        </div>
        <div
          class="relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)]"
        >
          <div class="px-6 pt-6 pb-4 sm:px-8 sm:pt-8 sm:pb-4">
            <p
              class="mt-2 text-lg font-medium tracking-tight text-foreground text-center"
            >
              {t('features.certifications.title')}
            </p>
            <p class="mt-2 text-sm/6 text-muted-foreground text-center">
              {t('features.certifications.description')}
            </p>
          </div>
          <div
            class="relative w-full grow flex flex-col"
          >
            <div class="px-6 pt-4 pb-6 sm:px-8 sm:pt-4 sm:pb-8 flex-1 flex items-center">
              <img
                src="/images/home-page/Cuarto Limpio Sala Blanca.png"
                alt="Cuarto Limpio Sala Blanca ISO 14644 Star Filters"
                class="w-full h-full rounded-lg object-cover shadow-sm"
              />
            </div>
          </div>
        </div>
        <div
          class="pointer-events-none absolute inset-px rounded-lg shadow-sm outline outline-black/5"
        >
        </div>
      </a>
      <a 
        href={lang === 'en' ? '/en/filters' : '/filtros'}
        class="relative group cursor-pointer transition-transform hover:scale-[1.02] h-full"
      >
        <div class="absolute inset-px rounded-lg bg-card">
        </div>
        <div
          class="relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)]"
        >
          <div class="px-6 pt-6 pb-4 sm:px-8 sm:pt-8 sm:pb-4">
            <p
              class="mt-2 text-lg font-medium tracking-tight text-foreground text-center"
            >
              {t('features.installation.title')}
            </p>
            <p class="mt-2 text-sm/6 text-muted-foreground text-center">
              {t('features.installation.description')}
            </p>
          </div>
          <div
            class="flex flex-1 items-center justify-center px-6 pt-4 pb-6 sm:px-8 sm:pt-4 sm:pb-8"
          >
              <img
                src="/images/home-page/Filtros de Aire Star.png"
                alt="Filtros de Aire Industriales Star Filters"
                class="w-full h-full rounded-lg object-cover shadow-sm"
              />
          </div>
        </div>
        <div
          class="pointer-events-none absolute inset-px rounded-lg shadow-sm outline outline-black/5"
        >
        </div>
      </a>
      <a 
        href={lang === 'en' ? '/en/services' : '/servicios'}
        class="relative group cursor-pointer transition-transform hover:scale-[1.02] h-full"
      >
        <div class="absolute inset-px rounded-lg bg-card"></div>
        <div
          class="relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)]"
        >
          <div class="px-6 pt-6 pb-4 sm:px-8 sm:pt-8 sm:pb-4">
            <p
              class="mt-2 text-lg font-medium tracking-tight text-foreground text-center"
            >
              {t('features.technology.title')}
            </p>
            <p class="mt-2 text-sm/6 text-muted-foreground text-center">
              {t('features.technology.description')}
            </p>
          </div>
          <div class="flex flex-1 items-center">
            <div class="w-full px-6 pt-4 pb-6 sm:px-8 sm:pt-4 sm:pb-8">
              <img
                src="/images/home-page/Validacion Cuartos Limpios.jpeg"
                alt="Validación de Cuartos Limpios - Servicios de Validación Star Filters"
                class="w-full h-full rounded-lg object-cover shadow-sm"
              />
            </div>
          </div>
        </div>
        <div
          class="pointer-events-none absolute inset-px rounded-lg shadow-sm outline outline-black/5"
        >
        </div>
      </a>
      <a 
        href={lang === 'en' ? '/en/cleanrooms' : '/cuartos-limpios'}
        class="relative group cursor-pointer transition-transform hover:scale-[1.02] h-full"
      >
        <div
          class="absolute inset-px rounded-lg bg-card"
        >
        </div>
        <div
          class="relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)]"
        >
          <div class="px-6 pt-6 pb-4 sm:px-8 sm:pt-8 sm:pb-4">
            <p
              class="mt-2 text-lg font-medium tracking-tight text-foreground text-center"
            >
              {t('features.support.title')}
            </p>
            <p class="mt-2 text-sm/6 text-muted-foreground text-center">
              {t('features.support.description')}
            </p>
          </div>
          <div class="relative w-full grow flex flex-col">
            <div class="px-6 pt-4 pb-6 sm:px-8 sm:pt-4 sm:pb-8 flex-1 flex items-center">
              <img
                src="/images/home-page/Filtros%20de%20Estrella%20Cuarto%20Limpio.png"
                alt="Accesorios para Cuartos Limpios Star Filters"
                class="w-full h-full rounded-lg object-cover shadow-sm"
              />
            </div>
          </div>
        </div>
        <div
          class="pointer-events-none absolute inset-px rounded-lg shadow-sm outline outline-black/5"
        >
        </div>
      </a>
    </div>
  </div>
</div>

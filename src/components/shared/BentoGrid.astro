---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="bg-background py-12 sm:py-16">
  <div class="mx-auto max-w-2xl px-6 lg:max-w-7xl lg:px-8">
    <h2 class="text-center text-base/7 font-semibold text-primary">
      {t('features.title')}
    </h2>
    <p
      class="mx-auto mt-2 max-w-3xl text-center text-4xl font-semibold tracking-tight text-balance text-foreground sm:text-5xl"
    >
      {t('features.subtitle')}
    </p>
    <div class="mt-10 grid gap-4 sm:mt-16 lg:grid-cols-3 lg:grid-rows-2">
      <a 
        href={lang === 'en' ? '/en/cleanrooms' : '/cuartos-limpios'}
        class="relative lg:row-span-2 group cursor-pointer transition-transform hover:scale-[1.02]"
      >
        <div class="absolute inset-px rounded-lg bg-card lg:rounded-l-4xl">
        </div>
        <div
          class="relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)] lg:rounded-l-[calc(2rem+1px)]"
        >
          <div class="px-8 pt-8 pb-4 sm:px-10 sm:pt-10 sm:pb-4">
            <p
              class="mt-2 text-lg font-medium tracking-tight text-foreground max-lg:text-center"
            >
              {t('features.certifications.title')}
            </p>
            <p class="mt-2 max-w-lg text-sm/6 text-muted-foreground max-lg:text-center">
              {t('features.certifications.description')}
            </p>
          </div>
          <div
            class="@container relative w-full grow max-lg:mx-auto max-lg:max-w-sm"
          >
            <div class="px-8 pt-4 pb-8 sm:px-10 sm:pt-4 sm:pb-10">
              <img
                src="/images/home-page/Cuarto Limpio Sala Blanca.png"
                alt="Cuarto limpio sala blanca ISO 14644 Star Filters"
                class="w-full h-64 sm:h-72 lg:h-80 rounded-lg object-cover shadow-sm"
              />
            </div>
          </div>
        </div>
        <div
          class="pointer-events-none absolute inset-px rounded-lg shadow-sm outline outline-black/5 lg:rounded-l-4xl"
        >
        </div>
      </a>
      <a 
        href={lang === 'en' ? '/en/filters' : '/filtros'}
        class="relative max-lg:row-start-1 group cursor-pointer transition-transform hover:scale-[1.02]"
      >
        <div class="absolute inset-px rounded-lg bg-card max-lg:rounded-t-4xl">
        </div>
        <div
          class="relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)] max-lg:rounded-t-[calc(2rem+1px)]"
        >
          <div class="px-8 pt-8 pb-4 sm:px-10 sm:pt-10 sm:pb-4">
            <p
              class="mt-2 text-lg font-medium tracking-tight text-foreground max-lg:text-center"
            >
              {t('features.installation.title')}
            </p>
            <p class="mt-2 max-w-lg text-sm/6 text-muted-foreground max-lg:text-center">
              {t('features.installation.description')}
            </p>
          </div>
          <div
            class="flex flex-1 items-center justify-center px-8 pt-4 pb-8 sm:px-10 sm:pt-4 sm:pb-10"
          >
              <img
                src="/images/home-page/Filtros de Aire Star.png"
                alt="Filtros de aire industriales Star Filters"
                class="w-full h-48 sm:h-56 lg:h-64 rounded-lg object-cover shadow-sm"
              />
          </div>
        </div>
        <div
          class="pointer-events-none absolute inset-px rounded-lg shadow-sm outline outline-black/5 max-lg:rounded-t-4xl"
        >
        </div>
      </a>
      <a 
        href={lang === 'en' ? '/en/services' : '/servicios'}
        class="relative max-lg:row-start-3 lg:col-start-2 lg:row-start-2 group cursor-pointer transition-transform hover:scale-[1.02]"
      >
        <div class="absolute inset-px rounded-lg bg-card"></div>
        <div
          class="relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)]"
        >
          <div class="px-8 pt-8 pb-4 sm:px-10 sm:pt-10 sm:pb-4">
            <p
              class="mt-2 text-lg font-medium tracking-tight text-foreground max-lg:text-center"
            >
              {t('features.technology.title')}
            </p>
            <p class="mt-2 max-w-lg text-sm/6 text-muted-foreground max-lg:text-center">
              {t('features.technology.description')}
            </p>
          </div>
          <div class="@container flex flex-1 items-center">
            <div class="w-full px-8 pt-4 pb-10 sm:px-10 sm:pt-4 sm:pb-10">
              <img
                src="/images/home-page/Filtros de Estrellas Cuarto Limpio.png"
                alt="ValidaciÃ³n de cuartos limpios Star Filters"
                class="w-full h-48 sm:h-56 lg:h-64 rounded-lg object-cover shadow-sm"
              />
            </div>
          </div>
        </div>
        <div
          class="pointer-events-none absolute inset-px rounded-lg shadow-sm outline outline-black/5"
        >
        </div>
      </a>
      <a 
        href={lang === 'en' ? '/en/filters' : '/filtros'}
        class="relative lg:row-span-2 group cursor-pointer transition-transform hover:scale-[1.02]"
      >
        <div
          class="absolute inset-px rounded-lg bg-card max-lg:rounded-b-4xl lg:rounded-r-4xl"
        >
        </div>
        <div
          class="relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)] max-lg:rounded-b-[calc(2rem+1px)] lg:rounded-r-[calc(2rem+1px)]"
        >
          <div class="px-8 pt-8 pb-4 sm:px-10 sm:pt-10 sm:pb-4">
            <p
              class="mt-2 text-lg font-medium tracking-tight text-foreground max-lg:text-center"
            >
              {t('features.support.title')}
            </p>
            <p class="mt-2 max-w-lg text-sm/6 text-muted-foreground max-lg:text-center">
              {t('features.support.description')}
            </p>
          </div>
          <div class="relative w-full grow">
            <div class="px-8 pt-4 pb-8 sm:px-10 sm:pt-4 sm:pb-10">
              <img
                src="/images/home-page/Filtros%20de%20estrella%20productos.png"
                alt="Productos Star Filters para cuartos limpios"
                class="w-full h-64 sm:h-72 lg:h-80 rounded-lg object-cover shadow-sm"
              />
            </div>
          </div>
        </div>
        <div
          class="pointer-events-none absolute inset-px rounded-lg shadow-sm outline outline-black/5 max-lg:rounded-b-4xl lg:rounded-r-4xl"
        >
        </div>
      </a>
    </div>
  </div>
</div>

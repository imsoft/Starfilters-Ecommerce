---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const stats = [
  { 
    label: t('stats.projects'), 
    value: t('stats.projectsNumber')?.trim(),
    icon: 'calendar' // años de experiencia
  },
  { 
    label: t('stats.experience'), 
    value: t('stats.experienceNumber')?.trim(),
    icon: 'cleanroom' // cuartos limpios construidos - ventilación/ambiente controlado
  },
  { 
    label: t('stats.clients'), 
    value: t('stats.clientsNumber')?.trim(),
    icon: 'air-filter' // filtros vendidos
  },
];
---

<div class="bg-background py-12 sm:py-16">
  <div class="mx-auto max-w-7xl px-4 lg:px-6">
    <dl class="grid grid-cols-1 gap-x-8 gap-y-16 text-center lg:grid-cols-3">
      {stats.map((stat) => (
        <div class="mx-auto flex max-w-xs flex-col gap-y-4">
          {stat.value ? (
            <>
              <!-- Icono -->
              <div class="mx-auto mb-2 flex h-16 w-16 items-center justify-center rounded-full bg-primary/10">
                {stat.icon === 'calendar' && (
                  <svg class="h-8 w-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                )}
                {stat.icon === 'cleanroom' && (
                  <svg class="h-8 w-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M18 17.5a2.5 2.5 0 1 1-4 2.03V12" />
                    <path d="M6 12H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2" />
                    <path d="M6 8h12" />
                    <path d="M6.6 15.572A2 2 0 1 0 10 17v-5" />
                  </svg>
                )}
                {stat.icon === 'air-filter' && (
                  <svg class="h-8 w-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M10.827 16.379a6.082 6.082 0 0 1-8.618-7.002l5.412 1.45a6.082 6.082 0 0 1 7.002-8.618l-1.45 5.412a6.082 6.082 0 0 1 8.618 7.002l-5.412-1.45a6.082 6.082 0 0 1-7.002 8.618l1.45-5.412Z" />
                    <path d="M12 12v.01" />
                  </svg>
                )}
              </div>
              <dd class="text-3xl font-semibold tracking-tight text-foreground sm:text-5xl">
                {stat.value}
              </dd>
              <dt class="text-base/7 text-muted-foreground font-medium">
                {stat.label}
              </dt>
            </>
          ) : (
            <dd class="order-first text-2xl font-semibold tracking-tight text-foreground sm:text-3xl">
              {stat.label}
            </dd>
          )}
        </div>
      ))}
    </dl>
  </div>
</div>

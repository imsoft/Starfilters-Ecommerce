---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="bg-background py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:text-center">
      <h2 class="text-base/7 font-semibold text-primary">{t('services.badge')}</h2>
      <p
        class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-foreground sm:text-5xl lg:text-balance"
      >
        {t('services.title')}
      </p>
      <p class="mt-6 text-lg/8 text-muted-foreground whitespace-pre-line">
        {t('services.description')}
      </p>
    </div>
    <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-4xl">
      <dl
        class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-12 lg:max-w-none lg:grid-cols-2 lg:gap-y-16"
      >
        <!-- Prueba de integridad de filtros HEPA -->
        <div class="flex flex-col">
          <div class="mb-4 overflow-hidden rounded-lg">
            <img
              src="/images/services/Prueba de Integridad Filtros HEPA.jpg"
              alt="Prueba de integridad de filtros HEPA"
              class="h-48 w-full object-cover"
            />
          </div>
          <dt class="text-base/7 font-semibold text-foreground">
            {t('services.hepaIntegrity.title')}
          </dt>
          <dd class="mt-2 text-base/7 text-muted-foreground">
            {t('services.hepaIntegrity.description')}
          </dd>
        </div>

        <!-- Conteo de partículas de aire -->
        <div class="flex flex-col">
          <div class="mb-4 overflow-hidden rounded-lg">
            <img
              src="/images/services/Conteo Particulas Aire Cuarto Limpio.jpg"
              alt="Conteo de partículas de aire en cuarto limpio"
              class="h-48 w-full object-cover"
            />
          </div>
          <dt class="text-base/7 font-semibold text-foreground">
            {t('services.particleCount.title')}
          </dt>
          <dd class="mt-2 text-base/7 text-muted-foreground">
            {t('services.particleCount.description')}
          </dd>
        </div>

        <!-- Prueba de hermeticidad de ductos -->
        <div class="flex flex-col">
          <div class="mb-4 overflow-hidden rounded-lg">
            <img
              src="/images/services/Prueba hermeticidad ductos aire.jpg"
              alt="Prueba de hermeticidad de ductos de aire"
              class="h-48 w-full object-cover"
            />
          </div>
          <dt class="text-base/7 font-semibold text-foreground">
            {t('services.ductLeakage.title')}
          </dt>
          <dd class="mt-2 text-base/7 text-muted-foreground">
            {t('services.ductLeakage.description')}
          </dd>
        </div>

        <!-- Balanceo y control de presión de áreas -->
        <div class="flex flex-col">
          <div class="mb-4 overflow-hidden rounded-lg">
            <img
              src="/images/services/Balanceo Aire Presion Diferencial.jpg"
              alt="Balanceo de aire y presión diferencial"
              class="h-48 w-full object-cover"
            />
          </div>
          <dt class="text-base/7 font-semibold text-foreground">
            {t('services.airBalancing.title')}
          </dt>
          <dd class="mt-2 text-base/7 text-muted-foreground">
            {t('services.airBalancing.description')}
          </dd>
        </div>
      </dl>
    </div>
  </div>
</div>

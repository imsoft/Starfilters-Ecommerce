---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="bg-background py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:text-center">
      <h2 class="text-base/7 font-semibold text-primary">{t('services.badge')}</h2>
      <p
        class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-foreground sm:text-5xl lg:text-balance"
      >
        {t('services.title')}
      </p>
      <p class="mt-6 text-lg/8 text-muted-foreground">
        {t('services.description')}
      </p>
    </div>
    <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-4xl">
      <dl
        class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-12 lg:max-w-none lg:grid-cols-2 lg:gap-y-16"
      >
        <!-- Instalación Profesional -->
        <div class="flex flex-col">
          <div class="mb-4 overflow-hidden rounded-lg">
            <img
              src="/images/cleanrooms-page/Construccion%20Cuartos%20Limpios%20Star%20Filters.JPG"
              alt="Instalación profesional de sistemas de filtración"
              class="h-48 w-full object-cover"
            />
          </div>
          <dt class="text-base/7 font-semibold text-foreground">
            {t('services.installation.title')}
          </dt>
          <dd class="mt-2 text-base/7 text-muted-foreground">
            {t('services.installation.description')}
          </dd>
        </div>

        <!-- Certificación y Validación -->
        <div class="flex flex-col">
          <div class="mb-4 overflow-hidden rounded-lg">
            <img
              src="/images/cleanrooms-page/Certificado%20ISO%2014644.JPG"
              alt="Certificación ISO 14644 para cuartos limpios"
              class="h-48 w-full object-cover"
            />
          </div>
          <dt class="text-base/7 font-semibold text-foreground">
            {t('services.certification.title')}
          </dt>
          <dd class="mt-2 text-base/7 text-muted-foreground">
            {t('services.certification.description')}
          </dd>
        </div>

        <!-- Mantenimiento Preventivo -->
        <div class="flex flex-col">
          <div class="mb-4 overflow-hidden rounded-lg">
            <img
              src="/images/cleanrooms-page/Filtros%20Star%20Cuarto%20Limpio.JPG"
              alt="Mantenimiento preventivo de filtros"
              class="h-48 w-full object-cover"
            />
          </div>
          <dt class="text-base/7 font-semibold text-foreground">
            {t('services.maintenance.title')}
          </dt>
          <dd class="mt-2 text-base/7 text-muted-foreground">
            {t('services.maintenance.description')}
          </dd>
        </div>

        <!-- Consultoría Técnica -->
        <div class="flex flex-col">
          <div class="mb-4 overflow-hidden rounded-lg">
            <img
              src="/images/cleanrooms-page/Puerta%20Giratoria%20Star%20Filters.JPG"
              alt="Consultoría técnica en sistemas de filtración"
              class="h-48 w-full object-cover"
            />
          </div>
          <dt class="text-base/7 font-semibold text-foreground">
            {t('services.consulting.title')}
          </dt>
          <dd class="mt-2 text-base/7 text-muted-foreground">
            {t('services.consulting.description')}
          </dd>
        </div>
      </dl>
    </div>
  </div>
</div>

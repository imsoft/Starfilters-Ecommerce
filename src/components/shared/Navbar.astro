---
import { Button } from "../ui/button";
import UserDropdown from "../ui/UserDropdown.astro";
import CartIcon from "../ui/CartIcon.astro";
import { getAuthenticatedUser } from "@/lib/auth-utils";

// Obtener usuario autenticado
const user = getAuthenticatedUser(Astro.cookies);
---

<header class="absolute inset-x-0 top-0 z-50">
  <div class="mx-auto max-w-7xl">
    <div class="px-6 pt-6 lg:max-w-2xl lg:pr-0 lg:pl-8">
      <nav
        aria-label="Global"
        class="flex items-center justify-between lg:justify-start"
      >
        <a href="/" class="-m-1.5 p-1.5">
          <span class="sr-only">Starfilters</span>
          <img
            src="/logos/logo-starfilters.png"
            alt="Starfilters"
            class="h-16 w-auto"
          />
        </a>
        <Button
          type="button"
          data-action="show-modal"
          data-target="mobile-menu"
          className="-m-2.5 rounded-md p-2.5 text-muted-foreground lg:hidden"
        >
          <span class="sr-only">Open main menu</span>
          <svg
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            data-slot="icon"
            aria-hidden="true"
            class="size-6"
          >
            <path
              d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </Button>
        <div class="hidden lg:ml-12 lg:flex lg:gap-x-8 lg:items-center">
          <a
            href="/filtros"
            class="text-sm/6 font-semibold text-foreground whitespace-nowrap"
            >Filtros</a
          >
          <a
            href="/cuartos-limpios"
            class="text-sm/6 font-semibold text-foreground whitespace-nowrap"
            >Cuartos Limpios</a
          >
          <a
            href="/services"
            class="text-sm/6 font-semibold text-foreground whitespace-nowrap"
            >Servicios</a
          >
          <a
            href="/blog"
            class="text-sm/6 font-semibold text-foreground whitespace-nowrap"
            >Blog</a
          >
          {user ? (
            <>
              <CartIcon />
              <UserDropdown user={user} />
            </>
          ) : (
            <a
              href="/login"
              class="text-sm/6 font-semibold text-foreground whitespace-nowrap"
              >Iniciar sesi칩n</a
            >
          )}
        </div>
      </nav>
    </div>
  </div>
  <el-dialog>
    <dialog id="mobile-menu" class="backdrop:bg-transparent lg:hidden">
      <div tabindex="0" class="fixed inset-0 focus:outline-none">
        <el-dialog-panel
          class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-background p-6 sm:max-w-sm sm:ring-1 sm:ring-border"
        >
          <div class="flex items-center justify-between">
            <a href="/" class="-m-1.5 p-1.5">
              <span class="sr-only">Starfilters</span>
              <img
                src="/logos/logo-starfilters.png"
                alt="Starfilters"
                class="h-16 w-auto"
              />
            </a>
            <Button
              type="button"
              data-action="close"
              data-target="mobile-menu"
              className="-m-2.5 rounded-md p-2.5 text-muted-foreground"
            >
              <span class="sr-only">Close menu</span>
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                data-slot="icon"
                aria-hidden="true"
                class="size-6"
              >
                <path
                  d="M6 18 18 6M6 6l12 12"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
              </svg>
            </Button>
          </div>
          <div class="mt-6 flow-root">
            <div class="-my-6 divide-y divide-border">
              <div class="space-y-2 py-6">
                <a
                  href="/filtros"
                  class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-foreground hover:bg-muted"
                  >Filtros</a
                >
                <a
                  href="/cuartos-limpios"
                  class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-foreground hover:bg-muted"
                  >Cuartos Limpios</a
                >
                <a
                  href="/services"
                  class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-foreground hover:bg-muted"
                  >Servicios</a
                >
                <a
                  href="/blog"
                  class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-foreground hover:bg-muted"
                  >Blog</a
                >
              </div>
              <div class="py-6">
                {user ? (
                  <div class="space-y-2">
                    <div class="-mx-3 block rounded-lg px-3 py-2.5">
                      <div class="flex items-center gap-x-3">
                        <div class="avatar-circle bg-primary text-primary-foreground text-sm font-medium">
                          {user.firstName.charAt(0)}{user.lastName.charAt(0)}
                        </div>
                        <div>
                          <p class="text-base font-semibold text-foreground">{user.firstName} {user.lastName}</p>
                          <p class="text-sm text-muted-foreground">{user.email}</p>
                        </div>
                      </div>
                    </div>
                    <div class="-mx-3 block rounded-lg px-3 py-2">
                      <div class="flex items-center gap-x-3">
                        <CartIcon />
                        <span class="text-base/7 font-semibold text-foreground">Carrito de compras</span>
                      </div>
                    </div>
                    <a
                      href="/profile"
                      class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-foreground hover:bg-muted"
                      >Mi Perfil</a
                    >
                    <a
                      href="/change-password"
                      class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-foreground hover:bg-muted"
                      >Cambiar Contrase침a</a
                    >
                    <a
                      href="/orders"
                      class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-foreground hover:bg-muted"
                      >Mis Pedidos</a
                    >
                    <a
                      href="/cart"
                      class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-foreground hover:bg-muted"
                      >Carrito</a
                    >
                    <a
                      href="/logout"
                      class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-foreground hover:bg-muted"
                      >Cerrar Sesi칩n</a
                    >
                  </div>
                ) : (
                  <a
                    href="/login"
                    class="-mx-3 block rounded-lg px-3 py-2.5 text-base/7 font-semibold text-foreground hover:bg-muted"
                    >Iniciar sesi칩n</a
                  >
                )}
              </div>
            </div>
          </div>
        </el-dialog-panel>
      </div>
    </dialog>
  </el-dialog>
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const modal = document.getElementById("mobile-menu");
    const openBtn = document.querySelector('[data-action="show-modal"]');
    const closeBtn = document.querySelector('[data-action="close"]');

    openBtn?.addEventListener("click", () => {
      (modal as HTMLDialogElement)?.showModal();
    });

    closeBtn?.addEventListener("click", () => {
      (modal as HTMLDialogElement)?.close();
    });
  });
</script>

---
import { Button } from "../ui/button";
import UserDropdown from "../ui/UserDropdown.astro";
import CartIcon from "../ui/CartIcon.astro";
import LanguageSelector from "./LanguageSelector";
import { getAuthenticatedUser } from "@/lib/auth-utils";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import { isUserAdmin } from '@/lib/database';

// Obtener idioma actual
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Obtener usuario autenticado
const user = getAuthenticatedUser(Astro.cookies);

// Verificar si es admin
let userIsAdmin = false;
if (user) {
  userIsAdmin = await isUserAdmin(user.id);
}
---

<header class="absolute inset-x-0 top-0 z-50 bg-white/30 backdrop-blur-sm">
  <div class="mx-auto max-w-7xl">
    <div class="px-6 py-6 lg:px-8">
      <nav
        aria-label="Global"
        class="flex items-center justify-between lg:gap-x-12"
      >
        <!-- Logo - fijo a la izquierda -->
        <div class="flex lg:flex-1">
          <a href={lang === 'en' ? '/en' : '/'} class="-m-1.5 p-1.5 flex-shrink-0">
            <span class="sr-only">Starfilters</span>
            <img
              src="/logos/logo-starfilters.png"
              alt="Starfilters"
              class="h-14 w-auto object-contain"
              loading="eager"
              fetchpriority="high"
              style="image-rendering: -webkit-optimize-contrast; height: 56px; width: auto;"
            />
          </a>
        </div>

        <!-- Mobile menu button -->
        <Button
          type="button"
          data-action="show-modal"
          data-target="mobile-menu"
          className="-m-2.5 rounded-md p-2.5 text-muted-foreground lg:hidden"
        >
          <span class="sr-only">Open main menu</span>
          <svg
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            data-slot="icon"
            aria-hidden="true"
            class="size-6"
          >
            <path
              d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </Button>

        <!-- Menú de navegación - centrado -->
        <div class="hidden lg:flex lg:gap-x-8">
          <a
            href={lang === 'en' ? '/en/filters' : '/filtros'}
            class="text-sm/6 font-semibold text-foreground whitespace-nowrap hover:text-primary transition-colors"
            >{t('nav.filters')}</a
          >
          <a
            href={lang === 'en' ? '/en/cleanrooms' : '/cuartos-limpios'}
            class="text-sm/6 font-semibold text-foreground whitespace-nowrap hover:text-primary transition-colors"
            >{t('nav.cleanrooms')}</a
          >
          <a
            href={lang === 'en' ? '/en/services' : '/services'}
            class="text-sm/6 font-semibold text-foreground whitespace-nowrap hover:text-primary transition-colors"
            >{t('nav.services')}</a
          >
          <a
            href={lang === 'en' ? '/en/blog' : '/blog'}
            class="text-sm/6 font-semibold text-foreground whitespace-nowrap hover:text-primary transition-colors"
            >{t('nav.blog')}</a
          >
          <a
            href={lang === 'en' ? '/en/contact' : '/contact'}
            class="text-sm/6 font-semibold text-foreground whitespace-nowrap hover:text-primary transition-colors"
            >Contacto</a
          >
        </div>

        <!-- Controles del lado derecho - idioma, carrito, usuario -->
        <div class="hidden lg:flex lg:flex-1 lg:items-center lg:gap-x-4 lg:justify-end">
          <LanguageSelector client:load />
          {user ? (
            <>
              <CartIcon />
              <UserDropdown user={user} />
            </>
          ) : (
            <a
              href={lang === 'en' ? '/en/login' : '/login'}
              class="text-sm/6 font-semibold text-foreground whitespace-nowrap hover:text-primary transition-colors"
              >{t('nav.login')}</a
            >
          )}
        </div>
      </nav>
    </div>
  </div>
  <el-dialog>
    <dialog id="mobile-menu" class="backdrop:bg-transparent lg:hidden">
      <div tabindex="0" class="fixed inset-0 focus:outline-none">
        <el-dialog-panel
          class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-background p-6 sm:max-w-sm sm:ring-1 sm:ring-border"
        >
          <div class="flex items-center justify-between">
            <a href={lang === 'en' ? '/en' : '/'} class="-m-1.5 p-1.5">
              <span class="sr-only">Starfilters</span>
              <img
                src="/logos/logo-starfilters.png"
                alt="Starfilters"
                class="h-14 w-auto object-contain"
                loading="eager"
                fetchpriority="high"
                style="image-rendering: -webkit-optimize-contrast; height: 56px;"
              />
            </a>
            <Button
              type="button"
              data-action="close"
              data-target="mobile-menu"
              className="-m-2.5 rounded-md p-2.5 text-muted-foreground"
            >
              <span class="sr-only">Close menu</span>
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                data-slot="icon"
                aria-hidden="true"
                class="size-6"
              >
                <path
                  d="M6 18 18 6M6 6l12 12"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
              </svg>
            </Button>
          </div>
          <div class="mt-6 flow-root">
            <div class="-my-6 divide-y divide-border">
              <div class="space-y-2 py-6">
                <a
                  href={lang === 'en' ? '/en/filters' : '/filtros'}
                  class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-foreground hover:bg-muted"
                  >{t('nav.filters')}</a
                >
                <a
                  href={lang === 'en' ? '/en/cleanrooms' : '/cuartos-limpios'}
                  class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-foreground hover:bg-muted"
                  >{t('nav.cleanrooms')}</a
                >
                <a
                  href={lang === 'en' ? '/en/services' : '/services'}
                  class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-foreground hover:bg-muted"
                  >{t('nav.services')}</a
                >
                <a
                  href={lang === 'en' ? '/en/blog' : '/blog'}
                  class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-foreground hover:bg-muted"
                  >{t('nav.blog')}</a
                >
                <a
                  href={lang === 'en' ? '/en/contact' : '/contact'}
                  class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-foreground hover:bg-muted"
                  >Contacto</a
                >
              </div>
              <div class="py-6">
                {user ? (
                  <div class="space-y-2">
                    <div class="-mx-3 block rounded-lg px-3 py-2.5">
                      <div class="flex items-center gap-x-3">
                        <div class="avatar-circle bg-primary text-primary-foreground text-sm font-medium">
                          {user.firstName.charAt(0)}{user.lastName.charAt(0)}
                        </div>
                        <div>
                          <p class="text-base font-semibold text-foreground">{user.firstName} {user.lastName}</p>
                          <p class="text-sm text-muted-foreground">{user.email}</p>
                        </div>
                      </div>
                    </div>
                    <div class="-mx-3 block rounded-lg px-3 py-2">
                      <a href={lang === 'en' ? '/en/cart' : '/carrito'} class="flex items-center gap-x-3">
                        <CartIcon />
                        <span class="text-base/7 font-semibold text-foreground">{t('nav.cart')}</span>
                      </a>
                    </div>
                    <a
                      href={lang === 'en' ? '/en/profile' : '/perfil'}
                      class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-foreground hover:bg-muted"
                      >{t('nav.profile')}</a
                    >
                    <a
                      href={lang === 'en' ? '/en/change-password' : '/cambiar-contraseña'}
                      class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-foreground hover:bg-muted"
                      >{t('nav.changePassword')}</a
                    >
                    <a
                      href={lang === 'en' ? '/en/orders' : '/pedidos'}
                      class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-foreground hover:bg-muted"
                      >{t('nav.myOrders')}</a
                    >
                    <a
                      href={lang === 'en' ? '/en/cart' : '/carrito'}
                      class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-foreground hover:bg-muted"
                      >{t('nav.cart')}</a
                    >
                    {userIsAdmin && (
                      <a
                        href="/admin/dashboard"
                        class="-mx-3 flex items-center gap-2 rounded-lg px-3 py-2 text-base/7 font-semibold text-foreground hover:bg-muted"
                      >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                        </svg>
                        Dashboard Admin
                      </a>
                    )}
                    <a
                      href="/logout"
                      class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-foreground hover:bg-muted"
                      >{t('nav.logout')}</a
                    >
                  </div>
                ) : (
                  <a
                    href={lang === 'en' ? '/en/login' : '/login'}
                    class="-mx-3 block rounded-lg px-3 py-2.5 text-base/7 font-semibold text-foreground hover:bg-muted"
                    >{t('nav.login')}</a
                  >
                )}
              </div>
            </div>
          </div>
        </el-dialog-panel>
      </div>
    </dialog>
  </el-dialog>
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const modal = document.getElementById("mobile-menu");
    const openBtn = document.querySelector('[data-action="show-modal"]');
    const closeBtn = document.querySelector('[data-action="close"]');

    openBtn?.addEventListener("click", () => {
      (modal as HTMLDialogElement)?.showModal();
    });

    closeBtn?.addEventListener("click", () => {
      (modal as HTMLDialogElement)?.close();
    });
  });
</script>

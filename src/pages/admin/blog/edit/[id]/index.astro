    if (titleInput && metaTitleInput) {
      titleInput.addEventListener('input', function() {
        if (!metaTitleInput.value) {
          metaTitleInput.value = this.value;
          if (metaTitleCount) {
            metaTitleCount.textContent = this.value.length.toString();
          }
        }
      });
    }

    // Auto-generar meta descripci√≥n desde el excerpt
    const excerptInput = document.getElementById('excerpt') as HTMLTextAreaElement;
    if (excerptInput && metaDescriptionInput) {
      excerptInput.addEventListener('input', function() {
        if (!metaDescriptionInput.value) {
          metaDescriptionInput.value = this.value;
          if (metaDescriptionCount) {
            metaDescriptionCount.textContent = this.value.length.toString();
          }
        }
      });
    }
    
    // ===== GESTI√ìN DE IMAGEN DESTACADA =====
    const blogId = `{blogPost.uuid}`;
    const blogUploadZone = document.getElementById('blog-upload-zone');
    const blogFeaturedImageInput = document.getElementById('blog-featured-image');
    const blogImagePreview = document.getElementById('blog-image-preview');
    const blogPreviewImg = document.getElementById('blog-preview-img');
    const blogDeleteImageBtn = document.getElementById('blog-delete-image');
    const blogChangeImageBtn = document.getElementById('blog-change-image');
    const blogUploadStatus = document.getElementById('blog-upload-status');
    const featuredImageUrlInput = document.getElementById('featured-image-url');
    
    // Funci√≥n para subir imagen
    async function uploadBlogImage(file: File) {
      if (!blogUploadStatus) return;
      
      // Validar
      if (!file.type.startsWith('image/')) {
        alert('El archivo debe ser una imagen v√°lida');
        return;
      }
      
      if (file.size > 5 * 1024 * 1024) {
        alert('La imagen debe ser menor a 5MB');
        return;
      }
      
      blogUploadStatus.textContent = 'Subiendo imagen...';
      
      try {
        const formData = new FormData();
        formData.append('image', file);
        formData.append('blogId', blogId);
        
        console.log('üì§ Subiendo imagen de blog:', file.name);
        
        const response = await fetch('/api/blog/upload-image', {
          method: 'POST',
          body: formData
        });
        
        const result = await response.json();
        
        console.log('üìä Respuesta:', result);
        
        if (response.ok && result.success) {
          // Actualizar vista previa
          if (blogPreviewImg && blogImagePreview && blogUploadZone) {
            (blogPreviewImg as HTMLImageElement).src = result.url;
            blogImagePreview.style.display = '';
            blogUploadZone.style.display = 'none';
            
            // Actualizar input oculto
            if (featuredImageUrlInput) {
              (featuredImageUrlInput as HTMLInputElement).value = result.url;
            }
          }
          
          console.log('‚úÖ Imagen de blog subida:', result.url);
        } else {
          alert(`Error al subir la imagen: ${result.message}`);
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error al subir la imagen');
      } finally {
        blogUploadStatus.textContent = 'Arrastra y suelta la imagen aqu√≠, o';
        
        // Limpiar input
        if (blogFeaturedImageInput) {
          (blogFeaturedImageInput as HTMLInputElement).value = '';
        }
      }
    }
    
    // Funci√≥n para eliminar imagen
    async function deleteBlogImage() {
      if (!confirm('¬øEst√°s seguro de eliminar esta imagen?')) {
        return;
      }
      
      try {
        const currentUrl = (featuredImageUrlInput as HTMLInputElement)?.value;
        
        console.log('üóëÔ∏è Eliminando imagen de blog');
        
        const response = await fetch('/api/blog/delete-image', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ blogId, imageUrl: currentUrl })
        });
        
        const result = await response.json();
        
        console.log('üìä Respuesta:', result);
        
        if (response.ok && result.success) {
          // Ocultar vista previa y mostrar zona de carga
          if (blogImagePreview && blogUploadZone) {
            blogImagePreview.style.display = 'none';
            blogUploadZone.style.display = '';
          }
          
          // Limpiar input oculto
          if (featuredImageUrlInput) {
            (featuredImageUrlInput as HTMLInputElement).value = '';
          }
          
          console.log('‚úÖ Imagen de blog eliminada');
        } else {
          alert(`Error al eliminar: ${result.message}`);
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error al eliminar la imagen');
      }
    }
    
    // Event listeners
    if (blogFeaturedImageInput) {
      blogFeaturedImageInput.addEventListener('change', (e) => {
        const file = (e.target as HTMLInputElement).files?.[0];
        if (file) {
          uploadBlogImage(file);
        }
      });
    }
    
    if (blogDeleteImageBtn) {
      blogDeleteImageBtn.addEventListener('click', deleteBlogImage);
    }
    
    if (blogChangeImageBtn && blogFeaturedImageInput) {
      blogChangeImageBtn.addEventListener('click', () => {
        blogFeaturedImageInput.click();
      });
    }
    
    // Drag and drop
    if (blogUploadZone) {
      blogUploadZone.addEventListener('dragover', (e) => {
        e.preventDefault();
        blogUploadZone.classList.add('border-primary', 'bg-primary/5');
      });
      
      blogUploadZone.addEventListener('dragleave', () => {
        blogUploadZone.classList.remove('border-primary', 'bg-primary/5');
      });
      
      blogUploadZone.addEventListener('drop', (e) => {
        e.preventDefault();
        blogUploadZone.classList.remove('border-primary', 'bg-primary/5');
        
        const file = e.dataTransfer?.files[0];
        if (file) {
          uploadBlogImage(file);
        }
      });
      
      // Click en la zona para abrir selector
      blogUploadZone.addEventListener('click', () => {
        blogFeaturedImageInput?.click();
      });
    }
    
    console.log('üéØ Sistema de imagen de blog inicializado');
  });
</script>

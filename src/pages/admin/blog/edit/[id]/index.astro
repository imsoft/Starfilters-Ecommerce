<script>
  document.addEventListener('DOMContentLoaded', function() {
    const titleInput = document.getElementById('title') as HTMLInputElement;
    const slugInput = document.getElementById('slug') as HTMLInputElement;
    const metaTitleInput = document.getElementById('meta-title') as HTMLInputElement;
    const metaDescriptionInput = document.getElementById('meta-description') as HTMLTextAreaElement;
    const metaTitleCount = document.getElementById('meta-title-count');
    const metaDescriptionCount = document.getElementById('meta-description-count');

    // Generar slug automáticamente desde el título
    if (titleInput && slugInput) {
      titleInput.addEventListener('input', function() {
        if (!slugInput.value || slugInput.dataset.autoGenerated === 'true') {
          const slug = titleInput.value
            .toLowerCase()
            .trim()
            .replace(/[^\w\s-]/g, '')
            .replace(/[\s_-]+/g, '-')
            .replace(/^-+|-+$/g, '');
          slugInput.value = slug;
          slugInput.dataset.autoGenerated = 'true';
        }
      });

      // Marcar slug como manual si el usuario lo edita
      slugInput.addEventListener('input', function() {
        slugInput.dataset.autoGenerated = 'false';
      });
    }

    // Contar caracteres en meta título
    if (metaTitleInput && metaTitleCount) {
      metaTitleInput.addEventListener('input', function() {
        metaTitleCount.textContent = this.value.length.toString();
      });
    }

    // Contar caracteres en meta descripción
    if (metaDescriptionInput && metaDescriptionCount) {
      metaDescriptionInput.addEventListener('input', function() {
        metaDescriptionCount.textContent = this.value.length.toString();
      });
    }

    // Auto-generar meta título desde el título principal
    if (titleInput && metaTitleInput) {
      titleInput.addEventListener('input', function() {
        if (!metaTitleInput.value) {
          metaTitleInput.value = this.value;
          if (metaTitleCount) {
            metaTitleCount.textContent = this.value.length.toString();
          }
        }
      });
    }

    // Auto-generar meta descripción desde el excerpt
    const excerptInput = document.getElementById('excerpt') as HTMLTextAreaElement;
    if (excerptInput && metaDescriptionInput) {
      excerptInput.addEventListener('input', function() {
        if (!metaDescriptionInput.value) {
          metaDescriptionInput.value = this.value;
          if (metaDescriptionCount) {
            metaDescriptionCount.textContent = this.value.length.toString();
          }
        }
      });
    }
  });
</script>

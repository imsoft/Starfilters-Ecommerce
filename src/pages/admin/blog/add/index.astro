<script>
  document.addEventListener('DOMContentLoaded', function() {
    const titleInput = document.getElementById('title') as HTMLInputElement;
    const titleEnInput = document.getElementById('title_en') as HTMLInputElement;
    const slugInput = document.getElementById('slug') as HTMLInputElement;
    const slugEnInput = document.getElementById('slug_en') as HTMLInputElement;
    const metaTitleInput = document.getElementById('meta-title') as HTMLInputElement;
    const metaDescriptionInput = document.getElementById('meta-description') as HTMLTextAreaElement;
    const metaTitleCount = document.getElementById('meta-title-count');
    const metaDescriptionCount = document.getElementById('meta-description-count');

    // Funci칩n para generar slug desde un texto
    const generateSlug = (text: string): string => {
      return text
        .toLowerCase()
        .trim()
        .normalize('NFD') // Normalizar caracteres especiales
        .replace(/[\u0300-\u036f]/g, '') // Remover acentos
        .replace(/[^\w\s-]/g, '') // Remover caracteres especiales
        .replace(/[\s_-]+/g, '-') // Reemplazar espacios/guiones por un solo gui칩n
        .replace(/^-+|-+$/g, ''); // Remover guiones al inicio/final
    };

    // Generar slug en espa침ol autom치ticamente desde el t칤tulo
    if (titleInput && slugInput) {
      titleInput.addEventListener('input', function() {
        slugInput.value = generateSlug(this.value);
      });
    }

    // Generar slug en ingl칠s autom치ticamente desde el t칤tulo en ingl칠s
    if (titleEnInput && slugEnInput) {
      titleEnInput.addEventListener('input', function() {
        slugEnInput.value = generateSlug(this.value);
      });
    }

    // Contar caracteres en meta t칤tulo
    if (metaTitleInput && metaTitleCount) {
      metaTitleInput.addEventListener('input', function() {
        metaTitleCount.textContent = this.value.length.toString();
      });
    }

    // Contar caracteres en meta descripci칩n
    if (metaDescriptionInput && metaDescriptionCount) {
      metaDescriptionInput.addEventListener('input', function() {
        metaDescriptionCount.textContent = this.value.length.toString();
      });
    }

    // Auto-generar meta t칤tulo desde el t칤tulo principal
    if (titleInput && metaTitleInput) {
      titleInput.addEventListener('input', function() {
        if (!metaTitleInput.value) {
          metaTitleInput.value = this.value;
          if (metaTitleCount) {
            metaTitleCount.textContent = this.value.length.toString();
          }
        }
      });
    }

    // Auto-generar meta descripci칩n desde el excerpt
    const excerptInput = document.getElementById('excerpt') as HTMLTextAreaElement;
    if (excerptInput && metaDescriptionInput) {
      excerptInput.addEventListener('input', function() {
        if (!metaDescriptionInput.value) {
          metaDescriptionInput.value = this.value;
          if (metaDescriptionCount) {
            metaDescriptionCount.textContent = this.value.length.toString();
          }
        }
      });
    }

    // Escuchar el evento de cambio de imagen destacada
    document.addEventListener('blog-image-changed', (event: any) => {
      const featuredImageInput = document.getElementById('featured-image-input') as HTMLInputElement;
      if (featuredImageInput && event.detail) {
        featuredImageInput.value = event.detail.imageUrl || '';
        console.log('Imagen destacada actualizada:', event.detail.imageUrl);
      }
    });
  });
</script>

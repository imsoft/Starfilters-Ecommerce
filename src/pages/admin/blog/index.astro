<script>
  document.addEventListener('DOMContentLoaded', () => {
    const searchInput = document.getElementById('search-blog');
    const statusFilter = document.getElementById('status-filter-blog');
    const categoryFilter = document.getElementById('category-filter-blog');
    const tableBody = document.getElementById('blog-table-body');
    
    // Funci√≥n para filtrar art√≠culos del blog
    function filterBlogPosts() {
      const searchTerm = (searchInput as HTMLInputElement)?.value.toLowerCase() || '';
      const selectedStatus = (statusFilter as HTMLSelectElement)?.value || '';
      const selectedCategory = (categoryFilter as HTMLSelectElement)?.value || '';
      
      console.log('üîç Filtros del blog aplicados:', { searchTerm, selectedStatus, selectedCategory });
      
      if (!tableBody) return;
      
      const rows = tableBody.querySelectorAll('tr');
      let visibleCount = 0;
      
      rows.forEach((row) => {
        // Obtener datos de la fila
        const titleElement = row.querySelector('td:nth-child(2) .text-sm.font-medium');
        const excerptElement = row.querySelector('td:nth-child(2) .text-sm.text-muted-foreground');
        const categoryElement = row.querySelector('td:nth-child(4) .text-sm');
        const statusBadge = row.querySelector('td:nth-child(6) span');
        
        const title = titleElement?.textContent?.toLowerCase() || '';
        const excerpt = excerptElement?.textContent?.toLowerCase() || '';
        const category = categoryElement?.textContent?.toLowerCase() || '';
        const statusText = statusBadge?.textContent?.toLowerCase() || '';
        
        // Mapear texto de estado a valor
        let postStatus = '';
        if (statusText.includes('publicado')) postStatus = 'published';
        else if (statusText.includes('borrador')) postStatus = 'draft';
        else if (statusText.includes('programado')) postStatus = 'scheduled';
        else if (statusText.includes('archivado')) postStatus = 'archived';
        
        // Aplicar filtros
        const matchesSearch = searchTerm === '' || 
          title.includes(searchTerm) || 
          excerpt.includes(searchTerm);
        const matchesStatus = !selectedStatus || postStatus === selectedStatus;
        const matchesCategory = !selectedCategory || category.includes(selectedCategory);
        
        if (matchesSearch && matchesStatus && matchesCategory) {
          row.style.display = '';
          visibleCount++;
        } else {
          row.style.display = 'none';
        }
      });
      
      console.log(`‚úÖ ${visibleCount} art√≠culos mostrados despu√©s del filtrado`);
    }
    
    // Event listeners para filtros
    searchInput?.addEventListener('input', filterBlogPosts);
    statusFilter?.addEventListener('change', filterBlogPosts);
    categoryFilter?.addEventListener('change', filterBlogPosts);

    console.log('üéØ Filtros del blog inicializados');

    // Funci√≥n para eliminar art√≠culos del blog
    function handleDeleteBlog(uuid: string, title: string) {
      if (!confirm(`¬øEst√°s seguro de que deseas eliminar el art√≠culo "${title}"? Esta acci√≥n no se puede deshacer.`)) {
        return;
      }

      fetch('/api/blog/delete', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ uuid })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          window.location.href = '/admin/blog?success=deleted';
        } else {
          alert('Error al eliminar el art√≠culo: ' + data.message);
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Error al eliminar el art√≠culo. Por favor intenta de nuevo.');
      });
    }

    // Agregar event listeners a los botones de eliminar
    const deleteButtons = document.querySelectorAll('.delete-blog-btn');
    deleteButtons.forEach(button => {
      button.addEventListener('click', (e) => {
        e.preventDefault();
        const uuid = (button as HTMLElement).dataset.uuid || '';
        const title = (button as HTMLElement).dataset.title || '';
        handleDeleteBlog(uuid, title);
      });
    });

    console.log('üóëÔ∏è Botones de eliminar inicializados');
  });
</script>

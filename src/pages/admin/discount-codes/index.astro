---
import AdminLayout from '@/layouts/adminLayout.astro';
import { getAuthenticatedUser } from '@/lib/auth-utils';
import { isUserAdmin } from '@/lib/database';
import { getAllDiscountCodes, deleteDiscountCode, type DiscountCode } from '@/lib/discount-codes';

export const prerender = false;

const user = getAuthenticatedUser(Astro.cookies);

if (!user) {
  return Astro.redirect('/login');
}

const userIsAdmin = await isUserAdmin(user.id);

if (!userIsAdmin) {
  return Astro.redirect('/');
}

let successMessage = '';
let errorMessage = '';

// Manejar eliminación de código
if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const action = formData.get('action');
  const id = formData.get('id');

  if (action === 'delete' && id) {
    try {
      await deleteDiscountCode(parseInt(id as string));
      successMessage = 'Código de descuento eliminado exitosamente';
    } catch (error) {
      console.error('Error deleting discount code:', error);
      errorMessage = 'Error al eliminar el código de descuento';
    }
  }
}

const discountCodes = await getAllDiscountCodes();

function formatDate(date: Date | null): string {
  if (!date) return '-';
  return new Date(date).toLocaleDateString('es-MX', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
}

function getStatusBadgeClass(code: DiscountCode): string {
  if (!code.is_active) return 'bg-muted text-muted-foreground';

  const now = new Date();
  if (code.end_date && new Date(code.end_date) < now) {
    return 'bg-red-100 text-red-800';
  }
  if (code.usage_limit && code.usage_count >= code.usage_limit) {
    return 'bg-yellow-100 text-yellow-800';
  }
  return 'bg-green-100 text-green-800';
}

function getStatus(code: DiscountCode): string {
  if (!code.is_active) return 'Inactivo';

  const now = new Date();
  if (code.end_date && new Date(code.end_date) < now) {
    return 'Expirado';
  }
  if (code.usage_limit && code.usage_count >= code.usage_limit) {
    return 'Límite alcanzado';
  }
  return 'Activo';
}

function formatDiscount(code: DiscountCode): string {
  const value = typeof code.discount_value === 'string'
    ? parseFloat(code.discount_value)
    : code.discount_value;

  if (code.discount_type === 'percentage') {
    return `${value}%`;
  }
  return `$${value.toFixed(2)}`;
}
---

<AdminLayout title="Códigos de Descuento">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mt-10 mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold tracking-tight text-foreground">Códigos de Descuento</h1>
          <p class="mt-2 text-muted-foreground">
            Gestiona los códigos de descuento para tus clientes
          </p>
        </div>
        <a href="/admin/discount-codes/create">
          <button class="inline-flex items-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground shadow-sm hover:bg-primary/90">
            <svg class="mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"/>
            </svg>
            Crear Código
          </button>
        </a>
      </div>
    </div>

    {successMessage && (
      <div class="mb-4 rounded-md bg-green-50 p-4">
        <p class="text-sm font-medium text-green-800">{successMessage}</p>
      </div>
    )}

    {errorMessage && (
      <div class="mb-4 rounded-md bg-red-50 p-4">
        <p class="text-sm font-medium text-red-800">{errorMessage}</p>
      </div>
    )}

    <!-- Tabla de Códigos -->
    <div class="overflow-hidden rounded-lg border border-border bg-background shadow">
      {
        discountCodes.length === 0 ? (
          <div class="p-12 text-center">
            <svg
              class="mx-auto h-12 w-12 text-muted-foreground"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-foreground">
              No hay códigos de descuento
            </h3>
            <p class="mt-1 text-sm text-muted-foreground">
              Comienza creando un nuevo código de descuento.
            </p>
            <div class="mt-6">
              <a
                href="/admin/discount-codes/create"
                class="inline-flex items-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground hover:bg-primary/90"
              >
                Crear el primer código
              </a>
            </div>
          </div>
        ) : (
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-border">
              <thead class="bg-muted/50">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-muted-foreground">
                    Código
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-muted-foreground">
                    Descripción
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-muted-foreground">
                    Descuento
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-muted-foreground">
                    Uso
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-muted-foreground">
                    Vigencia
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-muted-foreground">
                    Estado
                  </th>
                  <th scope="col" class="px-6 py-3 text-right text-xs font-medium uppercase tracking-wider text-muted-foreground">
                    Acciones
                  </th>
                </tr>
              </thead>
              <tbody class="divide-y divide-border bg-background">
                {discountCodes.map((code) => (
                  <tr class="hover:bg-muted/50">
                    <td class="whitespace-nowrap px-6 py-4 text-sm font-medium text-foreground">
                      {code.code}
                    </td>
                    <td class="px-6 py-4 text-sm text-muted-foreground">
                      {code.description || '-'}
                    </td>
                    <td class="whitespace-nowrap px-6 py-4 text-sm text-muted-foreground">
                      {formatDiscount(code)}
                    </td>
                    <td class="whitespace-nowrap px-6 py-4 text-sm text-muted-foreground">
                      {code.usage_count} / {code.usage_limit || '∞'}
                    </td>
                    <td class="whitespace-nowrap px-6 py-4 text-sm text-muted-foreground">
                      {formatDate(code.start_date)} - {formatDate(code.end_date)}
                    </td>
                    <td class="whitespace-nowrap px-6 py-4 text-sm">
                      <span class={`inline-flex rounded-full px-2 text-xs font-semibold ${getStatusBadgeClass(code)}`}>
                        {getStatus(code)}
                      </span>
                    </td>
                    <td class="whitespace-nowrap px-6 py-4 text-right text-sm font-medium">
                      <div class="flex items-center justify-end gap-2">
                        <a
                          href={`/admin/discount-codes/edit/${code.id}`}
                          class="text-primary hover:text-primary/80"
                          title="Editar"
                        >
                          <svg
                            class="h-5 w-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                            />
                          </svg>
                        </a>
                        <form method="POST" style="display: inline;">
                          <input type="hidden" name="action" value="delete" />
                          <input type="hidden" name="id" value={code.id} />
                          <button
                            type="submit"
                            class="text-destructive hover:text-destructive/80"
                            title="Eliminar"
                            onclick="return confirm('¿Estás seguro de eliminar este código?')"
                          >
                            <svg
                              class="h-5 w-5"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                              />
                            </svg>
                          </button>
                        </form>
                      </div>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        )
      }
    </div>
  </div>
</AdminLayout>

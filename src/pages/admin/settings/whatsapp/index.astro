---
import AdminLayout from "@/layouts/adminLayout.astro";
import { getAuthenticatedUser } from '@/lib/auth-utils';
import { isUserAdmin } from '@/lib/database';
import { getWhatsAppNumber, updateWhatsAppNumber, getWhatsAppMessage, updateWhatsAppMessage } from '@/lib/site-settings-service';

export const prerender = false;

const user = getAuthenticatedUser(Astro.cookies);

if (!user) {
  return Astro.redirect('/login');
}

const userIsAdmin = await isUserAdmin(user.id);

if (!userIsAdmin) {
  return Astro.redirect('/');
}

let whatsappNumber = await getWhatsAppNumber();
let whatsappMessage = await getWhatsAppMessage();
let error: string | null = null;
let success: string | null = null;

// Procesar formulario
if (Astro.request.method === "POST") {
  try {
    const formData = await Astro.request.formData();
    const number = formData.get("whatsapp_number") as string;
    const message = formData.get("whatsapp_message") as string;

    // Validar n칰mero (solo d칤gitos)
    const cleanNumber = number.replace(/\D/g, '');

    if (cleanNumber.length < 10) {
      error = "El n칰mero debe tener al menos 10 d칤gitos";
    } else {
      // Actualizar configuraciones
      const numberUpdated = await updateWhatsAppNumber(cleanNumber);
      const messageUpdated = await updateWhatsAppMessage(message);

      if (numberUpdated && messageUpdated) {
        whatsappNumber = cleanNumber;
        whatsappMessage = message;
        success = "Configuraci칩n de WhatsApp actualizada exitosamente";
      } else {
        error = "Error al actualizar la configuraci칩n";
      }
    }
  } catch (err) {
    console.error("Error procesando formulario:", err);
    error = err instanceof Error ? err.message : "Error desconocido";
  }
}

// Generar URL de WhatsApp para preview
const whatsappUrl = whatsappNumber
  ? `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`
  : '#';
---


import AdminLayout from "@/layouts/adminLayout.astro";
import {
  createProduct,
} from "@/lib/product-service";
import { getAllCategories } from "@/lib/filter-category-service";
import { getAuthenticatedUser } from '@/lib/auth-utils';
import { isUserAdmin } from '@/lib/database';
import { generateUUID } from "@/lib/database";
import CategoryImageManagerCreate from "@/components/admin/CategoryImageManagerCreate.astro";

export const prerender = false;

const user = getAuthenticatedUser(Astro.cookies);

if (!user) {
  return Astro.redirect('/login');
}

const userIsAdmin = await isUserAdmin(user.id);

if (!userIsAdmin) {
  return Astro.redirect('/');
}

let error: string | null = null;
let success = false;

// Obtener categorías de filtros para el dropdown
let filterCategories: any[] = [];
try {
  filterCategories = await getAllCategories();
} catch (error) {
  console.error('Error obteniendo categorías:', error);
}

// Obtener filter_category_id de la URL si existe
const filterCategoryIdParam = Astro.url.searchParams.get('filter_category_id');
const preselectedCategoryId = filterCategoryIdParam ? parseInt(filterCategoryIdParam) : null;

// Procesar formulario
if (Astro.request.method === "POST") {
  try {
    const formData = await Astro.request.formData();

    // Crear UUID para el producto
    const uuid = generateUUID();

    // Procesar campos técnicos
    const efficiency = formData.get("efficiency") as string || null;
    const efficiencyEn = formData.get("efficiency_en") as string || null;
    const efficiencyClass = formData.get("efficiency_class") as string || null;
    
    // Procesar características (puede venir como array o texto separado por saltos de línea)
    const characteristics = formData.get("characteristics") as string || null;
    const characteristicsEn = formData.get("characteristics_en") as string || null;
    const frameMaterial = formData.get("frame_material") as string || null;
    const maxTemperature = formData.get("max_temperature") as string || null;
    
    // Procesar instalación, aplicaciones y beneficios
    const typicalInstallation = formData.get("typical_installation") as string || null;
    const typicalInstallationEn = formData.get("typical_installation_en") as string || null;
    const applications = formData.get("applications") as string || null;
    const applicationsEn = formData.get("applications_en") as string || null;
    const benefits = formData.get("benefits") as string || null;
    const benefitsEn = formData.get("benefits_en") as string || null;
    
    // Procesar información básica del producto (variante)
    const filterCategoryId = formData.get("filter_category_id") ? parseInt(formData.get("filter_category_id") as string) : null;
    const bindCode = formData.get("bind_code") as string || null;
    const nominalSize = formData.get("nominal_size") as string || null;
    const realSize = formData.get("real_size") as string || null;
    const price = parseFloat(formData.get("price") as string || "0");
    const currency = (formData.get("currency") as "MXN" | "USD") || "MXN";
    const priceUsd = formData.get("price_usd") ? parseFloat(formData.get("price_usd") as string) : null;
    const stock = parseInt(formData.get("stock") as string || "0");
    const category = formData.get("category") as string || "Filtros de Aire";

    // Crear el producto con todos los campos
    const productId = await createProduct({
      uuid: uuid,
      filter_category_id: filterCategoryId,
      bind_code: bindCode,
      name: formData.get("name") as string,
      name_en: formData.get("name_en") as string || null,
      description: formData.get("description") as string || null,
      description_en: formData.get("description_en") as string || null,
      price: price,
      currency: currency,
      price_usd: priceUsd,
      nominal_size: nominalSize,
      real_size: realSize,
      category: category,
      stock: stock,
      status: (formData.get("status") as "active" | "inactive" | "draft") || "active",
      // Campos técnicos
      efficiency: efficiency,
      efficiency_en: efficiencyEn,
      efficiency_class: efficiencyClass,
      characteristics: characteristics,
      characteristics_en: characteristicsEn,
      frame_material: frameMaterial,
      max_temperature: maxTemperature,
      typical_installation: typicalInstallation,
      typical_installation_en: typicalInstallationEn,
      applications: applications,
      applications_en: applicationsEn,
      benefits: benefits,
      benefits_en: benefitsEn,
    });

    if (!productId) {
      error = "Error al crear el producto";
    } else {
      // Procesar imágenes pendientes desde localStorage
      try {
        // Procesar imagen principal
        const pendingPrimaryImage = formData.get("pending_primary_image") as string;
        const pendingPrimaryImageName = formData.get("pending_primary_image_name") as string;
        
        if (pendingPrimaryImage && pendingPrimaryImageName) {
          // Convertir base64 a buffer y subir
          const base64Data = pendingPrimaryImage.split(',')[1];
          const buffer = Buffer.from(base64Data, 'base64');
          
          const { uploadProductImage } = await import('@/lib/cloudinary');
          const imageUrl = await uploadProductImage(buffer, productId.toString(), pendingPrimaryImageName);
          
          // Agregar imagen principal al producto
          const { addProductImage, setPrimaryProductImage } = await import('@/lib/database');
          const imageId = await addProductImage({
            uuid: generateUUID(),
            product_id: productId,
            image_url: imageUrl,
            alt_text: pendingPrimaryImageName,
            is_primary: true,
            sort_order: 0,
          });
          
          if (imageId) {
            await setPrimaryProductImage(productId, imageId);
          }
        }

        // Procesar imágenes de carrusel
        const pendingCarouselImages = formData.get("pending_carousel_images") as string;
        if (pendingCarouselImages) {
          const carouselData = JSON.parse(pendingCarouselImages) as Array<{ name: string; data: string }>;
          const { uploadProductImage } = await import('@/lib/cloudinary');
          const { addProductImage } = await import('@/lib/database');
          
          for (let i = 0; i < carouselData.length && i < 4; i++) {
            const { name, data } = carouselData[i];
            const base64Data = data.split(',')[1];
            const buffer = Buffer.from(base64Data, 'base64');
            
            const imageUrl = await uploadProductImage(buffer, productId, name);
            
            await addProductImage({
              uuid: generateUUID(),
              product_id: productId,
              image_url: imageUrl,
              alt_text: `${name} - Carrusel ${i + 1}`,
              is_primary: false,
              sort_order: i + 1,
            });
          }
        }
      } catch (err) {
        console.error("Error procesando imágenes:", err);
        // No fallar la creación si hay error con las imágenes
      }

      success = true;
      // Redirigir a la página de edición después de crear
      return Astro.redirect(`/admin/products/edit/${productId}`);
    }
  } catch (err) {
    console.error("Error creando producto:", err);
    error = err instanceof Error ? err.message : "Error desconocido";
  }
}

        ` : `
          <button
            type="button"
            class="set-primary-btn absolute bottom-1 left-1 right-1 bg-black/50 text-white text-xs p-1 rounded text-center hover:bg-black/70 transition-colors opacity-0 group-hover:opacity-100"
          >
            Hacer principal
          </button>
        `}
      `;
      
      // Event listener para eliminar
      const deleteBtn = div.querySelector('.delete-image-btn');
      deleteBtn?.addEventListener('click', () => deleteImage(image.id));
      
      // Event listener para establecer como principal
      const setPrimaryBtn = div.querySelector('.set-primary-btn');
      setPrimaryBtn?.addEventListener('click', () => setPrimaryImage(image.id));
      
      return div;
    }
    
    // Funci√≥n para actualizar la vista previa
    function updateImagesPreview() {
      if (!imagesPreview) return;
      
      imagesPreview.innerHTML = '';
      currentImages.forEach((image: any) => {
        imagesPreview.appendChild(createImageElement(image));
      });
      
      console.log('üì∏ Im√°genes actualizadas:', currentImages.length);
    }
    
    // Funci√≥n para subir im√°genes
    async function uploadImages(files: FileList) {
      if (!uploadStatus) return;
      
      uploadStatus.textContent = 'Subiendo im√°genes...';
      
      for (let i = 0; i < files.length; i++) {
        const file = files[i];
        
        // Validar
        if (!file.type.startsWith('image/')) {
          alert(`${file.name} no es una imagen v√°lida`);
          continue;
        }
        
        if (file.size > 10 * 1024 * 1024) {
          alert(`${file.name} es demasiado grande (m√°ximo 10MB)`);
          continue;
        }
        
        try {
          const formData = new FormData();
          formData.append('image', file);
          formData.append('productId', productId);
          
          console.log('üì§ Subiendo imagen:', file.name);
          
          const response = await fetch('/api/products/upload-image', {
            method: 'POST',
            body: formData
          });
          
          const result = await response.json();
          
          console.log('üìä Respuesta:', result);
          
          if (response.ok && result.success) {
            currentImages.push({
              id: result.imageId || `img-${Date.now()}-${i}`,
              url: result.url,
              isPrimary: currentImages.length === 0
            });
            
            console.log('‚úÖ Imagen subida:', result.url);
          } else {
            alert(`Error al subir ${file.name}: ${result.message}`);
          }
        } catch (error) {
          console.error('Error:', error);
          alert(`Error al subir ${file.name}`);
        }
      }
      
      updateImagesPreview();
      uploadStatus.textContent = 'Arrastra y suelta las im√°genes aqu√≠, o';
      
      // Limpiar input
      if (productImagesInput) {
        (productImagesInput as HTMLInputElement).value = '';
      }
    }
    
    // Funci√≥n para eliminar imagen
    async function deleteImage(imageId: string) {
      if (!confirm('¬øEst√°s seguro de eliminar esta imagen?')) {
        return;
      }
      
      try {
        console.log('üóëÔ∏è Eliminando imagen:', imageId);
        
        const response = await fetch('/api/products/delete-image', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ imageId, productId })
        });
        
        const result = await response.json();
        
        console.log('üìä Respuesta:', result);
        
        if (response.ok && result.success) {
          currentImages = currentImages.filter((img: any) => img.id !== imageId);
          updateImagesPreview();
          console.log('‚úÖ Imagen eliminada');
        } else {
          alert(`Error al eliminar: ${result.message}`);
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error al eliminar la imagen');
      }
    }
    
    // Funci√≥n para establecer imagen principal
    async function setPrimaryImage(imageId: string) {
      currentImages = currentImages.map((img: any) => ({
        ...img,
        isPrimary: img.id === imageId
      }));
      
      updateImagesPreview();
      
      try {
        console.log('‚≠ê Estableciendo imagen principal:', imageId);
        
        await fetch('/api/products/set-primary-image', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ imageId, productId })
        });
        
        console.log('‚úÖ Imagen principal establecida');
      } catch (error) {
        console.error('Error:', error);
      }
    }
    
    // Inicializar vista previa con im√°genes existentes
    updateImagesPreview();
    
    // Event listener para el input de archivos
    if (productImagesInput) {
      console.log('‚úÖ Event listener agregado al input de archivos');
      productImagesInput.addEventListener('change', function(e) {
        console.log('üìÅ Archivo(s) seleccionado(s)');
        const files = (this as HTMLInputElement).files;
        if (files && files.length > 0) {
          console.log('üìÅ Cantidad de archivos:', files.length);
          uploadImages(files);
        }
      });
    } else {
      console.error('‚ùå No se encontr√≥ el input de archivos');
    }
    
    // Drag and drop en la zona de carga
    if (uploadZone) {
      console.log('‚úÖ Event listeners de drag & drop agregados');
      
      uploadZone.addEventListener('dragover', (e) => {
        e.preventDefault();
        e.stopPropagation();
        uploadZone.classList.add('border-primary', 'bg-primary/5');
      });
      
      uploadZone.addEventListener('dragleave', (e) => {
        e.preventDefault();
        e.stopPropagation();
        uploadZone.classList.remove('border-primary', 'bg-primary/5');
      });
      
      uploadZone.addEventListener('drop', (e) => {
        e.preventDefault();
        e.stopPropagation();
        uploadZone.classList.remove('border-primary', 'bg-primary/5');
        
        console.log('üéØ Archivos soltados');
        const files = e.dataTransfer?.files;
        if (files && files.length > 0) {
          console.log('üìÅ Cantidad de archivos soltados:', files.length);
          uploadImages(files);
        }
      });
    } else {
      console.error('‚ùå No se encontr√≥ la zona de carga');
    }
    
    console.log('üéØ Sistema de im√°genes de productos inicializado');
    console.log('üì∏ Im√°genes iniciales cargadas:', currentImages.length);
  });
</script>

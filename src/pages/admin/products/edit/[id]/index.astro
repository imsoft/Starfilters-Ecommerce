<script>
  document.addEventListener('DOMContentLoaded', () => {
    console.log('üöÄ DOM cargado, buscando formulario...');
    
    // ===== DEBUGGING DEL FORMULARIO =====
    const editForm = document.getElementById('edit-product-form');
    console.log('üìã Formulario encontrado:', editForm ? 'S√ç' : 'NO');
    
    if (editForm) {
      console.log('‚úÖ Agregando event listener al formulario...');
      
      editForm.addEventListener('submit', function(e) {
        console.log('üì§ Formulario envi√°ndose...');
        const formData = new FormData(this as HTMLFormElement);
        const action = formData.get('action')?.toString();
        console.log('üìù Acci√≥n:', action);
        console.log('üìù Datos del formulario:');
        for (const [key, value] of formData.entries()) {
          console.log(`  ${key}: ${value}`);
        }
        
        // Solo validar en el cliente si es necesario, pero no bloquear el env√≠o
        // La validaci√≥n completa se hace en el servidor
        const name = formData.get('name')?.toString();
        const description = formData.get('description')?.toString();
        const price = formData.get('price')?.toString();
        
        if (action === 'update' && (!name || !description || !price || parseFloat(price) <= 0)) {
          e.preventDefault();
          alert('Por favor completa todos los campos requeridos correctamente');
          return false;
        }
        
        // Permitir que el formulario se env√≠e normalmente
        console.log('‚úÖ Enviando formulario...');
        return true;
      });
      
      console.log('‚úÖ Event listener agregado al formulario');
      
      // Tambi√©n agregar event listeners a los botones directamente por si acaso
      const updateButton = document.querySelector('button[value="update"]');
      const draftButton = document.querySelector('button[value="draft"]');
      
      if (updateButton) {
        updateButton.addEventListener('click', function(e: Event) {
          console.log('üñ±Ô∏è Click en bot√≥n Actualizar producto');
          e.preventDefault();
          e.stopPropagation();
          
          // Usar el bot√≥n directamente o currentTarget
          const button = (e.currentTarget || updateButton) as HTMLButtonElement;
          const form = editForm as HTMLFormElement;
          
          if (form) {
            console.log('üì§ Enviando formulario manualmente...');
            
            // Asegurar que el action value est√© presente
            let actionInput = form.querySelector('input[name="action"]') as HTMLInputElement;
            if (!actionInput) {
              actionInput = document.createElement('input');
              actionInput.type = 'hidden';
              actionInput.name = 'action';
              form.appendChild(actionInput);
            }
            actionInput.value = 'update';
            
            // Enviar el formulario
            console.log('‚úÖ Enviando formulario...');
            form.submit();
          } else {
            console.error('‚ùå No se encontr√≥ el formulario');
          }
        });
      }
      
      if (draftButton) {
        draftButton.addEventListener('click', function(e: Event) {
          console.log('üñ±Ô∏è Click en bot√≥n Guardar como borrador');
          e.preventDefault();
          e.stopPropagation();
          
          // Usar el bot√≥n directamente o currentTarget
          const button = (e.currentTarget || draftButton) as HTMLButtonElement;
          const form = editForm as HTMLFormElement;
          
          if (form) {
            console.log('üì§ Enviando formulario manualmente...');
            
            // Asegurar que el action value est√© presente
            let actionInput = form.querySelector('input[name="action"]') as HTMLInputElement;
            if (!actionInput) {
              actionInput = document.createElement('input');
              actionInput.type = 'hidden';
              actionInput.name = 'action';
              form.appendChild(actionInput);
            }
            actionInput.value = 'draft';
            
            // Enviar el formulario
            console.log('‚úÖ Enviando formulario...');
            form.submit();
          } else {
            console.error('‚ùå No se encontr√≥ el formulario');
          }
        });
      }
    } else {
      console.error('‚ùå No se encontr√≥ el formulario edit-product-form');
    }
    
    // ===== SISTEMA DE ETIQUETAS (TAGS) =====
    const tagsDisplay = document.getElementById('tags-display');
    const tagsInputField = document.getElementById('tags-input-field');
    const tagsHidden = document.getElementById('tags-hidden');
    
    if (tagsDisplay && tagsInputField && tagsHidden) {
    
    // Obtener etiquetas existentes del input hidden
    let tags: string[] = (tagsHidden as HTMLInputElement).value ? 
      (tagsHidden as HTMLInputElement).value.split(',').filter((tag: string) => tag.trim()) : [];
    
    // Funci√≥n para crear un badge de etiqueta
    function createTagBadge(tag: string): HTMLElement {
      const badge = document.createElement('span');
      badge.className = 'inline-flex items-center gap-1 px-2 py-1 text-xs font-medium bg-primary text-primary-foreground rounded-md';
      badge.innerHTML = `
        ${tag}
        <button type="button" class="ml-1 hover:bg-primary-foreground/20 rounded-full p-0.5 transition-colors remove-tag">
          <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      `;
      
      // Agregar event listener para eliminar etiqueta
      const removeBtn = badge.querySelector('.remove-tag');
      removeBtn?.addEventListener('click', () => {
        removeTag(tag);
      });
      
      return badge;
    }
    
    // Funci√≥n para actualizar la visualizaci√≥n
    function updateDisplay() {
      if (!tagsDisplay || !tagsInputField || !tagsHidden) return;
      
      // Limpiar display
      const existingBadges = tagsDisplay.querySelectorAll('.inline-flex');
      existingBadges.forEach(badge => badge.remove());
      
      // Agregar badges de etiquetas
      tags.forEach(tag => {
        const badge = createTagBadge(tag);
        tagsDisplay.insertBefore(badge, tagsInputField);
      });
      
      // Actualizar input hidden
      (tagsHidden as HTMLInputElement).value = tags.join(',');
    }
    
    // Funci√≥n para agregar etiqueta
    function addTag(tag: string) {
      const trimmedTag = tag.trim().toLowerCase();
      if (trimmedTag && !tags.includes(trimmedTag)) {
        tags.push(trimmedTag);
        updateDisplay();
        (tagsInputField as HTMLInputElement).value = '';
      }
    }
    
    // Funci√≥n para eliminar etiqueta
    function removeTag(tagToRemove: string) {
      tags = tags.filter(tag => tag !== tagToRemove);
      updateDisplay();
    }
    
    // Cargar etiquetas existentes al inicio
    updateDisplay();
    
    // Event listeners
    tagsInputField.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ',') {
        e.preventDefault();
        const value = (e.target as HTMLInputElement).value;
        if (value.trim()) {
          addTag(value);
        }
      }
    });
    
    tagsInputField.addEventListener('blur', () => {
      const value = (tagsInputField as HTMLInputElement).value;
      if (value.trim()) {
        addTag(value);
      }
    });
    } // Cerrar el if de tags
    
    // ===== GESTI√ìN DE IM√ÅGENES =====
    const productId = `{product.uuid}`;
    const uploadZone = document.getElementById('upload-zone');
    const productImagesInput = document.getElementById('product-images');
    const imagesPreview = document.getElementById('images-preview');
    const uploadStatus = document.getElementById('upload-status');
    
    let currentImages: any[] = [];
    
    // Cargar im√°genes existentes
    // Las im√°genes se cargan mediante ProductImageManager
    
    // Funci√≥n para crear elemento de imagen
    function createImageElement(image: any) {
      const div = document.createElement('div');
      div.className = 'relative w-full h-32 group image-item';
      div.setAttribute('data-image-id', image.id);
      div.setAttribute('data-image-url', image.url);
      
      div.innerHTML = `
        <img 
          class="w-full h-full rounded-lg object-cover border border-border" 
          src="${image.url}" 
          alt="Imagen del producto"
        />
        
        <button
          type="button"
          class="delete-image-btn absolute top-1 right-1 h-6 w-6 rounded-full bg-red-500 text-white flex items-center justify-center hover:bg-red-600 transition-colors shadow-md z-10 opacity-0 group-hover:opacity-100"
        >
          <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
        
        ${image.isPrimary ? `
          <div class="absolute bottom-1 left-1 right-1 bg-primary text-primary-foreground text-xs p-1 rounded text-center font-medium">
            Principal
          </div>
        ` : `
          <button
            type="button"
            class="set-primary-btn absolute bottom-1 left-1 right-1 bg-black/50 text-white text-xs p-1 rounded text-center hover:bg-black/70 transition-colors opacity-0 group-hover:opacity-100"
          >
            Hacer principal
          </button>
        `}
      `;
      
      // Event listener para eliminar
      const deleteBtn = div.querySelector('.delete-image-btn');
      deleteBtn?.addEventListener('click', () => deleteImage(image.id));
      
      // Event listener para establecer como principal
      const setPrimaryBtn = div.querySelector('.set-primary-btn');
      setPrimaryBtn?.addEventListener('click', () => setPrimaryImage(image.id));
      
      return div;
    }
    
    // Funci√≥n para actualizar la vista previa
    function updateImagesPreview() {
      if (!imagesPreview) return;
      
      imagesPreview.innerHTML = '';
      currentImages.forEach((image: any) => {
        imagesPreview.appendChild(createImageElement(image));
      });
      
      console.log('üì∏ Im√°genes actualizadas:', currentImages.length);
    }
    
    // Funci√≥n para subir im√°genes
    async function uploadImages(files: FileList) {
      if (!uploadStatus) return;
      
      uploadStatus.textContent = 'Subiendo im√°genes...';
      
      for (let i = 0; i < files.length; i++) {
        const file = files[i];
        
        // Validar
        if (!file.type.startsWith('image/')) {
          alert(`${file.name} no es una imagen v√°lida`);
          continue;
        }
        
        if (file.size > 10 * 1024 * 1024) {
          alert(`${file.name} es demasiado grande (m√°ximo 10MB)`);
          continue;
        }
        
        try {
          const formData = new FormData();
          formData.append('image', file);
          formData.append('productId', productId);
          
          console.log('üì§ Subiendo imagen:', file.name);
          
          const response = await fetch('/api/products/upload-image', {
            method: 'POST',
            body: formData
          });
          
          const result = await response.json();
          
          console.log('üìä Respuesta:', result);
          
          if (response.ok && result.success) {
            currentImages.push({
              id: result.imageId || `img-${Date.now()}-${i}`,
              url: result.url,
              isPrimary: currentImages.length === 0
            });
            
            console.log('‚úÖ Imagen subida:', result.url);
          } else {
            alert(`Error al subir ${file.name}: ${result.message}`);
          }
        } catch (error) {
          console.error('Error:', error);
          alert(`Error al subir ${file.name}`);
        }
      }
      
      updateImagesPreview();
      uploadStatus.textContent = 'Arrastra y suelta las im√°genes aqu√≠, o';
      
      // Limpiar input
      if (productImagesInput) {
        (productImagesInput as HTMLInputElement).value = '';
      }
    }
    
    // Funci√≥n para eliminar imagen
    async function deleteImage(imageId: string) {
      if (!confirm('¬øEst√°s seguro de eliminar esta imagen?')) {
        return;
      }
      
      try {
        console.log('üóëÔ∏è Eliminando imagen:', imageId);
        
        const response = await fetch('/api/products/delete-image', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ imageId, productId })
        });
        
        const result = await response.json();
        
        console.log('üìä Respuesta:', result);
        
        if (response.ok && result.success) {
          currentImages = currentImages.filter((img: any) => img.id !== imageId);
          updateImagesPreview();
          console.log('‚úÖ Imagen eliminada');
        } else {
          alert(`Error al eliminar: ${result.message}`);
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error al eliminar la imagen');
      }
    }
    
    // Funci√≥n para establecer imagen principal
    async function setPrimaryImage(imageId: string) {
      currentImages = currentImages.map((img: any) => ({
        ...img,
        isPrimary: img.id === imageId
      }));
      
      updateImagesPreview();
      
      try {
        console.log('‚≠ê Estableciendo imagen principal:', imageId);
        
        await fetch('/api/products/set-primary-image', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ imageId, productId })
        });
        
        console.log('‚úÖ Imagen principal establecida');
      } catch (error) {
        console.error('Error:', error);
      }
    }
    
    // Inicializar vista previa con im√°genes existentes
    updateImagesPreview();
    
    // Event listener para el input de archivos
    if (productImagesInput) {
      console.log('‚úÖ Event listener agregado al input de archivos');
      productImagesInput.addEventListener('change', function(e) {
        console.log('üìÅ Archivo(s) seleccionado(s)');
        const files = (this as HTMLInputElement).files;
        if (files && files.length > 0) {
          console.log('üìÅ Cantidad de archivos:', files.length);
          uploadImages(files);
        }
      });
    } else {
      console.error('‚ùå No se encontr√≥ el input de archivos');
    }
    
    // Drag and drop en la zona de carga
    if (uploadZone) {
      console.log('‚úÖ Event listeners de drag & drop agregados');
      
      uploadZone.addEventListener('dragover', (e) => {
        e.preventDefault();
        e.stopPropagation();
        uploadZone.classList.add('border-primary', 'bg-primary/5');
      });
      
      uploadZone.addEventListener('dragleave', (e) => {
        e.preventDefault();
        e.stopPropagation();
        uploadZone.classList.remove('border-primary', 'bg-primary/5');
      });
      
      uploadZone.addEventListener('drop', (e) => {
        e.preventDefault();
        e.stopPropagation();
        uploadZone.classList.remove('border-primary', 'bg-primary/5');
        
        console.log('üéØ Archivos soltados');
        const files = e.dataTransfer?.files;
        if (files && files.length > 0) {
          console.log('üìÅ Cantidad de archivos soltados:', files.length);
          uploadImages(files);
        }
      });
    } else {
      console.error('‚ùå No se encontr√≥ la zona de carga');
    }
    
    console.log('üéØ Sistema de im√°genes de productos inicializado');
    console.log('üì∏ Im√°genes iniciales cargadas:', currentImages.length);
  });
</script>

import AdminLayout from "@/layouts/adminLayout.astro";
import { Button } from "@/components/ui/button";
import { ProductImageUploader } from "@/components/ui/ProductImageUploader";
import ProductImageManager from "@/components/admin/ProductImageManager.astro";
import { getProductByUuid, updateProduct } from "@/lib/database";
import { requireAdmin } from "@/lib/auth-utils";
import type { Product } from "@/lib/database";

// Agregar headers para evitar cach√© del navegador
Astro.response.headers.set('Cache-Control', 'no-cache, no-store, must-revalidate');
Astro.response.headers.set('Pragma', 'no-cache');
Astro.response.headers.set('Expires', '0');

// Verificar que el usuario es administrador
const { redirect, user, isAdmin } = await requireAdmin(Astro.cookies);
if (redirect) {
  return Astro.redirect(redirect);
}

const { id } = Astro.params;

// Obtener el producto por UUID
let product: Product | null = null;
let errorMessage = '';

if (id) {
  product = await getProductByUuid(id);
  if (!product) {
    return Astro.redirect('/admin/products?error=product_not_found');
  }

  // Convertir null a undefined para que los inputs muestren cadenas vac√≠as
  if (product.dimensions === null) product.dimensions = undefined;
  if (product.weight === null) product.weight = undefined;
  if (product.material === null) product.material = undefined;
  if (product.warranty === null) product.warranty = undefined;
} else {
  return Astro.redirect('/admin/products?error=invalid_id');
}

// Manejar env√≠o del formulario
if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const action = formData.get('action')?.toString() || 'update';

    // Manejar acciones de im√°genes
    if (action === 'add') {
      const { addProductImage } = await import('@/lib/database');
      const imageUrl = formData.get('image_url')?.toString();
      const altText = formData.get('alt_text')?.toString();
      const isPrimary = formData.get('is_primary') === 'true';

      if (imageUrl) {
        const images = await import('@/lib/database').then(m => m.getProductImages(product.id));
        await addProductImage({
          product_id: product.id,
          image_url: imageUrl,
          alt_text: altText || `${product.name} - Imagen`,
          sort_order: images.length,
          is_primary: isPrimary || images.length === 0
        });
      }
      return Astro.redirect(Astro.url.pathname);
    } else if (action === 'delete') {
      const { deleteProductImage } = await import('@/lib/database');
      const imageId = parseInt(formData.get('image_id')?.toString() || '0');
      if (imageId > 0) {
        await deleteProductImage(imageId);
      }
      return Astro.redirect(Astro.url.pathname);
    } else if (action === 'set_primary') {
      const { setPrimaryImage } = await import('@/lib/database');
      const imageId = parseInt(formData.get('image_id')?.toString() || '0');
      if (imageId > 0) {
        await setPrimaryImage(product.id, imageId);
      }
      return Astro.redirect(Astro.url.pathname);
    }

    // Procesar actualizaci√≥n del producto
    // Capturar y limpiar campos del formulario
    const dimensionsStr = formData.get('dimensions')?.toString().trim() || '';
    const weightStr = formData.get('weight')?.toString().trim() || '';
    const materialStr = formData.get('material')?.toString().trim() || '';
    const warrantyStr = formData.get('warranty')?.toString().trim() || '';

    // Debug: Ver qu√© valores llegan
    console.log('üìä Especificaciones t√©cnicas recibidas:');
    console.log('  - dimensions:', dimensionsStr);
    console.log('  - weight:', weightStr);
    console.log('  - material:', materialStr);
    console.log('  - warranty:', warrantyStr);

    // Funci√≥n helper para convertir strings vac√≠os a null en lugar de undefined
    const toNullIfEmpty = (value: string | null | undefined): string | null => {
      if (!value || value.trim() === '') return null;
      return value.trim();
    };

    const productData: any = {
      name: formData.get('name')?.toString() || '',
      name_en: toNullIfEmpty(formData.get('name_en')?.toString()),
      description: formData.get('description')?.toString() || '',
      description_en: toNullIfEmpty(formData.get('description_en')?.toString()),
      price: parseFloat(formData.get('price')?.toString() || '0'),
      category: formData.get('category')?.toString() || '',
      category_en: toNullIfEmpty(formData.get('category_en')?.toString()),
      stock: parseInt(formData.get('stock')?.toString() || '0'),
      tags: formData.get('tags')?.toString() || '',
      dimensions: dimensionsStr || null,
      weight: weightStr || null,
      material: materialStr || null,
      warranty: warrantyStr || null,
      status: action === 'draft' ? 'draft' : (formData.get('status')?.toString() as 'active' | 'inactive' | 'draft' || product.status)
    };

    console.log('üì¶ productData especificaciones:');
    console.log('  - dimensions:', productData.dimensions);
    console.log('  - weight:', productData.weight);
    console.log('  - material:', productData.material);
    console.log('  - warranty:', productData.warranty);

    // Validar datos requeridos
    if (action === 'update' && (!productData.name || !productData.description || !productData.price || productData.price <= 0)) {
      throw new Error('Todos los campos requeridos deben ser completados correctamente');
    }

    if (action === 'draft' && !productData.name) {
      throw new Error('El nombre del producto es requerido');
    }

    // Actualizar el producto
    const success = await updateProduct(product.id, productData);

    if (success) {
      const redirectMessage = action === 'draft' ? 'draft_saved' : 'updated';
      return Astro.redirect(`/admin/products?success=${redirectMessage}`);
    } else {
      errorMessage = 'Error al actualizar el producto. Verifica los logs del servidor.';
    }
  } catch (error) {
    console.error('Error actualizando producto:', error);
    errorMessage = error instanceof Error ? error.message : 'Error al actualizar el producto';
  }
}

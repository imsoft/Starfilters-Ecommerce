import AdminLayout from "@/layouts/adminLayout.astro";
import {
  getProductById,
  updateProduct as updateProductService,
  getProductsByFilterCategory,
} from "@/lib/product-service";
import { getAllCategories } from "@/lib/filter-category-service";
import { getProductImages } from "@/lib/database";
import { getAuthenticatedUser } from '@/lib/auth-utils';
import { isUserAdmin } from '@/lib/database';
import { ProductImageUploader } from "@/components/ui/ProductImageUploader";

export const prerender = false;

const user = getAuthenticatedUser(Astro.cookies);

if (!user) {
  return Astro.redirect('/login');
}

const userIsAdmin = await isUserAdmin(user.id);

if (!userIsAdmin) {
  return Astro.redirect('/');
}

const { id } = Astro.params;
const productId = parseInt(id || "0");

let product = await getProductById(productId);
if (!product) {
  return Astro.redirect("/admin/products");
}

let images = await getProductImages(productId);

// Obtener categor√≠as de filtros para el dropdown
let filterCategories: any[] = [];
try {
  filterCategories = await getAllCategories();
} catch (error) {
  console.error('Error obteniendo categor√≠as:', error);
}

// Obtener variantes relacionadas (otros productos con el mismo filter_category_id)
let relatedVariants: any[] = [];
if (product.filter_category_id) {
  try {
    const allVariants = await getProductsByFilterCategory(product.filter_category_id);
    // Excluir el producto actual
    relatedVariants = allVariants.filter(p => p.id !== product.id);
  } catch (error) {
    console.error('Error obteniendo variantes relacionadas:', error);
  }
}

let error: string | null = null;
let success: string | null = null;

// Procesar formulario
if (Astro.request.method === "POST") {
  try {
    const formData = await Astro.request.formData();
    const action = formData.get("action") as string;

    if (action === "update_product") {
      // Procesar todos los campos
      const filterCategoryId = formData.get("filter_category_id") ? parseInt(formData.get("filter_category_id") as string) : null;
      const bindCode = formData.get("bind_code") as string || null;
      const nominalSize = formData.get("nominal_size") as string || null;
      const realSize = formData.get("real_size") as string || null;
      const price = parseFloat(formData.get("price") as string || "0");
      const currency = (formData.get("currency") as "MXN" | "USD") || "MXN";
      const priceUsd = formData.get("price_usd") ? parseFloat(formData.get("price_usd") as string) : null;
      const stock = parseInt(formData.get("stock") as string || "0");
      const category = formData.get("category") as string || product.category;

      // Actualizar el producto con todos los campos
      const updated = await updateProductService(productId, {
        filter_category_id: filterCategoryId,
        bind_code: bindCode,
        name: formData.get("name") as string,
        name_en: (formData.get("name_en") as string) || null,
        description: (formData.get("description") as string) || null,
        description_en: (formData.get("description_en") as string) || null,
        price: price,
        currency: currency,
        price_usd: priceUsd,
        nominal_size: nominalSize,
        real_size: realSize,
        category: category,
        stock: stock,
        status: (formData.get("status") as "active" | "inactive" | "draft") || "active",
        // Campos t√©cnicos
        efficiency: formData.get("efficiency") as string || null,
        efficiency_en: formData.get("efficiency_en") as string || null,
        efficiency_class: formData.get("efficiency_class") as string || null,
        characteristics: formData.get("characteristics") as string || null,
        characteristics_en: formData.get("characteristics_en") as string || null,
        frame_material: formData.get("frame_material") as string || null,
        max_temperature: formData.get("max_temperature") as string || null,
        typical_installation: formData.get("typical_installation") as string || null,
        typical_installation_en: formData.get("typical_installation_en") as string || null,
        applications: formData.get("applications") as string || null,
        applications_en: formData.get("applications_en") as string || null,
        benefits: formData.get("benefits") as string || null,
        benefits_en: formData.get("benefits_en") as string || null,
      });

      // Actualizar imagen principal si viene del componente
      const mainImageFromComponent = formData.get("main_image") as string;
      if (mainImageFromComponent) {
        // La imagen principal se maneja a trav√©s de product_images
        // El componente CategoryImageManager se encargar√° de esto
      }

      if (updated) {
        return Astro.redirect("/admin/products");
      } else {
        error = "Error al actualizar el producto";
      }
    }
  } catch (err) {
    console.error("Error procesando formulario:", err);
    error = err instanceof Error ? err.message : "Error desconocido";
  }
}

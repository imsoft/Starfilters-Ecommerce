import AdminLayout from "@/layouts/adminLayout.astro";
import { Button } from "@/components/ui/button";
import { requireAdmin } from "@/lib/auth-utils";
import { getAdminUserByEmail } from "@/lib/database";

// Verificar autenticaci贸n y permisos de administrador
const authResult = await requireAdmin(Astro.cookies);

if (authResult.redirect) {
  return Astro.redirect(authResult.redirect);
}

const user = authResult.user;

if (!user) {
  return Astro.redirect('/login');
}

// Obtener informaci贸n completa del administrador
const adminUser = await getAdminUserByEmail(user.email);

if (!adminUser) {
  return Astro.redirect('/admin/dashboard');
}

// Obtener mensajes de la URL
const url = new URL(Astro.request.url);
const success = url.searchParams.get('success');
const error = url.searchParams.get('error');

// Funci贸n para formatear fecha
const formatDate = (date: Date): string => {
  return new Intl.DateTimeFormat('es-MX', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  }).format(new Date(date));
};

// Funci贸n para obtener iniciales
const getInitials = (fullName: string): string => {
  const names = fullName.split(' ');
  if (names.length >= 2) {
    return `${names[0].charAt(0)}${names[1].charAt(0)}`.toUpperCase();
  }
  return fullName.substring(0, 2).toUpperCase();
};

// Funci贸n para obtener el color del rol
const getRoleColor = (role: string): string => {
  switch (role) {
    case 'admin':
      return 'bg-purple-100 text-purple-800';
    case 'editor':
      return 'bg-blue-100 text-blue-800';
    default:
      return 'bg-gray-100 text-gray-800';
  }
};

// Funci贸n para obtener el texto del rol
const getRoleText = (role: string): string => {
  switch (role) {
    case 'admin':
      return 'Administrador';
    case 'editor':
      return 'Editor';
    default:
      return role;
  }
};

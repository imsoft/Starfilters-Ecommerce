---
import AdminLayout from "@/layouts/adminLayout.astro";
import { Button } from "@/components/ui/button";
import { requireAdmin } from "@/lib/auth-utils";
import { getAdminUserByEmail } from "@/lib/database";

// Verificar autenticación y permisos de administrador
const authResult = await requireAdmin(Astro.cookies);

if (authResult.redirect) {
  return Astro.redirect(authResult.redirect);
}

const user = authResult.user;

if (!user) {
  return Astro.redirect('/login');
}

// Obtener información completa del administrador
const adminUser = await getAdminUserByEmail(user.email);

if (!adminUser) {
  return Astro.redirect('/admin/dashboard');
}

// Obtener mensajes de la URL
const url = new URL(Astro.request.url);
const success = url.searchParams.get('success');
const error = url.searchParams.get('error');

// Función para formatear fecha
const formatDate = (date: Date): string => {
  return new Intl.DateTimeFormat('es-MX', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  }).format(new Date(date));
};

// Función para obtener iniciales
const getInitials = (fullName: string): string => {
  const names = fullName.split(' ');
  if (names.length >= 2) {
    return `${names[0].charAt(0)}${names[1].charAt(0)}`.toUpperCase();
  }
  return fullName.substring(0, 2).toUpperCase();
};

// Función para obtener el color del rol
const getRoleColor = (role: string): string => {
  switch (role) {
    case 'admin':
      return 'bg-purple-100 text-purple-800';
    case 'editor':
      return 'bg-blue-100 text-blue-800';
    default:
      return 'bg-gray-100 text-gray-800';
  }
};

// Función para obtener el texto del rol
const getRoleText = (role: string): string => {
  switch (role) {
    case 'admin':
      return 'Administrador';
    case 'editor':
      return 'Editor';
    default:
      return role;
  }
};
---

<AdminLayout title="Mi Perfil">
  <div class="py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-foreground">Mi Perfil</h1>
        <p class="mt-2 text-muted-foreground">
          Gestiona tu información personal y configuración de cuenta.
        </p>
      </div>

      <!-- Mensajes -->
      {success === 'updated' && (
        <div class="mb-6 rounded-md bg-green-50 border border-green-200 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-green-800">
                Perfil actualizado exitosamente.
              </p>
            </div>
          </div>
        </div>
      )}

      {success === 'password_changed' && (
        <div class="mb-6 rounded-md bg-green-50 border border-green-200 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-green-800">
                Contraseña cambiada exitosamente.
              </p>
            </div>
          </div>
        </div>
      )}

      {error && (
        <div class="mb-6 rounded-md bg-red-50 border border-red-200 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-red-800">
                {error === 'update_failed' && 'Error al actualizar el perfil. Inténtalo de nuevo.'}
                {error === 'password_mismatch' && 'Las contraseñas no coinciden.'}
                {error === 'password_failed' && 'Error al cambiar la contraseña.'}
                {error === 'current_password_incorrect' && 'La contraseña actual es incorrecta.'}
              </p>
            </div>
          </div>
        </div>
      )}

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Columna izquierda - Información del perfil -->
        <div class="lg:col-span-1">
          <div class="bg-background rounded-lg border border-border p-6">
            <div class="flex flex-col items-center">
              <!-- Avatar -->
              <div class="w-32 h-32 bg-primary text-primary-foreground rounded-full flex items-center justify-center text-4xl font-bold mb-4">
                {getInitials(adminUser.full_name || adminUser.username)}
              </div>
              
              <!-- Nombre -->
              <h2 class="text-2xl font-bold text-foreground text-center">
                {adminUser.full_name || adminUser.username}
              </h2>
              
              <!-- Email -->
              <p class="text-muted-foreground text-center mt-1">
                {adminUser.email}
              </p>
              
              <!-- Rol -->
              <span class={`inline-flex items-center px-3 py-1 rounded-full text-sm font-medium mt-4 ${getRoleColor(adminUser.role)}`}>
                {getRoleText(adminUser.role)}
              </span>

              <!-- Estado -->
              <span class={`inline-flex items-center px-3 py-1 rounded-full text-xs font-medium mt-2 ${
                adminUser.status === 'active' 
                  ? 'bg-green-100 text-green-800' 
                  : 'bg-red-100 text-red-800'
              }`}>
                {adminUser.status === 'active' ? 'Activo' : 'Inactivo'}
              </span>

              <!-- Información adicional -->
              <div class="w-full mt-6 pt-6 border-t border-border">
                <div class="space-y-3">
                  <div class="flex items-center text-sm">
                    <svg class="w-5 h-5 text-muted-foreground mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                    <span class="text-muted-foreground">Usuario:</span>
                    <span class="ml-2 text-foreground font-medium">{adminUser.username}</span>
                  </div>
                  
                  <div class="flex items-center text-sm">
                    <svg class="w-5 h-5 text-muted-foreground mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <span class="text-muted-foreground">Miembro desde:</span>
                  </div>
                  <p class="text-sm text-foreground ml-7">
                    {formatDate(adminUser.created_at)}
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Columna derecha - Formularios -->
        <div class="lg:col-span-2 space-y-6">
          <!-- Editar información personal -->
          <div class="bg-background rounded-lg border border-border p-6">
            <h3 class="text-lg font-semibold text-foreground mb-4">Información Personal</h3>
            
            <form method="POST" action="/api/admin/update-profile" class="space-y-4">
              <input type="hidden" name="action" value="update_profile" />
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label for="username" class="block text-sm font-medium text-foreground mb-2">
                    Nombre de Usuario
                  </label>
                  <input
                    type="text"
                    id="username"
                    name="username"
                    value={adminUser.username}
                    required
                    class="w-full px-3 py-2 border border-border rounded-md bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-primary"
                  />
                </div>

                <div>
                  <label for="full_name" class="block text-sm font-medium text-foreground mb-2">
                    Nombre Completo
                  </label>
                  <input
                    type="text"
                    id="full_name"
                    name="full_name"
                    value={adminUser.full_name || ''}
                    class="w-full px-3 py-2 border border-border rounded-md bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-primary"
                  />
                </div>
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-foreground mb-2">
                  Email
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  value={adminUser.email}
                  required
                  class="w-full px-3 py-2 border border-border rounded-md bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-primary"
                />
              </div>

              <div class="flex justify-end">
                <Button type="submit" className="bg-primary text-primary-foreground hover:bg-primary/90">
                  Guardar Cambios
                </Button>
              </div>
            </form>
          </div>

          <!-- Cambiar contraseña -->
          <div class="bg-background rounded-lg border border-border p-6">
            <h3 class="text-lg font-semibold text-foreground mb-4">Cambiar Contraseña</h3>
            
            <form method="POST" action="/api/admin/change-password" class="space-y-4">
              <input type="hidden" name="action" value="change_password" />
              
              <div>
                <label for="current_password" class="block text-sm font-medium text-foreground mb-2">
                  Contraseña Actual
                </label>
                <input
                  type="password"
                  id="current_password"
                  name="current_password"
                  required
                  class="w-full px-3 py-2 border border-border rounded-md bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-primary"
                />
              </div>

              <div>
                <label for="new_password" class="block text-sm font-medium text-foreground mb-2">
                  Nueva Contraseña
                </label>
                <input
                  type="password"
                  id="new_password"
                  name="new_password"
                  required
                  minlength="8"
                  class="w-full px-3 py-2 border border-border rounded-md bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-primary"
                />
                <p class="text-xs text-muted-foreground mt-1">
                  Mínimo 8 caracteres
                </p>
              </div>

              <div>
                <label for="confirm_password" class="block text-sm font-medium text-foreground mb-2">
                  Confirmar Nueva Contraseña
                </label>
                <input
                  type="password"
                  id="confirm_password"
                  name="confirm_password"
                  required
                  minlength="8"
                  class="w-full px-3 py-2 border border-border rounded-md bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-primary"
                />
              </div>

              <div class="flex justify-end">
                <Button type="submit" className="bg-primary text-primary-foreground hover:bg-primary/90">
                  Cambiar Contraseña
                </Button>
              </div>
            </form>
          </div>

          <!-- Información de seguridad -->
          <div class="bg-background rounded-lg border border-border p-6">
            <h3 class="text-lg font-semibold text-foreground mb-4">Seguridad</h3>
            
            <div class="space-y-4">
              <div class="flex items-start">
                <svg class="w-5 h-5 text-green-500 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div>
                  <p class="text-sm font-medium text-foreground">Cuenta Verificada</p>
                  <p class="text-xs text-muted-foreground">Tu cuenta de administrador está activa y verificada.</p>
                </div>
              </div>

              <div class="flex items-start">
                <svg class="w-5 h-5 text-blue-500 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
                <div>
                  <p class="text-sm font-medium text-foreground">Contraseña Segura</p>
                  <p class="text-xs text-muted-foreground">Cambia tu contraseña regularmente para mantener tu cuenta segura.</p>
                </div>
              </div>

              <div class="flex items-start">
                <svg class="w-5 h-5 text-purple-500 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
                <div>
                  <p class="text-sm font-medium text-foreground">Rol de {getRoleText(adminUser.role)}</p>
                  <p class="text-xs text-muted-foreground">Tienes acceso completo al panel de administración.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>


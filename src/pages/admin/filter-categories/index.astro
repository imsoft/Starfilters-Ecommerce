---
import AdminLayout from "@/layouts/adminLayout.astro";
import { getAllCategories, getCategoryVariants } from "@/lib/filter-category-service";
import { getAuthenticatedUser } from '@/lib/auth-utils';
import { isUserAdmin } from '@/lib/database';

export const prerender = false;

const user = getAuthenticatedUser(Astro.cookies);

if (!user) {
  return Astro.redirect('/login');
}

const userIsAdmin = await isUserAdmin(user.id);

if (!userIsAdmin) {
  return Astro.redirect('/');
}

// Obtener todas las categorías
const categories = await getAllCategories();

// Obtener número de variantes para cada categoría
const categoriesWithVariants = await Promise.all(
  categories.map(async (category) => {
    const variants = await getCategoryVariants(category.id);
    return {
      ...category,
      variantCount: variants.length,
    };
  })
);
---

<AdminLayout title="Categorías de Filtros">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mt-10 mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold tracking-tight text-foreground">Categorías de Filtros</h1>
          <p class="mt-2 text-muted-foreground">
            Gestiona las categorías de filtros, sus imágenes y variantes
          </p>
        </div>
        <a href="/admin/filter-categories/create">
          <button class="inline-flex items-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground shadow-sm hover:bg-primary/90">
            <svg class="mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"/>
            </svg>
            Nueva Categoría
          </button>
        </a>
      </div>
    </div>

    <!-- Estadísticas -->
    <div class="mb-8 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <div class="rounded-lg border border-border bg-background p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-muted-foreground">Total Categorías</p>
            <p class="mt-2 text-3xl font-bold text-foreground">
              {categories.length}
            </p>
          </div>
          <div class="rounded-full bg-primary/10 p-3">
            <svg
              class="h-8 w-8 text-primary"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"
              ></path>
            </svg>
          </div>
        </div>
      </div>

      <div class="rounded-lg border border-border bg-background p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-muted-foreground">Activas</p>
            <p class="mt-2 text-3xl font-bold text-green-600">
              {categories.filter((c) => c.status === "active").length}
            </p>
          </div>
          <div class="rounded-full bg-green-100 p-3">
            <svg
              class="h-8 w-8 text-green-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
          </div>
        </div>
      </div>

      <div class="rounded-lg border border-border bg-background p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-muted-foreground">Inactivas/Borrador</p>
            <p class="mt-2 text-3xl font-bold text-muted-foreground">
              {categories.filter((c) => c.status !== "active").length}
            </p>
          </div>
          <div class="rounded-full bg-muted p-3">
            <svg
              class="h-8 w-8 text-gray-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"
              ></path>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Tabla de Categorías -->
    <div class="overflow-hidden rounded-lg border border-border bg-background shadow">
      {
        categoriesWithVariants.length === 0 ? (
          <div class="p-12 text-center">
            <svg
              class="mx-auto h-12 w-12 text-muted-foreground"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"
              />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-foreground">
              No hay categorías
            </h3>
            <p class="mt-1 text-sm text-muted-foreground">
              Comienza creando una nueva categoría de filtros.
            </p>
            <div class="mt-6">
              <a
                href="/admin/filter-categories/create"
                class="inline-flex items-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground hover:bg-primary/90"
              >
                + Nueva Categoría
              </a>
            </div>
          </div>
        ) : (
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-muted/50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-muted-foreground">
                    Categoría
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-muted-foreground">
                    Slug
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-muted-foreground">
                    Eficiencia
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-muted-foreground">
                    Variantes
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-muted-foreground">
                    Estado
                  </th>
                  <th class="px-6 py-3 text-right text-xs font-medium uppercase tracking-wider text-muted-foreground">
                    Acciones
                  </th>
                </tr>
              </thead>
              <tbody class="divide-y divide-border bg-background">
                {categoriesWithVariants.map((category) => (
                  <tr class="hover:bg-muted/50">
                    <td class="whitespace-nowrap px-6 py-4">
                      <div class="flex items-center">
                        {category.main_image ? (
                          <img
                            src={category.main_image}
                            alt={category.name}
                            class="mr-3 h-10 w-10 rounded-lg object-cover"
                          />
                        ) : (
                          <div class="mr-3 flex h-10 w-10 items-center justify-center rounded-lg bg-muted">
                            <svg
                              class="h-6 w-6 text-muted-foreground"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                              />
                            </svg>
                          </div>
                        )}
                        <div>
                          <div class="text-sm font-medium text-foreground">
                            {category.name}
                          </div>
                          {category.name_en && (
                            <div class="text-sm text-muted-foreground">
                              {category.name_en}
                            </div>
                          )}
                        </div>
                      </div>
                    </td>
                    <td class="whitespace-nowrap px-6 py-4">
                      <div class="text-sm text-foreground">{category.slug}</div>
                    </td>
                    <td class="whitespace-nowrap px-6 py-4">
                      <div class="text-sm text-foreground">
                        {category.efficiency || "-"}
                      </div>
                      {category.efficiency_class && (
                        <div class="text-sm text-muted-foreground">
                          {category.efficiency_class}
                        </div>
                      )}
                    </td>
                    <td class="whitespace-nowrap px-6 py-4">
                      <div class="flex items-center">
                        <span class="inline-flex items-center rounded-full bg-primary/10 px-2.5 py-0.5 text-xs font-medium text-primary">
                          {category.variantCount} tamaños
                        </span>
                      </div>
                    </td>
                    <td class="whitespace-nowrap px-6 py-4">
                      {category.status === "active" && (
                        <span class="inline-flex rounded-full bg-green-100 px-2 text-xs font-semibold leading-5 text-green-800">
                          Activo
                        </span>
                      )}
                      {category.status === "inactive" && (
                        <span class="inline-flex rounded-full bg-red-100 px-2 text-xs font-semibold leading-5 text-red-800">
                          Inactivo
                        </span>
                      )}
                      {category.status === "draft" && (
                        <span class="inline-flex rounded-full bg-gray-100 px-2 text-xs font-semibold leading-5 text-gray-800">
                          Borrador
                        </span>
                      )}
                    </td>
                    <td class="whitespace-nowrap px-6 py-4 text-right text-sm font-medium">
                      <div class="flex items-center justify-end gap-2">
                        <a
                          href={`/admin/filter-categories/edit/${category.id}`}
                          class="text-primary hover:text-primary/80"
                          title="Editar"
                        >
                          <svg
                            class="h-5 w-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                            />
                          </svg>
                        </a>
                        <button
                          onclick={`deleteCategory(${category.id}, '${category.name}')`}
                          class="text-destructive hover:text-destructive/80"
                          title="Eliminar"
                        >
                          <svg
                            class="h-5 w-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                            />
                          </svg>
                        </button>
                      </div>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        )
      }
    </div>
  </div>
</AdminLayout>

<script>
  async function deleteCategory(id: number, name: string) {
    if (
      !confirm(
        `¿Estás seguro de que deseas eliminar la categoría "${name}"?\n\nEsto también eliminará todas sus imágenes y variantes.`
      )
    ) {
      return;
    }

    try {
      const response = await fetch(`/api/filter-categories/${id}`, {
        method: "DELETE",
      });

      if (response.ok) {
        alert("Categoría eliminada exitosamente");
        window.location.reload();
      } else {
        const error = await response.json();
        alert(`Error: ${error.message || "No se pudo eliminar la categoría"}`);
      }
    } catch (error) {
      console.error("Error eliminando categoría:", error);
      alert("Error al eliminar la categoría");
    }
  }

  // Hacer la función global
  (window as any).deleteCategory = deleteCategory;
</script>

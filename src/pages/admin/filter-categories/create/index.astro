import AdminLayout from "@/layouts/adminLayout.astro";
import {
  createCategory,
  addCategoryImage,
  updateCategory,
} from "@/lib/filter-category-service";
import { getAuthenticatedUser } from '@/lib/auth-utils';
import { isUserAdmin } from '@/lib/database';
import CategoryImageManagerCreate from "@/components/admin/CategoryImageManagerCreate.astro";
import DynamicListInput from "@/components/admin/DynamicListInput.astro";
import FormPersistence from "@/components/admin/FormPersistence.astro";

export const prerender = false;

const user = getAuthenticatedUser(Astro.cookies);

if (!user) {
  return Astro.redirect('/login');
}

const userIsAdmin = await isUserAdmin(user.id);

if (!userIsAdmin) {
  return Astro.redirect('/');
}

let error: string | null = null;
let success = false;

// Procesar formulario
if (Astro.request.method === "POST") {
  try {
    const formData = await Astro.request.formData();

    // Crear slug desde el nombre
    const name = formData.get("name") as string;
    const slug = name
      .toLowerCase()
      .normalize("NFD")
      .replace(/[\u0300-\u036f]/g, "")
      .replace(/[^a-z0-9]+/g, "-")
      .replace(/^-+|-+$/g, "");

    // Crear la categor√≠a (solo campos b√°sicos)
    const categoryId = await createCategory({
      name: formData.get("name") as string,
      name_en: formData.get("name_en") as string || null,
      slug: slug,
      description: formData.get("description") as string || null,
      description_en: formData.get("description_en") as string || null,
      main_image: null, // Se agregar√° despu√©s en la p√°gina de edici√≥n
      status: (formData.get("status") as "active" | "inactive" | "draft") || "active",
    });

    if (!categoryId) {
      error = "Error al crear la categor√≠a";
    } else {
      // Procesar im√°genes pendientes desde localStorage
      try {
        // Procesar imagen principal
        const pendingPrimaryImage = formData.get("pending_primary_image") as string;
        const pendingPrimaryImageName = formData.get("pending_primary_image_name") as string;
        
        if (pendingPrimaryImage && pendingPrimaryImageName) {
          // Convertir base64 a buffer y subir
          const base64Data = pendingPrimaryImage.split(',')[1];
          const buffer = Buffer.from(base64Data, 'base64');
          
          const { uploadCategoryPrimaryImage } = await import('@/lib/cloudinary');
          const imageUrl = await uploadCategoryPrimaryImage(buffer, categoryId, pendingPrimaryImageName);
          
          await updateCategory(categoryId, {
            main_image: imageUrl,
          });
        }

        // Procesar im√°genes de carrusel
        const pendingCarouselImages = formData.get("pending_carousel_images") as string;
        console.log('üì∑ [Categor√≠a] Im√°genes de carrusel recibidas:', pendingCarouselImages ? `S√≠ (${pendingCarouselImages.length} bytes)` : 'No');
        console.log('üì∑ [Categor√≠a] Contenido completo:', pendingCarouselImages?.substring(0, 200) || 'vac√≠o');
        
        if (pendingCarouselImages && pendingCarouselImages.trim() !== '') {
          try {
          const carouselData = JSON.parse(pendingCarouselImages) as Array<{ name: string; data: string }>;
            console.log(`üì∑ [Categor√≠a] N√∫mero de im√°genes de carrusel: ${carouselData.length}`);
            
            if (!Array.isArray(carouselData) || carouselData.length === 0) {
              console.warn('‚ö†Ô∏è [Categor√≠a] carouselData no es un array v√°lido o est√° vac√≠o');
            } else {
          const { uploadCategoryCarouselImage } = await import('@/lib/cloudinary');
              const { addCategoryImage } = await import('@/lib/filter-category-service');
          
          for (let i = 0; i < carouselData.length && i < 4; i++) {
            const { name, data } = carouselData[i];
                console.log(`üì∑ [Categor√≠a] Procesando imagen ${i + 1}/${carouselData.length}: ${name}`);
                
                if (!data || !data.includes(',')) {
                  console.error(`‚ùå [Categor√≠a] Imagen ${i + 1} no tiene datos base64 v√°lidos`);
                  continue;
                }
                
                try {
            const base64Data = data.split(',')[1];
                  if (!base64Data) {
                    console.error(`‚ùå [Categor√≠a] No se pudo extraer base64 de imagen ${i + 1}`);
                    continue;
                  }
                  
            const buffer = Buffer.from(base64Data, 'base64');
                  console.log(`üì∑ [Categor√≠a] Buffer creado para imagen ${i + 1}: ${buffer.length} bytes`);
            
            const imageUrl = await uploadCategoryCarouselImage(buffer, categoryId, name);
                  console.log(`üì∑ [Categor√≠a] Imagen ${i + 1} subida a Cloudinary: ${imageUrl}`);
            
                  const imageId = await addCategoryImage({
              category_id: categoryId,
              image_url: imageUrl,
              alt_text: `${name} - Carrusel ${i + 1}`,
              is_primary: false,
              sort_order: i + 1,
            });
                  
                  if (imageId) {
                    console.log(`‚úÖ [Categor√≠a] Imagen ${i + 1} guardada en BD con ID: ${imageId}`);
                  } else {
                    console.error(`‚ùå [Categor√≠a] Error: addCategoryImage retorn√≥ null para imagen ${i + 1}`);
                  }
                } catch (imgErr) {
                  console.error(`‚ùå [Categor√≠a] Error procesando imagen ${i + 1}:`, imgErr);
                  console.error(`‚ùå [Categor√≠a] Stack trace:`, imgErr instanceof Error ? imgErr.stack : 'No stack trace');
                }
              }
            }
          } catch (carouselErr) {
            console.error('‚ùå [Categor√≠a] Error procesando carrusel:', carouselErr);
            console.error('‚ùå [Categor√≠a] Stack trace:', carouselErr instanceof Error ? carouselErr.stack : 'No stack trace');
            console.error('‚ùå [Categor√≠a] Tipo de error:', carouselErr instanceof Error ? carouselErr.constructor.name : typeof carouselErr);
          }
        } else {
          console.log('üì∑ [Categor√≠a] No hay im√°genes de carrusel para procesar (campo vac√≠o o null)');
        }
      } catch (err) {
        console.error("Error procesando im√°genes:", err);
        // No fallar la creaci√≥n si hay error con las im√°genes
      }

      success = true;
      // Redirigir a la p√°gina de edici√≥n despu√©s de crear
      return Astro.redirect(`/admin/filter-categories/edit/${categoryId}`);
    }
  } catch (err) {
    console.error("Error creando categor√≠a:", err);
    error = err instanceof Error ? err.message : "Error desconocido";
  }
}

---
import FeatureServiceSection from "@/components/shared/FeatureServiceSection.astro";
import ServicesContactForm from "@/components/shared/ServicesContactForm.astro";
import WebsiteLayout from "@/layouts/websiteLayout.astro";
import SEO from "@/components/shared/SEO.astro";
import { generateBreadcrumbSchema } from "@/lib/seo-utils";

export const prerender = false;

const siteUrl = Astro.site?.href || Astro.url.origin;
const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Home', url: `${siteUrl}/en` },
  { name: 'Services', url: `${siteUrl}/en/services` }
]);
---

<WebsiteLayout
  title="Services"
  seoTitle="Cleanroom Certification and Performance Testing Services | Star Filters"
  description="NEBB-certified cleanroom performance testing to ensure controlled areas operate in full compliance with ISO 14644 and GMP standards. Air and filtration system validation in Mexico."
  keywords={[
    'cleanroom testing',
    'NEBB certification',
    'ISO 14644 validation',
    'HEPA filter testing',
    'particle count testing',
    'air balancing'
  ]}
>
  <SEO
    slot="seo"
    title="Cleanroom Certification and Performance Testing Services"
    description="NEBB-certified cleanroom performance testing to ensure controlled areas operate in full compliance with ISO 14644 and GMP standards. Air and filtration system validation in Mexico."
    ogType="website"
    keywords={[
      'cleanroom testing',
      'NEBB certification',
      'ISO 14644 validation'
    ]}
  />

  <script slot="seo" type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} is:inline />
  <FeatureServiceSection />
  <ServicesContactForm />
</WebsiteLayout>

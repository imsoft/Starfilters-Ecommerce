        </div>

        <!-- Cart with items -->
        <div id="cart-content" class="hidden">
          <div
            class="lg:grid lg:grid-cols-12 lg:items-start lg:gap-x-12 xl:gap-x-16"
          >
            <!-- Product list -->
            <section aria-labelledby="cart-heading" class="lg:col-span-7">

---
import WebsiteLayout from "@/layouts/websiteLayout.astro";
import LazyImage from "@/components/shared/LazyImage.astro";
import CustomModal from "@/components/shared/CustomModal.astro";
import { getProducts, getProductImages, getProductById } from "@/lib/database";
import { getProductPlaceholderImage } from "@/lib/image-utils";

// Get some products to show as recommended
const recommendedProducts = await getProducts(4, 0);

// Get primary image for each recommended product
const recommendedProductsWithImages = await Promise.all(
  recommendedProducts.map(async (product) => {
    const images = await getProductImages(product.id);
    const primaryImage = images.find(img => img.is_primary) || images[0];
    const imageUrl = primaryImage?.image_url || getProductPlaceholderImage(product.category);
    return { ...product, imageUrl };
  })
);

// Function to format price (server: no access to cart/localStorage)
const formatPrice = (price: number): string => {
  return new Intl.NumberFormat("en-US", {
    style: "currency",
    currency: "USD",
  }).format(price);
};
---

<WebsiteLayout title="Shopping Cart">
  <div class="bg-background pt-24">
    <!-- Breadcrumb -->
    <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
      <nav class="mb-8" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2 text-sm text-muted-foreground">
          <li>
            <a href="/en" class="hover:text-foreground transition-colors"
              >Home</a
            >
          </li>
          <li>
            <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
              <path
                fill-rule="evenodd"
                d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                clip-rule="evenodd"></path>
            </svg>

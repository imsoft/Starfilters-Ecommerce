---
import WebsiteLayout from "@/layouts/websiteLayout.astro";
import SEO from "@/components/shared/SEO.astro";
import LazyImage from "@/components/shared/LazyImage.astro";
import { getActiveProducts, getProductsByFilterCategory, getProductsByFilterCategory as getVariantsByCategory } from "@/lib/product-service";
import { getCategoryById } from "@/lib/filter-category-service";
import { getProductPlaceholderImage } from "@/lib/image-utils";
import { generateBreadcrumbSchema } from "@/lib/seo-utils";
import { getExchangeRate } from "@/lib/currency-service";
import { getProductPriceAndCurrency, formatPriceByCurrency } from "@/lib/i18n-helpers";
import { getLangFromUrl } from "@/i18n/utils";
import { getProductName, getProductDescription, getProductCategory, getCategoryName, getCategoryDescription } from "@/lib/i18n-helpers";

export const prerender = false;

// Detect current language
const lang = getLangFromUrl(Astro.url);

// Get filter_category_id parameter from URL
const filterCategoryIdParam = Astro.url.searchParams.get('filter_category_id');
const filterCategoryId = filterCategoryIdParam ? parseInt(filterCategoryIdParam) : null;

// Get category information if it exists
let categoryInfo: { id: number; name: string; description?: string } | null = null;
if (filterCategoryId) {
  try {
    const category = await getCategoryById(filterCategoryId);
    if (category) {
      categoryInfo = {
        id: category.id,
        name: getCategoryName(category, lang),
        description: getCategoryDescription(category, lang)
      };
    }
  } catch (error) {
    console.error('‚ùå Error getting category information:', error);
  }
}

// Get exchange rate
const exchangeRate = await getExchangeRate();

// Function to convert USD price to MXN
const convertPriceToMXN = (price: number, currency: string): number => {
  if (currency === 'USD') {
    return price * exchangeRate;
  }
  return price;
};

// Get products from database
let products: Array<{
  id: number;
  uuid: string;
  name: string;
  description: string;
  category: string;
  price: number;
  stock: number;
  imageUrl: string;
  nominal_size?: string;
  real_size?: string;
  bind_code?: string;
  filter_category_id?: number | null;
  variantCount?: number;
  minPrice?: number;
  maxPrice?: number;
}> = [];

try {
  let allProducts;
  
  // If there's filter_category_id, get products from that category
  if (filterCategoryId) {
    allProducts = await getProductsByFilterCategory(filterCategoryId);
    console.log(`üì¶ Page /en/products: ${allProducts.length} products found for category ${filterCategoryId}`);
  } else {
    // Otherwise, get all active products
    allProducts = await getActiveProducts();
    console.log(`üì¶ Page /en/products: ${allProducts.length} active products found`);
  }

  // Prepare products with images and count variants
  products = await Promise.all(allProducts.map(async (product) => {
    const imageUrl = getProductPlaceholderImage(product.category || 'productos');
    
    // Count related variants if it has filter_category_id
    let variantCount = 0;
    let minPrice = product.price || 0;
    let maxPrice = product.price || 0;
    
    if (product.filter_category_id) {
      try {
        const variants = await getVariantsByCategory(product.filter_category_id);
        variantCount = variants.length;
        if (variants.length > 0) {
          const prices = variants.map(v => v.price || 0).filter(p => p > 0);
          if (prices.length > 0) {
            minPrice = Math.min(...prices);
            maxPrice = Math.max(...prices);
          }
        }
      } catch (error) {
        console.error('Error getting variants for product', product.id, error);
      }
    }
    
    // Obtener precio y moneda seg√∫n idioma (espa√±ol = MXN, ingl√©s = USD)
    const { price: displayPrice, currency: displayCurrency } = getProductPriceAndCurrency(product, lang);
    
    // Si estamos en ingl√©s y el producto est√° en MXN, convertir a USD
    let finalPrice = displayPrice;
    if (lang === 'en' && product.currency === 'MXN' && !product.price_usd) {
      // Convertir MXN a USD (aproximado, mejor usar tasa de cambio real)
      finalPrice = product.price / 17;
    }

    return {
      id: product.id,
      uuid: product.uuid,
      name: getProductName(product, lang),
      description: getProductDescription(product, lang),
      category: getProductCategory(product, lang),
      price: finalPrice,
      currency: displayCurrency,
      originalPrice: product.price || 0,
      originalCurrency: product.currency || 'MXN',
      priceUSD: product.price_usd || null,
      stock: product.stock || 0,
      imageUrl: imageUrl,
      nominal_size: product.nominal_size || undefined,
      real_size: product.real_size || undefined,
      bind_code: product.bind_code || undefined,
      filter_category_id: product.filter_category_id || undefined,
      variantCount: variantCount,
      minPrice: minPrice,
      maxPrice: maxPrice
    };
  }));
  
  console.log(`‚úÖ Page /en/products: ${products.length} products ready to display`);
} catch (error) {
  console.error('‚ùå Error in page /en/products:', error);
  console.error('‚ùå Stack trace:', error instanceof Error ? error.stack : 'No stack available');
}

// Function to format price according to language
const formatPrice = (price: number, currency: 'MXN' | 'USD' = 'USD'): string => {
  return formatPriceByCurrency(price, currency);
};

// Get unique categories (category names)
const categories = [...new Set(products.map(p => p.category).filter(Boolean))];

// Generate SEO data
const siteUrl = Astro.site?.href || Astro.url.origin;
const pageTitle = categoryInfo ? categoryInfo.name : 'Products';
const breadcrumbItems = [
  { name: 'Home', url: `${siteUrl}/en` },
  { name: 'Filters', url: `${siteUrl}/en/filters` }
];
if (categoryInfo) {
  breadcrumbItems.push({ name: categoryInfo.name, url: `${siteUrl}/en/products?filter_category_id=${categoryInfo.id}` });
} else {
  breadcrumbItems.push({ name: 'Products', url: `${siteUrl}/en/products` });
}
const breadcrumbSchema = generateBreadcrumbSchema(breadcrumbItems);
---

<WebsiteLayout 
  title={pageTitle}
  seoTitle={`${pageTitle} - StarFilters Catalog`}
  description={categoryInfo?.description || "Browse our complete product catalog. High-quality products with shipping throughout Mexico."}
  keywords={[
    'product catalog',
    'buy products',
    'industrial products',
    'product store Mexico'
  ]}
>
  <SEO 
    slot="seo"
    title="Products"
    description="Browse our complete product catalog. High-quality products with shipping throughout Mexico."
    ogType="website"
    keywords={[
      'product catalog',
      'buy products',
      'industrial products'
    ]}
  />
  
  <!-- Breadcrumb Schema -->
  <script slot="seo" type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  <div class="bg-background py-24">
    <!-- Breadcrumb -->
    <div class="mx-auto max-w-xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
      <nav class="mb-8" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2 text-sm text-muted-foreground">
          <li>
            <a href="/en" class="hover:text-foreground transition-colors">Home</a>
          </li>
          <li>
            <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
          </li>
          <li>
            <a href="/en/filters" class="hover:text-foreground transition-colors">Filters</a>
          </li>
          {categoryInfo && (
            <>
              <li>
                <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                </svg>
              </li>
              <li class="text-foreground font-medium">{categoryInfo.name}</li>
            </>
          )}
          {!categoryInfo && (
            <li class="text-foreground font-medium">Products</li>
          )}
        </ol>
      </nav>
    </div>

    <section
      aria-labelledby="collection-heading"
      class="mx-auto max-w-xl px-4 sm:px-6 lg:max-w-7xl lg:px-8"
    >
      <div class="mb-12">
        <h1
          id="collection-heading"
          class="text-3xl font-bold tracking-tight text-foreground sm:text-4xl"
        >
          {categoryInfo ? categoryInfo.name : 'StarFilters Products'}
        </h1>
        <p class="mt-4 text-lg text-muted-foreground">
          {categoryInfo?.description || 'Browse our complete product catalog. Guaranteed quality and fast shipping.'}
        </p>
        {categoryInfo && (
          <a 
            href="/en/filters" 
            class="mt-4 inline-flex items-center text-sm text-primary hover:text-primary/80 transition-colors"
          >
            ‚Üê View all categories
          </a>
        )}
      </div>

      <!-- Filters -->
      <div class="mb-8 space-y-6">
        <!-- Search -->
        <div>
          <label for="search-products" class="block text-sm font-medium text-foreground mb-2">
            Search products
          </label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>
            <input
              type="text"
              id="search-products"
              placeholder="Search by name..."
              class="w-full rounded-md border border-border bg-background pl-10 pr-3 py-2 text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
            />
          </div>
        </div>

        <!-- Category filters -->
        {categories.length > 0 && (
          <div>
            <h3 class="text-lg font-medium text-foreground mb-4">Filter by category</h3>
            <div class="flex flex-wrap gap-2">
              <button
                type="button"
                class="filter-btn inline-flex items-center rounded-full border border-border bg-primary text-primary-foreground px-4 py-2 text-sm font-medium hover:bg-primary/90 transition-colors"
                data-category="all"
              >
                All ({products.length})
              </button>
              {categories.map(category => {
                const count = products.filter(p => p.category === category).length;
                return (
                  <button
                    type="button"
                    class="filter-btn inline-flex items-center rounded-full border border-border bg-background px-4 py-2 text-sm font-medium text-foreground hover:bg-muted transition-colors"
                    data-category={category}
                  >
                    {category} ({count})
                  </button>
                );
              })}
            </div>
          </div>
        )}

        <!-- Price and availability filters -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <!-- Sort by -->
          <div>
            <label for="sort-by" class="block text-sm font-medium text-foreground mb-2">
              Sort by
            </label>
            <select
              id="sort-by"
              class="w-full rounded-md border border-border bg-background px-3 py-2 text-foreground focus:outline-none focus:ring-2 focus:ring-primary"
            >
              <option value="default">Default</option>
              <option value="price-asc">Price: Low to High</option>
              <option value="price-desc">Price: High to Low</option>
              <option value="name-asc">Name: A-Z</option>
              <option value="name-desc">Name: Z-A</option>
            </select>
          </div>

          <!-- Availability filter -->
          <div>
            <label for="stock-filter" class="block text-sm font-medium text-foreground mb-2">
              Availability
            </label>
            <select
              id="stock-filter"
              class="w-full rounded-md border border-border bg-background px-3 py-2 text-foreground focus:outline-none focus:ring-2 focus:ring-primary"
            >
              <option value="all">All</option>
              <option value="in-stock">In Stock</option>
              <option value="out-of-stock">Out of Stock</option>
            </select>
          </div>

          <!-- Price range -->
          <div>
            <label for="price-range" class="block text-sm font-medium text-foreground mb-2">
              Maximum price
            </label>
            <input
              type="range"
              id="price-range"
              min="0"
              max="10000"
              value="10000"
              step="100"
              class="w-full"
            />
            <div class="flex justify-between text-xs text-muted-foreground mt-1">
              <span>$0</span>
              <span id="price-range-value">$10,000</span>
            </div>
          </div>
        </div>

        <!-- Results counter -->
        <div class="text-sm text-muted-foreground">
          Showing <span id="results-count" class="font-medium text-foreground">{products.length}</span> of {products.length} products
        </div>
      </div>

      <!-- Products grid -->
      <div class="grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8" id="products-grid">
        {products.map((product) => (
          <div 
            class="group product-card relative flex flex-col" 
            data-product-uuid={product.uuid}
            data-category={product.category}
            data-price={product.price}
            data-stock={product.stock}
            data-currency={product.currency || 'USD'}
            data-price-usd={product.priceUSD || ''}
          >
            <a href={`/en/product/${product.uuid}`} class="block flex-shrink-0">
              <div class="w-full h-80 overflow-hidden rounded-lg bg-muted">
                <LazyImage
                  src={product.imageUrl}
                  alt={product.name}
                  class="h-full w-full object-cover object-center group-hover:opacity-75 transition-opacity"
                />
              </div>
              <h3 class="mt-4 text-sm text-foreground font-medium hover:text-primary transition-colors line-clamp-2 min-h-[2.5rem]">
                {product.name}
              </h3>
            </a>
            <p class="mt-1 text-sm text-muted-foreground">{product.category}</p>
            
            {/* Show variant information if exists */}
            {product.variantCount > 0 && (
              <div class="mt-2">
                <p class="text-xs text-blue-600 font-medium">
                  {product.variantCount} {product.variantCount === 1 ? 'size available' : 'sizes available'}
                </p>
                {product.minPrice !== product.maxPrice ? (
                  <p class="text-sm font-medium text-foreground mt-1">
                    {formatPrice(product.minPrice, product.currency || 'USD')} - {formatPrice(product.maxPrice, product.currency || 'USD')}
                  </p>
                ) : (
                  <p class="text-lg font-medium text-foreground mt-1">
                    {formatPrice(product.price, product.currency || 'USD')}
                  </p>
                )}
              </div>
            )}
            
            {product.variantCount === 0 && (
              <div class="mt-2 flex items-center justify-between">
                <div>
                  <p class="text-lg font-medium text-foreground">
                    {formatPrice(product.price, product.currency || 'USD')}
                  </p>
                </div>
                {product.stock > 0 ? (
                  <span class="text-xs text-green-600 font-medium">
                    In stock
                  </span>
                ) : (
                  <span class="text-xs text-red-600 font-medium">
                    Out of stock
                  </span>
                )}
              </div>
            )}
            
            {/* Show current size if exists */}
            {product.nominal_size && (
              <p class="mt-1 text-xs text-muted-foreground">
                Size: {product.nominal_size}
              </p>
            )}
            
            <div class="mt-auto pt-3">
              {product.variantCount > 0 ? (
                <a
                  href={`/en/product/${product.uuid}`}
                  class="relative z-10 w-full inline-flex items-center justify-center rounded-md bg-primary px-3 py-2 text-sm font-semibold text-primary-foreground hover:bg-primary/90 transition-colors"
                >
                  View Available Sizes
                </a>
              ) : product.stock > 0 ? (
                <button
                  type="button"
                  class="relative z-10 w-full rounded-md bg-primary px-3 py-2 text-sm font-semibold text-primary-foreground hover:bg-primary/90 transition-colors"
                  onclick={`event.stopPropagation(); addToCartQuick('${product.uuid}', ${product.id}, '${product.name}', ${product.price}, '${product.imageUrl}', '${product.category || ''}', '${product.currency || 'USD'}')`}
                >
                  Add to Cart
                </button>
              ) : (
                <button
                  type="button"
                  disabled
                  class="relative z-10 w-full rounded-md bg-gray-300 px-3 py-2 text-sm font-semibold text-gray-500 cursor-not-allowed"
                >
                  Not Available
                </button>
              )}
            </div>
          </div>
        ))}
      </div>

      {products.length === 0 && (
        <div class="text-center py-12">
          <h3 class="text-lg font-medium text-foreground">
            No products available
          </h3>
          <p class="mt-2 text-sm text-muted-foreground">
            Check back soon for new products
          </p>
        </div>
      )}
    </section>
  </div>
</WebsiteLayout>

<script>
  // Product data from server
  const allProducts = document.querySelectorAll('.product-card');
  let currentCategory = 'all';
  let currentSortBy = 'default';
  let currentStockFilter = 'all';
  let currentMaxPrice = 10000;
  let currentSearchTerm = '';

  // Main filtering function
  function applyFilters(): void {
    const productCards = Array.from(allProducts);
    let visibleCount = 0;

    productCards.forEach(card => {
      const element = card as HTMLElement;
      const productName = element.querySelector('h3')?.textContent?.toLowerCase() || '';
      const productCategory = element.getAttribute('data-category') || '';
      const priceText = element.querySelector('.text-lg.font-medium')?.textContent || '';
      const price = parseFloat(priceText.replace(/[^0-9.]/g, '')) || 0;
      const stockElement = element.querySelector('.text-xs.text-green-600, .text-xs.text-red-600');
      const inStock = stockElement?.textContent?.includes('In stock') || false;

      // Apply filters
      const matchesSearch = currentSearchTerm === '' || productName.includes(currentSearchTerm.toLowerCase());
      const matchesCategory = currentCategory === 'all' || productCategory === currentCategory;
      const matchesPrice = price <= currentMaxPrice;
      const matchesStock = currentStockFilter === 'all' || 
        (currentStockFilter === 'in-stock' && inStock) ||
        (currentStockFilter === 'out-of-stock' && !inStock);

      if (matchesSearch && matchesCategory && matchesPrice && matchesStock) {
        element.style.display = '';
        visibleCount++;
      } else {
        element.style.display = 'none';
      }
    });

    // Update counter
    const resultsCount = document.getElementById('results-count');
    if (resultsCount) {
      resultsCount.textContent = visibleCount.toString();
    }

    // Apply sorting
    sortProducts();
  }

  // Sorting function
  function sortProducts(): void {
    const grid = document.getElementById('products-grid');
    if (!grid) return;

    const visibleCards = Array.from(grid.querySelectorAll('.product-card'))
      .filter(card => (card as HTMLElement).style.display !== 'none');

    visibleCards.sort((a, b) => {
      const aElement = a as HTMLElement;
      const bElement = b as HTMLElement;

      switch (currentSortBy) {
        case 'price-asc': {
          const aPrice = parseFloat(aElement.querySelector('.text-lg.font-medium')?.textContent?.replace(/[^0-9.]/g, '') || '0');
          const bPrice = parseFloat(bElement.querySelector('.text-lg.font-medium')?.textContent?.replace(/[^0-9.]/g, '') || '0');
          return aPrice - bPrice;
        }
        case 'price-desc': {
          const aPrice = parseFloat(aElement.querySelector('.text-lg.font-medium')?.textContent?.replace(/[^0-9.]/g, '') || '0');
          const bPrice = parseFloat(bElement.querySelector('.text-lg.font-medium')?.textContent?.replace(/[^0-9.]/g, '') || '0');
          return bPrice - aPrice;
        }
        case 'name-asc': {
          const aName = aElement.querySelector('h3')?.textContent || '';
          const bName = bElement.querySelector('h3')?.textContent || '';
          return aName.localeCompare(bName);
        }
        case 'name-desc': {
          const aName = aElement.querySelector('h3')?.textContent || '';
          const bName = bElement.querySelector('h3')?.textContent || '';
          return bName.localeCompare(aName);
        }
        default:
          return 0;
      }
    });

    // Reorganize elements in DOM
    visibleCards.forEach(card => grid.appendChild(card));
  }

  // Function to filter by category
  function filterByCategory(category: string): void {
    currentCategory = category;
    
    // Update active buttons
    const filterBtns = document.querySelectorAll('.filter-btn');
    filterBtns.forEach(btn => {
      if (btn.getAttribute('data-category') === category) {
        btn.classList.add('bg-primary', 'text-primary-foreground');
        btn.classList.remove('bg-background', 'text-foreground');
      } else {
        btn.classList.remove('bg-primary', 'text-primary-foreground');
        btn.classList.add('bg-background', 'text-foreground');
      }
    });

    applyFilters();
  }

  // Function to add to cart from grid
  async function addToCartQuick(uuid: string, product_id: number, name: string, price: number, image_url: string, category: string, currency: string = 'USD'): Promise<void> {
    // Price already comes in the correct currency according to language (USD for English)
    const finalPrice = price;
    const finalCurrency = currency as 'MXN' | 'USD';

    // Get current cart
    const cartData = localStorage.getItem('starfilters_cart');
    let cart = cartData ? JSON.parse(cartData) : { items: [], total: 0, itemCount: 0, currency: finalCurrency };

    // Ensure cart has correct currency
    if (!cart.currency) {
      cart.currency = finalCurrency;
    }

    // Find if product already exists
    const existingItemIndex = cart.items.findIndex((item: any) => item.uuid === uuid);

    if (existingItemIndex >= 0) {
      cart.items[existingItemIndex].quantity += 1;
      cart.items[existingItemIndex].price = finalPrice; // Update price
      cart.items[existingItemIndex].currency = finalCurrency; // Update currency
    } else {
      cart.items.push({
        uuid,
        product_id,
        name,
        price: finalPrice,
        currency: finalCurrency,
        quantity: 1,
        image_url,
        category
      });
    }

    // Recalculate totals
    cart.total = cart.items.reduce((total: number, item: any) => total + (item.price * item.quantity), 0);
    cart.itemCount = cart.items.reduce((count: number, item: any) => count + item.quantity, 0);

    // Save to localStorage
    localStorage.setItem('starfilters_cart', JSON.stringify(cart));

    // Show notification
    showNotification(`${name} added to cart`);

    // Dispatch event to update navbar
    window.dispatchEvent(new CustomEvent('cartUpdated', { detail: cart }));
  }

  function showNotification(message: string): void {
    // Create temporary notification
    const notification = document.createElement('div');
    notification.className = 'fixed top-20 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50 transition-all duration-300';
    notification.innerHTML = `
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
        <span>${message}</span>
      </div>
    `;
    document.body.appendChild(notification);

    // Remove after 3 seconds
    setTimeout(() => {
      notification.style.opacity = '0';
      setTimeout(() => notification.remove(), 300);
    }, 3000);
  }

  // Make functions global
  (window as any).filterByCategory = filterByCategory;
  (window as any).addToCartQuick = addToCartQuick;

  // Event listeners
  document.addEventListener('DOMContentLoaded', () => {
    // Search
    const searchInput = document.getElementById('search-products');
    if (searchInput) {
      searchInput.addEventListener('input', (e) => {
        currentSearchTerm = (e.target as HTMLInputElement).value;
        applyFilters();
      });
    }

    // Sorting
    const sortBy = document.getElementById('sort-by');
    if (sortBy) {
      sortBy.addEventListener('change', (e) => {
        currentSortBy = (e.target as HTMLSelectElement).value;
        applyFilters();
      });
    }

    // Stock filter
    const stockFilter = document.getElementById('stock-filter');
    if (stockFilter) {
      stockFilter.addEventListener('change', (e) => {
        currentStockFilter = (e.target as HTMLSelectElement).value;
        applyFilters();
      });
    }

    // Price range
    const priceRange = document.getElementById('price-range');
    const priceRangeValue = document.getElementById('price-range-value');
    if (priceRange && priceRangeValue) {
      priceRange.addEventListener('input', (e) => {
        const value = parseInt((e.target as HTMLInputElement).value);
        currentMaxPrice = value;
        priceRangeValue.textContent = new Intl.NumberFormat('es-MX', {
          style: 'currency',
          currency: 'MXN',
          minimumFractionDigits: 0
        }).format(value);
        applyFilters();
      });
    }

    // Category buttons
    const filterBtns = document.querySelectorAll('.filter-btn');
    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const category = btn.getAttribute('data-category') || 'all';
        filterByCategory(category);
      });
    });

    console.log('üéØ Product filters initialized');

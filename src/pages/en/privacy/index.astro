---
import WebsiteLayout from "@/layouts/websiteLayout.astro";
import SEO from "@/components/shared/SEO.astro";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<WebsiteLayout 
  title="Privacy Policy"
  seoTitle="Privacy Policy | Star Filters"
  description="Star Filters privacy policy. Learn how we collect, use and protect your personal information in our industrial filtration services."
  keywords={[
    'privacy policy',
    'data protection',
    'Star Filters privacy',
    'personal information'
  ]}
>
  <SEO 
    slot="seo"
    title="Privacy Policy"
    description="Star Filters privacy policy."
    ogType="website"
    keywords={['privacy policy', 'data protection']}
  />
  
  <div class="bg-background py-24 sm:py-32">
    <div class="mx-auto max-w-4xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h1 class="text-3xl font-bold tracking-tight text-foreground sm:text-4xl">
          Privacy Policy
        </h1>
        <p class="mt-6 text-lg leading-8 text-muted-foreground">
          Last updated: {new Date().toLocaleDateString('en-US')}
        </p>
      </div>
      
      <div class="mt-16 prose prose-lg max-w-none">
        <h2>1. Information We Collect</h2>
        <p>We collect information you provide directly, including:</p>
        <ul>
          <li>Contact information (name, email, phone)</li>
          <li>Company information</li>
          <li>Order and service data</li>
          <li>Communications with our team</li>
        </ul>
        
        <h2>2. Use of Information</h2>
        <p>We use your information to:</p>
        <ul>
          <li>Provide our filtration services</li>
          <li>Process orders and deliveries</li>
          <li>Communicate about services and support</li>
          <li>Improve our products and services</li>
        </ul>
        
        <h2>3. Data Protection</h2>
        <p>We implement technical and organizational security measures to protect your personal information.</p>
        
        <h2>4. Information Sharing</h2>
        <p>We do not sell or share your personal information with third parties, except when necessary to provide our services.</p>
        
        <h2>5. Your Rights</h2>
        <p>You have the right to access, rectify or delete your personal information. You can contact us to exercise these rights.</p>
        
        <h2>6. Contact</h2>
        <p>For questions about this privacy policy, you can contact us through our services.</p>
      </div>
    </div>
  </div>
</WebsiteLayout>

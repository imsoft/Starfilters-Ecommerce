---
import WebsiteLayout from "@/layouts/websiteLayout.astro";
import SEO from "@/components/shared/SEO.astro";
import { generateBreadcrumbSchema } from "@/lib/seo-utils";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const siteUrl = Astro.site?.href || Astro.url.origin;
const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Home', url: `${siteUrl}/en` },
  { name: 'Cleanrooms', url: `${siteUrl}/en/cleanrooms` }
]);
---

<WebsiteLayout
  title="Cleanrooms"
  seoTitle="Industrial Cleanrooms - Design & Installation | StarFilters"
  description="Design, manufacturing, and installation of industrial cleanrooms. Professional ISO-certified solutions for pharmaceutical, electronics, and food industries in Mexico."
  keywords={[
    'cleanrooms',
    'clean rooms',
    'industrial cleanrooms',
    'cleanroom design',
    'clean room installation',
    'cleanrooms Mexico',
    'ISO cleanroom certification'
  ]}
>
  <SEO
    slot="seo"
    title="Industrial Cleanrooms"
    description="Design, manufacturing, and installation of industrial cleanrooms. Professional ISO-certified solutions for pharmaceutical, electronics, and food industries in Mexico."
    ogType="website"
    keywords={[
      'cleanrooms',
      'clean rooms',
      'industrial cleanrooms'
    ]}
  />

  <script slot="seo" type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  <div class="overflow-hidden bg-white py-24 sm:py-32">
    <div class="mx-auto max-w-2xl px-6 lg:max-w-7xl lg:px-8">
      <div class="max-w-4xl">
        <p class="text-base/7 font-semibold text-indigo-600">{t('cleanrooms.badge')}</p>
        <h1
          class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl"
        >
          {t('cleanrooms.title')}
        </h1>
        <p class="mt-6 text-xl/8 text-balance text-gray-700">
          {t('cleanrooms.description')}
        </p>
      </div>
      <section
        class="mt-20 grid grid-cols-1 lg:grid-cols-2 lg:gap-x-8 lg:gap-y-16"
      >
        <div class="lg:pr-8">
          <h2
            class="text-2xl font-semibold tracking-tight text-pretty text-gray-900"
          >
            {t('cleanrooms.experience.title')}
          </h2>
          <p class="mt-6 text-base/7 text-gray-600">
            {t('cleanrooms.experience.p1')}
          </p>
          <p class="mt-8 text-base/7 text-gray-600">
            {t('cleanrooms.experience.p2')}
          </p>
        </div>
        <div class="pt-16 lg:row-span-2 lg:-mr-16 xl:mr-auto">
          <div
            class="-mx-8 grid grid-cols-2 gap-4 sm:-mx-16 sm:grid-cols-4 lg:mx-0 lg:grid-cols-2 xl:gap-8"
          >
            <div
              class="aspect-square overflow-hidden rounded-xl shadow-xl outline-1 -outline-offset-1 outline-black/10"
            >
              <img
                src="https://images.unsplash.com/photo-1590650516494-0c8e4a4dd67e?&auto=format&fit=crop&crop=center&w=560&h=560&q=90"
                alt=""
                class="block size-full object-cover"
              />
            </div>
            <div
              class="-mt-8 aspect-square overflow-hidden rounded-xl shadow-xl outline-1 -outline-offset-1 outline-black/10 lg:-mt-40"
            >
              <img
                src="https://images.unsplash.com/photo-1557804506-669a67965ba0?&auto=format&fit=crop&crop=left&w=560&h=560&q=90"
                alt=""
                class="block size-full object-cover"
              />
            </div>
            <div
              class="aspect-square overflow-hidden rounded-xl shadow-xl outline-1 -outline-offset-1 outline-black/10"
            >
              <img
                src="https://images.unsplash.com/photo-1559136555-9303baea8ebd?&auto=format&fit=crop&crop=left&w=560&h=560&q=90"
                alt=""
                class="block size-full object-cover"
              />
            </div>
            <div
              class="-mt-8 aspect-square overflow-hidden rounded-xl shadow-xl outline-1 -outline-offset-1 outline-black/10 lg:-mt-40"
            >
              <img
                src="https://images.unsplash.com/photo-1598257006458-087169a1f08d?&auto=format&fit=crop&crop=center&w=560&h=560&q=90"
                alt=""
                class="block size-full object-cover"
              />
            </div>
          </div>
        </div>
        <div class="max-lg:mt-16 lg:col-span-1">
          <p class="text-base/7 font-semibold text-gray-500">{t('cleanrooms.numbers.title')}</p>
          <hr class="mt-6 border-t border-gray-200" />
          <dl class="mt-6 grid grid-cols-1 gap-x-8 gap-y-4 sm:grid-cols-2">
            <div
              class="flex flex-col gap-y-2 border-b border-dotted border-gray-200 pb-4"
            >
              <dt class="text-sm/6 text-gray-600">{t('cleanrooms.numbers.installations')}</dt>
              <dd
                class="order-first text-6xl font-semibold tracking-tight text-gray-900"
              >
                <span>{t('cleanrooms.numbers.installationsNumber')}</span>
              </dd>
            </div>
            <div
              class="flex flex-col gap-y-2 border-b border-dotted border-gray-200 pb-4"
            >
              <dt class="text-sm/6 text-gray-600">{t('cleanrooms.numbers.area')}</dt>
              <dd
                class="order-first text-6xl font-semibold tracking-tight text-gray-900"
              >
                <span>{t('cleanrooms.numbers.areaNumber')}</span>
              </dd>
            </div>
            <div
              class="flex flex-col gap-y-2 max-sm:border-b max-sm:border-dotted max-sm:border-gray-200 max-sm:pb-4"
            >
              <dt class="text-sm/6 text-gray-600">{t('cleanrooms.numbers.certifications')}</dt>
              <dd
                class="order-first text-6xl font-semibold tracking-tight text-gray-900"
              >
                <span>{t('cleanrooms.numbers.certificationsNumber')}</span>
              </dd>
            </div>
            <div class="flex flex-col gap-y-2">
              <dt class="text-sm/6 text-gray-600">{t('cleanrooms.numbers.warranty')}</dt>
              <dd
                class="order-first text-6xl font-semibold tracking-tight text-gray-900"
              >
                <span>{t('cleanrooms.numbers.warrantyNumber')}</span>
              </dd>
            </div>
          </dl>
        </div>
      </section>
    </div>
  </div>
</WebsiteLayout>

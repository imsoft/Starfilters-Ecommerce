---
import WebsiteLayout from "@/layouts/websiteLayout.astro";
import SEO from "@/components/shared/SEO.astro";
import LazyImage from "@/components/shared/LazyImage.astro";
import { getProductByUuid, getActiveProducts, getProductsByFilterCategory } from "@/lib/product-service";
import { getProductPlaceholderImage } from "@/lib/image-utils";
import type { Product } from "@/lib/database";
import { generateProductKeywords, generateProductSchema, generateBreadcrumbSchema, extractTextFromHTML } from "@/lib/seo-utils";

// Obtener UUID del producto de la URL
const { id: uuid } = Astro.params;

// Verificar que el ID sea válido
if (!uuid || typeof uuid !== 'string') {
  return Astro.redirect('/filtros');
}

// Obtener producto desde la base de datos local
const product = await getProductByUuid(uuid);

// Si no existe el producto, redirigir
if (!product) {
  return Astro.redirect('/filtros');
}

// Obtener variantes relacionadas (otros productos con el mismo filter_category_id)
let relatedVariants: Product[] = [];
if (product.filter_category_id) {
  try {
    const allVariants = await getProductsByFilterCategory(product.filter_category_id);
    // Excluir el producto actual y solo mostrar activos
    relatedVariants = allVariants.filter(p => p.uuid !== product.uuid && p.status === 'active');
  } catch (error) {
    console.error('Error obteniendo variantes relacionadas:', error);
  }
}

// Obtener productos relacionados
const allProducts = await getActiveProducts();
const relatedProducts = allProducts
  .filter(p => p.uuid !== product.uuid && p.category === product.category)
  .slice(0, 3);

// Preparar productos relacionados con imágenes
const relatedProductsWithImages = relatedProducts.map(product => {
  const imageUrl = getProductPlaceholderImage(product.category);
  return { ...product, imageUrl };
});

// Usar placeholder para imágenes (las imágenes se pueden agregar a Bind después)
const mainImage = getProductPlaceholderImage(product.category);
const allImages = [
  mainImage,
  '/images/products/placeholder-hepa-filter.svg',
  '/images/products/placeholder-cleanroom.svg',
  '/images/products/placeholder-air-purification.svg'
];

// Función para formatear precio
const formatPrice = (price: number): string => {
  return new Intl.NumberFormat('es-MX', {
    style: 'currency',
    currency: 'MXN'
  }).format(price);
};

// Generar datos SEO
const siteUrl = Astro.site?.href || Astro.url.origin;
const productKeywords = generateProductKeywords(product);
const productDescription = extractTextFromHTML(product.description || '', 160);
const productSchema = generateProductSchema(product, siteUrl);
const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Inicio', url: siteUrl },
  { name: 'Productos', url: `${siteUrl}/filtros` },
  { name: product.name, url: `${siteUrl}/product/${product.bind_id}` }
]);
---

<WebsiteLayout
  title={product.name}
  seoTitle={`${product.name} - Comprar en StarFilters`}
  description={productDescription}
  keywords={productKeywords}
  ogImage={mainImage}
>
  <SEO
    slot="seo"
    title={product.name}
    description={productDescription}
    ogType="product"
    ogImage={mainImage}
    ogImageAlt={product.name}
    keywords={productKeywords}
    product={{
      price: product.price,
      currency: 'MXN',
      availability: product.stock > 0 ? 'in stock' : 'out of stock',
      brand: 'StarFilters'
    }}
  />
  
  <!-- Product Schema -->
  <script slot="seo" type="application/ld+json" set:html={JSON.stringify(productSchema)} />
  
  <!-- Breadcrumb Schema -->
  <script slot="seo" type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  <div class="bg-background">
    <!-- Breadcrumb -->
    <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
      <nav class="mb-8" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2 text-sm text-muted-foreground">
          <li>
            <a href="/" class="hover:text-foreground transition-colors">Inicio</a>
          </li>
          <li>
            <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
          </li>
          <li>
            <a href="/filtros" class="hover:text-foreground transition-colors">Productos</a>
          </li>
          <li>
            <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
          </li>
          <li class="text-foreground font-medium">{product.name}</li>
        </ol>
      </nav>
    </div>

    <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
      <!-- Technical Specifications Section -->
      <div class="mx-auto grid max-w-2xl grid-cols-1 items-center gap-x-8 gap-y-16 px-4 py-24 sm:px-6 sm:py-32 lg:max-w-7xl lg:grid-cols-2 lg:px-8">
        <div>
          <h2 class="text-3xl font-bold tracking-tight text-foreground sm:text-4xl">{product.name}</h2>
          <p class="mt-4 text-3xl tracking-tight text-foreground">
            {formatPrice(product.price)}
          </p>

          <!-- Valoraciones -->
          <div class="mt-4">
            <div class="flex items-center">
              <div class="flex items-center">
                {[1,2,3,4,5].map(rating => (
                  <svg
                    class={`h-5 w-5 flex-shrink-0 ${rating <= 4 ? 'text-yellow-400' : 'text-gray-300'}`}
                    viewBox="0 0 20 20"
                    fill="currentColor"
                    aria-hidden="true"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z"
                      clip-rule="evenodd"
                    ></path>
                  </svg>
                ))}
              </div>
              <a href="#reviews" class="ml-3 text-sm font-medium text-primary hover:text-primary/90">
                117 valoraciones
              </a>
            </div>
          </div>

          <!-- Descripción -->
          <div class="mt-6 text-base text-muted-foreground">
            <p>{product.description}</p>
          </div>

          <dl class="mt-10 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 sm:gap-y-16 lg:gap-x-8">
            <div class="border-t border-border pt-4">
              <dt class="font-medium text-foreground">Categoría</dt>
              <dd class="mt-2 text-sm text-muted-foreground">{product.category || 'No especificada'}</dd>
            </div>
            {product.uuid && (
              <div class="border-t border-border pt-4">
                <dt class="font-medium text-foreground">SKU</dt>
                <dd class="mt-2 text-sm text-muted-foreground">{product.uuid}</dd>
              </div>
            )}
            {product.weight && (
              <div class="border-t border-border pt-4">
                <dt class="font-medium text-foreground">Peso</dt>
                <dd class="mt-2 text-sm text-muted-foreground">{product.weight}</dd>
              </div>
            )}
            <div class="border-t border-border pt-4">
              <dt class="font-medium text-foreground">Disponibilidad</dt>
              <dd class="mt-2 text-sm text-muted-foreground">
                {product.stock > 0 ? `En stock (${product.stock} disponibles)` : 'Agotado'}
              </dd>
            </div>
            {product.tags && (
              <div class="border-t border-border pt-4">
                <dt class="font-medium text-foreground">Etiquetas</dt>
                <dd class="mt-2 text-sm text-muted-foreground">{product.tags}</dd>
              </div>
            )}
            <div class="border-t border-border pt-4">
              <dt class="font-medium text-foreground">Garantía</dt>
              <dd class="mt-2 text-sm text-muted-foreground">1 año de garantía</dd>
            </div>
          </dl>

          <!-- Formulario de compra -->
          <form class="mt-10">
            <!-- Cantidad -->
            <div class="flex items-center gap-4">
              <label for="quantity" class="text-sm font-medium text-foreground">
                Cantidad:
              </label>
              <select
                id="quantity"
                name="quantity"
                class="rounded-md bg-background py-2 pr-8 pl-3 text-base text-foreground outline-1 -outline-offset-1 outline-border focus:outline-2 focus:-outline-offset-2 focus:outline-primary"
              >
                {Array.from({ length: Math.min(product.stock, 10) }, (_, i) => i + 1).map(num => (
                  <option value={num}>{num}</option>
                ))}
              </select>
            </div>

            <!-- Botones de acción -->
            <div class="mt-8 flex gap-4">
              {product.stock > 0 ? (
                <button
                  type="button"
                  id="add-to-cart-btn"
                  class="flex flex-1 items-center justify-center rounded-md bg-primary px-8 py-3 text-base font-medium text-primary-foreground hover:bg-primary/90 focus:ring-2 focus:ring-primary focus:ring-offset-2 transition-colors"
                  onclick={`addToCartFromProduct('${product.uuid}', ${product.id}, '${product.name}', ${product.price}, '${mainImage}', '${product.category || ''}')`}
                >
                  Agregar al Carrito
                </button>
              ) : (
                <button
                  type="button"
                  disabled
                  class="flex flex-1 items-center justify-center rounded-md bg-gray-300 px-8 py-3 text-base font-medium text-gray-500 cursor-not-allowed"
                >
                  No Disponible
                </button>
              )}

              <button
                type="button"
                class="flex items-center justify-center rounded-md px-4 py-3 text-muted-foreground hover:bg-muted hover:text-foreground transition-colors"
                title="Agregar a favoritos"
              >
                <svg
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                  aria-hidden="true"
                  class="size-6 shrink-0"
                >
                  <path
                    d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  ></path>
                </svg>
              </button>
            </div>
          </form>
        </div>
        <div class="grid grid-cols-2 grid-rows-2 gap-4 sm:gap-6 lg:gap-8">
          <img
            alt="Vista detallada del producto 1"
            src={allImages[0]}
            class="rounded-lg bg-muted"
          />
          <img
            alt="Vista detallada del producto 2"
            src={allImages[1]}
            class="rounded-lg bg-muted"
          />
          <img
            alt="Vista detallada del producto 3"
            src={allImages[2]}
            class="rounded-lg bg-muted"
          />
          <img
            alt="Vista detallada del producto 4"
            src={allImages[3]}
            class="rounded-lg bg-muted"
          />
        </div>
      </div>

      <!-- Tabla de Tamaños/Variantes -->
      {relatedVariants.length > 0 && (
        <section class="mt-24">
          <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-bold tracking-tight text-foreground mb-8">
              Tamaños Disponibles
            </h2>
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200 border border-gray-200 rounded-lg">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">
                      Medida Nominal
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">
                      Medida Real
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">
                      Precio
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">
                      Código Bind
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">
                      Stock
                    </th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider border-b">
                      Acción
                    </th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  {relatedVariants.map((variant) => (
                    <tr class="hover:bg-gray-50 transition-colors">
                      <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                        {variant.nominal_size || '-'}
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {variant.real_size || '-'}
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        {variant.currency === 'USD' && variant.price_usd ? (
                          <div>
                            <span class="text-xs text-gray-500 line-through">${variant.price_usd.toFixed(2)} USD</span>
                            <br />
                            <span class="font-semibold text-lg">{formatPrice(variant.price)}</span>
                          </div>
                        ) : (
                          <span class="font-semibold text-lg">{formatPrice(variant.price)}</span>
                        )}
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {variant.bind_code || '-'}
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm">
                        {variant.stock > 0 ? (
                          <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
                            En stock ({variant.stock})
                          </span>
                        ) : (
                          <span class="inline-flex items-center rounded-full bg-red-100 px-2.5 py-0.5 text-xs font-medium text-red-800">
                            Agotado
                          </span>
                        )}
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                        {variant.stock > 0 ? (
                          <a
                            href={`/product/${variant.uuid}`}
                            class="inline-flex items-center rounded-md bg-primary px-3 py-2 text-sm font-semibold text-primary-foreground shadow-sm hover:bg-primary/90 transition-colors"
                          >
                            Ver Detalles
                          </a>
                        ) : (
                          <span class="text-gray-400">No disponible</span>
                        )}
                      </td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          </div>
        </section>
      )}

      <!-- Especificaciones Técnicas -->
      {(product.efficiency || product.efficiency_class || product.characteristics || product.applications || product.benefits) && (
        <section class="mt-24">
          <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-bold tracking-tight text-foreground mb-8">
              Especificaciones Técnicas
            </h2>
            
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
              {/* Eficiencia */}
              {(product.efficiency || product.efficiency_class) && (
                <div class="rounded-lg border border-gray-200 bg-white p-6">
                  <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                    <svg class="h-5 w-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                    Eficiencia
                  </h3>
                  {product.efficiency && (
                    <ul class="list-disc list-inside space-y-2 text-gray-700 mb-2">
                      {product.efficiency.split('\n').filter(line => line.trim()).map((line) => (
                        <li>{line.trim()}</li>
                      ))}
                    </ul>
                  )}
                  {product.efficiency_class && (
                    <p class="text-sm text-gray-600">
                      <span class="font-medium">Clase EN1822:</span> {product.efficiency_class}
                    </p>
                  )}
                </div>
              )}

              {/* Características */}
              {product.characteristics && (
                <div class="rounded-lg border border-gray-200 bg-white p-6">
                  <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                    <svg class="h-5 w-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    Características
                  </h3>
                  <ul class="list-disc list-inside space-y-2 text-gray-700">
                    {product.characteristics.split('\n').filter(line => line.trim()).map((line) => (
                      <li>{line.trim()}</li>
                    ))}
                  </ul>
                </div>
              )}

              {/* Aplicaciones */}
              {product.applications && (
                <div class="rounded-lg border border-gray-200 bg-white p-6">
                  <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                    <svg class="h-5 w-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    Aplicaciones
                  </h3>
                  <ul class="list-disc list-inside space-y-2 text-gray-700">
                    {product.applications.split('\n').filter(line => line.trim()).map((line) => (
                      <li>{line.trim()}</li>
                    ))}
                  </ul>
                </div>
              )}

              {/* Beneficios */}
              {product.benefits && (
                <div class="rounded-lg border border-gray-200 bg-white p-6">
                  <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                    <svg class="h-5 w-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    Beneficios
                  </h3>
                  <ul class="list-disc list-inside space-y-2 text-gray-700">
                    {product.benefits.split('\n').filter(line => line.trim()).map((line) => (
                      <li>{line.trim()}</li>
                    ))}
                  </ul>
                </div>
              )}

              {/* Instalación Típica */}
              {product.typical_installation && (
                <div class="rounded-lg border border-gray-200 bg-white p-6">
                  <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                    <svg class="h-5 w-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                    Instalación Típica
                  </h3>
                  <p class="text-gray-700">{product.typical_installation}</p>
                </div>
              )}
            </div>
          </div>
        </section>
      )}

      <!-- Productos relacionados -->
      {relatedProducts.length > 0 && (
        <section aria-labelledby="related-heading" class="mt-24">
          <h2 id="related-heading" class="text-lg font-medium text-foreground">
            Productos Relacionados
          </h2>

          <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:gap-x-8">
            {relatedProductsWithImages.map((relatedProduct) => (
              <div class="group relative flex flex-col">
                <a href={`/product/${relatedProduct.bind_id}`} class="block flex-shrink-0">
                  <div class="w-full h-80 overflow-hidden rounded-lg bg-muted">
                    <LazyImage
                      src={relatedProduct.imageUrl}
                      alt={relatedProduct.name}
                      class="h-full w-full object-cover object-center group-hover:opacity-75 transition-opacity"
                    />
                  </div>
                </a>
                <div class="mt-4 flex justify-between">
                  <div class="flex-1 min-w-0">
                    <h3 class="text-sm text-foreground line-clamp-2 min-h-[2.5rem]">
                      <a href={`/product/${relatedProduct.uuid}`} class="hover:text-primary transition-colors">
                        {relatedProduct.name}
                      </a>
                    </h3>
                    <p class="mt-1 text-sm text-muted-foreground">{relatedProduct.category}</p>
                  </div>
                  <p class="text-sm font-medium text-foreground ml-2 flex-shrink-0">
                    {formatPrice(relatedProduct.price)}
                  </p>
                </div>
                <div class="mt-auto pt-3">
                  <button
                    type="button"
                    class="relative z-10 w-full rounded-md bg-primary px-3 py-2 text-sm font-semibold text-primary-foreground hover:bg-primary/90 transition-colors"
                    onclick={`event.stopPropagation(); addToCartFromProduct('${relatedProduct.uuid}', ${relatedProduct.id}, '${relatedProduct.name}', ${relatedProduct.price}, '${relatedProduct.imageUrl}', '${relatedProduct.category || ''}')`}
                  >
                    Agregar al Carrito
                  </button>
                </div>
              </div>
            ))}
          </div>
        </section>
      )}
    </div>
  </div>
</WebsiteLayout>

<script>
  // Función para verificar stock en tiempo real
  async function checkStock(uuid: string, quantity: number): Promise<boolean> {
    try {
      const response = await fetch(`/api/check-stock?uuid=${uuid}&quantity=${quantity}`);
      const data = await response.json();
      
      if (!data.available) {
        if (data.stock === 0) {
          showErrorNotification('Este producto está agotado');
        } else {
          showErrorNotification(`Solo quedan ${data.stock} unidades disponibles`);
        }
        return false;
      }
      
      return true;
    } catch (error) {
      console.error('Error verificando stock:', error);
      return true; // Continuar si hay error en la verificación
    }
  }

  // Funciones del carrito
  async function addToCartFromProduct(uuid: string, product_id: number, name: string, price: number, image_url: string, category: string): Promise<void> {
    const quantitySelect = document.getElementById('quantity') as HTMLSelectElement;
    const quantity = parseInt(quantitySelect?.value || '1');

    // Verificar stock en tiempo real
    const stockAvailable = await checkStock(uuid, quantity);
    if (!stockAvailable) {
      return;
    }

    // Obtener carrito actual
    const cartData = localStorage.getItem('starfilters_cart');
    let cart = cartData ? JSON.parse(cartData) : { items: [], total: 0, itemCount: 0 };

    // Buscar si el producto ya existe
    const existingItemIndex = cart.items.findIndex((item: any) => item.uuid === uuid);

    // Calcular la cantidad total que tendría en el carrito
    const currentCartQuantity = existingItemIndex >= 0 ? cart.items[existingItemIndex].quantity : 0;
    const newTotalQuantity = currentCartQuantity + quantity;

    // Verificar stock para la cantidad total
    const totalStockAvailable = await checkStock(uuid, newTotalQuantity);
    if (!totalStockAvailable) {
      return;
    }

    if (existingItemIndex >= 0) {
      cart.items[existingItemIndex].quantity += quantity;
    } else {
      cart.items.push({
        uuid,
        product_id,
        name,
        price,
        quantity,
        image_url,
        category
      });
    }

    // Recalcular totales
    cart.total = cart.items.reduce((total: number, item: any) => total + (item.price * item.quantity), 0);
    cart.itemCount = cart.items.reduce((count: number, item: any) => count + item.quantity, 0);

    // Guardar en localStorage
    localStorage.setItem('starfilters_cart', JSON.stringify(cart));

    // Mostrar notificación
    showNotification(`${name} agregado al carrito (${quantity})`);

    // Disparar evento para actualizar navbar si tiene contador
    window.dispatchEvent(new CustomEvent('cartUpdated', { detail: cart }));
  }

  function showNotification(message: string): void {
    // Crear notificación temporal
    const notification = document.createElement('div');
    notification.className = 'fixed top-20 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50 transition-all duration-300';
    notification.innerHTML = `
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
        <span>${message}</span>
      </div>
    `;
    document.body.appendChild(notification);

    // Remover después de 3 segundos
    setTimeout(() => {
      notification.style.opacity = '0';
      setTimeout(() => notification.remove(), 300);
    }, 3000);
  }

  function showErrorNotification(message: string): void {

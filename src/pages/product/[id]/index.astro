---
import WebsiteLayout from "@/layouts/websiteLayout.astro";
import SEO from "@/components/shared/SEO.astro";
import LazyImage from "@/components/shared/LazyImage.astro";
import { getProductByUuid, getActiveProducts, getProductsByFilterCategory } from "@/lib/product-service";
import { getProductPlaceholderImage } from "@/lib/image-utils";
import type { Product } from "@/lib/database";
import { getProductImages } from "@/lib/database";
import { getCategoryVariants } from "@/lib/filter-category-service";
import type { FilterCategoryVariant } from "@/lib/filter-category-service";
import { generateProductKeywords, generateProductSchema, generateBreadcrumbSchema, extractTextFromHTML } from "@/lib/seo-utils";
import { getExchangeRate, getVariantPriceInMXN } from "@/lib/currency-service";
import { getLangFromUrl } from "@/i18n/utils";
import { getProductName, getProductDescription, getProductCategory, getProductPriceAndCurrency, formatPriceByCurrency } from "@/lib/i18n-helpers";

// Obtener UUID del producto de la URL
const { id: uuid } = Astro.params;

// Verificar que el ID sea válido
if (!uuid || typeof uuid !== 'string') {
  return Astro.redirect('/filtros');
}

// Detectar idioma actual
const lang = getLangFromUrl(Astro.url);

// Obtener producto desde la base de datos local
const product = await getProductByUuid(uuid);

// Si no existe el producto, redirigir
if (!product) {
  return Astro.redirect('/filtros');
}

// Obtener variantes de categoría (tamaños) desde filter_category_variants
let categoryVariants: FilterCategoryVariant[] = [];
if (product.filter_category_id) {
  try {
    categoryVariants = await getCategoryVariants(product.filter_category_id);
    // Solo mostrar variantes activas
    categoryVariants = categoryVariants.filter(v => v.is_active);
  } catch (error) {
    console.error('Error obteniendo variantes de categoría:', error);
  }
}

// Obtener variantes relacionadas (otros productos con el mismo filter_category_id) para productos relacionados
let relatedVariants: Product[] = [];
if (product.filter_category_id) {
  try {
    const allVariants = await getProductsByFilterCategory(product.filter_category_id);
    // Excluir el producto actual y solo mostrar activos
    relatedVariants = allVariants.filter(p => p.uuid !== product.uuid && p.status === 'active');
  } catch (error) {
    console.error('Error obteniendo variantes relacionadas:', error);
  }
}

// Obtener nombres traducidos
const productName = getProductName(product, lang);
const productDesc = getProductDescription(product, lang);
const productCat = getProductCategory(product, lang);

// Obtener precio y moneda según idioma
const { price: displayPrice, currency: displayCurrency } = getProductPriceAndCurrency(product, lang);

// Si estamos en español y el producto está en USD, convertir a MXN
let finalPrice = displayPrice;
let finalCurrency = displayCurrency;
if (lang === 'es' && displayCurrency === 'USD') {
  // Convertir USD a MXN usando la tasa de cambio
  finalPrice = convertPriceToMXN(displayPrice, 'USD');
  finalCurrency = 'MXN';
}

// Obtener productos relacionados
const allProducts = await getActiveProducts();
const relatedProducts = allProducts
  .filter(p => {
    const pCat = getProductCategory(p, lang);
    return p.uuid !== product.uuid && pCat === productCat;
  })
  .slice(0, 3);

// Preparar productos relacionados con imágenes
const relatedProductsWithImages = relatedProducts.map(p => {
  const pCat = getProductCategory(p, lang);
  const imageUrl = getProductPlaceholderImage(pCat);
  const { price: pPrice, currency: pCurrency } = getProductPriceAndCurrency(p, lang);
  return { 
    ...p, 
    imageUrl, 
    name: getProductName(p, lang), 
    category: pCat,
    price: pPrice,
    currency: pCurrency
  };
});

// Obtener imágenes del producto desde la base de datos
const productImages = await getProductImages(product.id);
const primaryImage = productImages.find(img => img.is_primary)?.image_url || 
                     productImages[0]?.image_url || 
                     product.image_url ||
                     getProductPlaceholderImage(productCat);
const mainImage = primaryImage;

// Solo las imágenes reales del producto; si no hay ninguna, al menos la principal
const allImages = productImages.length > 0
  ? productImages.map(img => img.image_url)
  : [mainImage];

// Obtener tasa de cambio actual
const exchangeRate = await getExchangeRate();

// Función para convertir precio USD a MXN
const convertPriceToMXN = (price: number, currency: string): number => {
  if (currency === 'USD') {
    return price * exchangeRate;
  }
  return price;
};

// Precio final según idioma (ya calculado arriba)
const productPriceFinal = finalPrice;

// Función para formatear precio según moneda
const formatPrice = (price: number, currency: 'MXN' | 'USD' = finalCurrency): string => {
  return formatPriceByCurrency(price, currency);
};

// Generar datos SEO
const siteUrl = Astro.site?.href || Astro.url.origin;
const productKeywords = generateProductKeywords(product);
const productDescription = extractTextFromHTML(productDesc || '', 160);
const productSchema = generateProductSchema(product, siteUrl);
const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'Inicio', url: siteUrl },
  { name: 'Productos', url: `${siteUrl}/filtros` },
  { name: productName, url: `${siteUrl}/product/${product.bind_id}` }
]);

// Función helper para parsear campos que pueden ser JSON o texto
function parseListField(field: string | null | undefined): string[] {
  if (!field) return [];

  // Intentar parsear como JSON
  try {
    let parsed = JSON.parse(field);

    // Manejar doble serialización
    if (Array.isArray(parsed)) {
      const result: string[] = [];
      for (const item of parsed) {
        if (typeof item === 'string') {
          try {
            const innerParsed = JSON.parse(item);
            if (Array.isArray(innerParsed)) {
              result.push(...innerParsed.filter((i: any) => typeof i === 'string' && i.trim()));
            } else {
              result.push(item.trim());
            }
          } catch {
            if (item.trim()) result.push(item.trim());
          }
        }
      }
      return result.filter(item => item);
    }

    // Si es string después de parsear
    if (typeof parsed === 'string') {
      return parsed.split('\n').filter(item => item && item.trim());
    }
  } catch {
    // No es JSON, tratar como texto plano
  }

  return field.split('\n').filter(item => item && item.trim());
}

// Formato "tamaño nominal / tamaño real" para opciones del select
function sizeOptionLabel(nominal: string | null | undefined, real: string | null | undefined): string {
  const n = nominal?.trim() || '—';
  const r = real?.trim() || '—';
  return `${n} / ${r}`;
}

// Preparar datos técnicos
const efficiencyList = parseListField(product.efficiency);
const characteristicsList = parseListField(product.characteristics);
const applicationsList = parseListField(product.applications);
const benefitsList = parseListField(product.benefits);
---

<WebsiteLayout
  title={productName}
  seoTitle={`${productName} - Comprar en Star Filters`}
  description={productDescription}
  keywords={productKeywords}
  ogImage={mainImage}
>
  <SEO
    slot="seo"
    title={productName}
    description={productDescription}
    ogType="product"
    ogImage={mainImage}
    ogImageAlt={productName}
    keywords={productKeywords}
    product={{
      price: product.price,
      currency: 'MXN',
      availability: product.stock > 0 ? 'in stock' : 'out of stock',
      brand: 'Star Filters'
    }}
  />
  
  <!-- Product Schema -->
  <script slot="seo" type="application/ld+json" set:html={JSON.stringify(productSchema)} />
  
  <!-- Breadcrumb Schema -->
  <script slot="seo" type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  <div class="bg-background">
    <!-- Breadcrumb -->
    <div class="mx-auto max-w-2xl px-4 pt-24 sm:px-6 lg:max-w-7xl lg:px-8">
      <nav class="mb-4" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2 text-sm text-muted-foreground">
          <li>
            <a href="/" class="hover:text-foreground transition-colors">Inicio</a>
          </li>
          <li>
            <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
          </li>
          <li>
            <a href="/filtros" class="hover:text-foreground transition-colors">Productos</a>
          </li>
          <li>
            <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
          </li>
          <li class="text-foreground font-medium">{productName}</li>
        </ol>
      </nav>
    </div>

    <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
      <!-- Technical Specifications Section -->
      <div class="mx-auto grid max-w-2xl grid-cols-1 items-start gap-x-8 gap-y-16 px-4 py-8 sm:px-6 sm:py-12 lg:max-w-7xl lg:grid-cols-2 lg:px-8">
        <div>
          <h2 class="text-3xl font-bold tracking-tight text-foreground sm:text-4xl">{productName}</h2>
          <div class="mt-4" data-product-uuid={product.uuid} data-currency={finalCurrency} data-price-usd={product.price_usd || ''}>
            <p id="main-product-price" class="text-3xl tracking-tight text-foreground">
              {formatPrice(productPriceFinal, finalCurrency)}
            </p>
            {lang === 'es' && product.currency === 'USD' && product.price_usd && (
              <p class="mt-1 text-sm text-muted-foreground">
                {formatPrice(product.price_usd, 'USD')} USD 
                <span id="exchange-rate-info" class="text-xs">(tasa del día: {exchangeRate.toFixed(2)})</span>
              </p>
            )}
          </div>

          <!-- Descripción -->
          <div class="mt-6 text-base text-muted-foreground">
            <p>{productDesc}</p>
          </div>

          <dl class="mt-10 grid grid-cols-1 gap-x-6 gap-y-6 sm:grid-cols-2 lg:gap-x-8">
            {/* Eficiencia */}
            {efficiencyList.length > 0 && (
              <div class="border-t border-border pt-4">
                <dt class="font-medium text-foreground">Eficiencia</dt>
                <dd class="mt-2 text-sm text-muted-foreground">
                  <ul class="list-disc list-inside space-y-1">
                    {efficiencyList.map((item) => (
                      <li>{item}</li>
                    ))}
                  </ul>
                  {product.efficiency_class && (
                    <p class="mt-2"><span class="font-medium">EN1822 Clase:</span> {product.efficiency_class}</p>
                  )}
                </dd>
              </div>
            )}

            {/* Características */}
            {characteristicsList.length > 0 && (
              <div class="border-t border-border pt-4">
                <dt class="font-medium text-foreground">Características</dt>
                <dd class="mt-2 text-sm text-muted-foreground">
                  <ul class="list-disc list-inside space-y-1">
                    {characteristicsList.map((item) => (
                      <li>{item}</li>
                    ))}
                  </ul>
                </dd>
              </div>
            )}

            {/* Aplicaciones */}
            {applicationsList.length > 0 && (
              <div class="border-t border-border pt-4">
                <dt class="font-medium text-foreground">Aplicaciones</dt>
                <dd class="mt-2 text-sm text-muted-foreground">
                  <ul class="list-disc list-inside space-y-1">
                    {applicationsList.map((item) => (
                      <li>{item}</li>
                    ))}
                  </ul>
                </dd>
              </div>
            )}

            {/* Beneficios */}
            {benefitsList.length > 0 && (
              <div class="border-t border-border pt-4">
                <dt class="font-medium text-foreground">Beneficios</dt>
                <dd class="mt-2 text-sm text-muted-foreground">
                  <ul class="list-disc list-inside space-y-1">
                    {benefitsList.map((item) => (
                      <li>{item}</li>
                    ))}
                  </ul>
                </dd>
              </div>
            )}

            {/* Instalación típica */}
            {product.typical_installation && (
              <div class="border-t border-border pt-4">
                <dt class="font-medium text-foreground">Instalación Típica</dt>
                <dd class="mt-2 text-sm text-muted-foreground">{product.typical_installation}</dd>
              </div>
            )}
          </dl>

          <!-- Formulario de compra -->
          <form class="mt-10 space-y-6">
            <!-- Tamaño y Cantidad en la misma fila -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <!-- Selector de Tamaño (nominal / real) -->
              {(categoryVariants.length > 0 || (product.nominal_size || product.real_size) || relatedVariants.length > 0) && (
                <div>
                  <label for="size-select" class="block text-sm font-medium text-foreground mb-2">
                    Tamaño:
                  </label>
                  <select
                    id="size-select"
                    name="size"
                    class="w-full rounded-md bg-background py-3 px-4 text-base text-foreground outline-1 -outline-offset-1 outline-border focus:outline-2 focus:-outline-offset-2 focus:outline-primary"
                  >
                    {/* Opción del producto actual */}
                    <option 
                      value={product.uuid} 
                      data-price={productPriceFinal} 
                      data-currency={finalCurrency}
                      data-stock={product.stock}
                      data-name={productName}
                      data-image={mainImage}
                      data-id={product.id}
                      selected
                    >
                      {sizeOptionLabel(product.nominal_size, product.real_size)}
                    </option>
                    {/* Variantes de categoría (desde filter_category_variants) */}
                    {categoryVariants.map((variant) => {
                      // Buscar si hay un producto asociado a esta variante por bind_code
                      const variantProduct = relatedVariants.find(p => p.bind_code === variant.bind_code);
                      let variantPrice = variant.price;
                      let variantCurrency = variant.currency || 'MXN';
                      
                      // Si estamos en español y la variante está en USD, convertir a MXN
                      if (lang === 'es' && variantCurrency === 'USD') {
                        variantPrice = convertPriceToMXN(variant.price, 'USD');
                        variantCurrency = 'MXN';
                      } else if (lang === 'es' && variant.price_usd) {
                        // Si hay precio USD, usar ese convertido
                        variantPrice = convertPriceToMXN(variant.price_usd, 'USD');
                        variantCurrency = 'MXN';
                      }
                      
                      return (
                        <option 
                          value={variantProduct?.uuid || `variant-${variant.id}`}
                          data-price={variantPrice}
                          data-currency={variantCurrency}
                          data-stock={variant.stock}
                          data-name={variantProduct ? getProductName(variantProduct, lang) : productName}
                          data-image={variantProduct?.image_url || mainImage}
                          data-id={variantProduct?.id || product.id}
                          data-variant-id={variant.id}
                          data-bind-code={variant.bind_code}
                        >
                          {sizeOptionLabel(variant.nominal_size, variant.real_size)}
                        </option>
                      );
                    })}
                    {/* Variantes de productos relacionados (fallback si no hay categoryVariants) */}
                    {categoryVariants.length === 0 && relatedVariants.map((variant) => {
                      const { price: variantPrice, currency: variantCurrency } = getProductPriceAndCurrency(variant, lang);
                      let variantFinalPrice = variantPrice;
                      let variantFinalCurrency = variantCurrency;
                      if (lang === 'es' && variantCurrency === 'USD') {
                        variantFinalPrice = convertPriceToMXN(variantPrice, 'USD');
                        variantFinalCurrency = 'MXN';
                      }
                      const variantName = getProductName(variant, lang);
                      return (
                        <option 
                          value={variant.uuid}
                          data-price={variantFinalPrice}
                          data-currency={variantFinalCurrency}
                          data-stock={variant.stock}
                          data-name={variantName}
                          data-image={variant.image_url || mainImage}
                          data-id={variant.id}
                        >
                          {sizeOptionLabel(variant.nominal_size, variant.real_size)}
                        </option>
                      );
                    })}
                  </select>
                </div>
              )}

              <!-- Cantidad (Input numérico) -->
              <div>
                <label for="quantity" class="block text-sm font-medium text-foreground mb-2">
                  Cantidad:
                </label>
                <div class="flex items-center gap-3">
                  <input
                    type="number"
                    id="quantity"
                    name="quantity"
                    min="1"
                    max={product.stock || 999}
                    value="1"
                    class="w-32 rounded-md bg-background py-3 px-4 text-base text-foreground outline-1 -outline-offset-1 outline-border focus:outline-2 focus:-outline-offset-2 focus:outline-primary"
                  />
                  <span id="stock-info" class="text-sm text-muted-foreground">
                    {product.stock > 0 ? `${product.stock} disponibles` : 'Agotado'}
                  </span>
                </div>
              </div>
            </div>

            <!-- Botones de acción -->
            <div class="flex gap-4">
              {product.stock > 0 ? (
                <button
                  type="button"
                  id="add-to-cart-btn"
                  class="flex flex-1 items-center justify-center rounded-md bg-primary px-8 py-3 text-base font-medium text-primary-foreground hover:bg-primary/90 focus:ring-2 focus:ring-primary focus:ring-offset-2 transition-colors"
                >
                  Agregar al Carrito
                </button>
              ) : (
                <button
                  type="button"
                  disabled
                  id="add-to-cart-btn-disabled"
                  class="flex flex-1 items-center justify-center rounded-md bg-gray-300 px-8 py-3 text-base font-medium text-gray-500 cursor-not-allowed"
                >
                  No Disponible
                </button>
              )}
            </div>
          </form>
        </div>
        <div class="grid grid-cols-2 gap-4 sm:gap-6 lg:gap-8">
          {allImages.map((src, i) => (
            <img
              key={i}
              alt={`${productName} - imagen ${i + 1}`}
              src={src}
              class="rounded-lg bg-muted w-full object-cover"
            />
          ))}
        </div>
      </div>

      <!-- Tabla de Tamaños/Variantes -->
      {relatedVariants.length > 0 && (
        <section class="mt-24">
          <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-bold tracking-tight text-foreground mb-8">
              Tamaños Disponibles
            </h2>
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200 border border-gray-200 rounded-lg">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">
                      Medida Nominal
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">
                      Medida Real
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">
                      Precio
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">
                      Código Bind
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">
                      Stock
                    </th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider border-b">
                      Acción
                    </th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  {relatedVariants.map((variant) => {
                    // Obtener precio y moneda según idioma para variantes
                    const { price: variantDisplayPrice, currency: variantDisplayCurrency } = getProductPriceAndCurrency(variant, lang);
                    let variantFinalPrice = variantDisplayPrice;
                    let variantFinalCurrency = variantDisplayCurrency;
                    if (lang === 'es' && variantDisplayCurrency === 'USD') {
                      // Convertir USD a MXN usando la tasa de cambio
                      variantFinalPrice = convertPriceToMXN(variantDisplayPrice, 'USD');
                      variantFinalCurrency = 'MXN';
                    }
                    
                    return (
                    <tr class="hover:bg-gray-50 transition-colors" data-product-uuid={variant.uuid} data-currency={variantFinalCurrency} data-price-usd={variant.price_usd || ''} data-price={variantFinalPrice}>
                      <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                        {variant.nominal_size || '-'}
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {variant.real_size || '-'}
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900" data-currency={variantFinalCurrency}>
                        <span class="variant-price font-semibold text-lg">{formatPrice(variantFinalPrice, variantFinalCurrency)}</span>
                        {lang === 'es' && variant.currency === 'USD' && variant.price_usd && (
                          <>
                            <br />
                            <span class="text-xs text-muted-foreground" data-price-usd={variant.price_usd}>{formatPrice(variant.price_usd, 'USD')} USD</span>
                          </>
                        )}
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {variant.bind_code || '-'}
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm">
                        {variant.stock > 0 ? (
                          <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
                            En stock ({variant.stock})
                          </span>
                        ) : (
                          <span class="inline-flex items-center rounded-full bg-red-100 px-2.5 py-0.5 text-xs font-medium text-red-800">
                            Agotado
                          </span>
                        )}
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                        {variant.stock > 0 ? (
                          <a
                            href={`/product/${variant.uuid}`}
                            class="inline-flex items-center rounded-md bg-primary px-3 py-2 text-sm font-semibold text-primary-foreground shadow-sm hover:bg-primary/90 transition-colors"
                          >
                            Ver Detalles
                          </a>
                        ) : (
                          <span class="text-gray-400">No disponible</span>
                        )}
                      </td>
                    </tr>
                    );
                  })}
                </tbody>
              </table>
            </div>
          </div>
        </section>
      )}

      <!-- Productos relacionados -->
      {relatedProducts.length > 0 && (
        <section aria-labelledby="related-heading" class="mt-24">
          <h2 id="related-heading" class="text-lg font-medium text-foreground">
            Productos Relacionados
          </h2>

          <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:gap-x-8">
            {relatedProductsWithImages.map((relatedProduct) => (
              <div class="group relative flex flex-col">
                <a href={`/product/${relatedProduct.bind_id}`} class="block flex-shrink-0">
                  <div class="w-full h-80 overflow-hidden rounded-lg bg-muted">
                    <LazyImage
                      src={relatedProduct.imageUrl}
                      alt={relatedProduct.name}
                      class="h-full w-full object-cover object-center group-hover:opacity-75 transition-opacity"
                    />
                  </div>
                </a>
                <div class="mt-4 flex justify-between">
                  <div class="flex-1 min-w-0">
                    <h3 class="text-sm text-foreground line-clamp-2 min-h-[2.5rem]">
                      <a href={`/product/${relatedProduct.uuid}`} class="hover:text-primary transition-colors">
                        {relatedProduct.name}
                      </a>
                    </h3>
                    <p class="mt-1 text-sm text-muted-foreground">{relatedProduct.category}</p>
                  </div>
                  <p class="text-sm font-medium text-foreground ml-2 flex-shrink-0">
                    {formatPrice(relatedProduct.price)}
                  </p>
                </div>
                <div class="mt-auto pt-3">
                  <button
                    type="button"
                    class="relative z-10 w-full rounded-md bg-primary px-3 py-2 text-sm font-semibold text-primary-foreground hover:bg-primary/90 transition-colors"
                    onclick={`event.stopPropagation(); addToCartFromProduct('${relatedProduct.uuid}', ${relatedProduct.id}, '${relatedProduct.name}', ${relatedProduct.price}, '${relatedProduct.imageUrl}', '${relatedProduct.category || ''}', '${relatedProduct.currency || displayCurrency}')`}
                  >
                    Agregar al Carrito
                  </button>
                </div>
              </div>
            ))}
          </div>
        </section>
      )}
    </div>
  </div>
</WebsiteLayout>

<script>
  // Estado actual del producto seleccionado
  let currentProduct = {
    uuid: '',
    id: 0,
    name: '',
    price: 0,
    currency: 'MXN',
    stock: 0,
    image: '',
    category: ''
  };

  // Inicializar con los datos del producto actual
  document.addEventListener('DOMContentLoaded', () => {
    const sizeSelect = document.getElementById('size-select') as HTMLSelectElement;
    const quantityInput = document.getElementById('quantity') as HTMLInputElement;
    const addToCartBtn = document.getElementById('add-to-cart-btn');
    const stockInfo = document.getElementById('stock-info');

    // Inicializar producto actual
    if (sizeSelect) {
      updateCurrentProduct(sizeSelect);
      
      // Escuchar cambios en el select de tamaño
      sizeSelect.addEventListener('change', () => {
        updateCurrentProduct(sizeSelect);
        // Resetear cantidad a 1
        if (quantityInput) {
          quantityInput.value = '1';
          quantityInput.max = String(currentProduct.stock);
        }
        // Actualizar info de stock
        if (stockInfo) {
          stockInfo.textContent = currentProduct.stock > 0 
            ? `${currentProduct.stock} disponibles` 
            : 'Agotado';
        }
        // Actualizar precio mostrado
        updateDisplayedPrice();
        // Actualizar estado del botón
        updateAddToCartButton();
      });
    } else {
      // Si no hay select de tamaño, usar datos del producto principal
      const productContainer = document.querySelector('[data-product-uuid]') as HTMLElement;
      if (productContainer) {
        currentProduct.uuid = productContainer.getAttribute('data-product-uuid') || '';
        currentProduct.currency = productContainer.getAttribute('data-currency') || 'MXN';
      }
    }

    // Escuchar cambios en la cantidad
    if (quantityInput) {
      quantityInput.addEventListener('input', () => {
        const qty = parseInt(quantityInput.value) || 1;
        if (qty < 1) quantityInput.value = '1';
        if (qty > currentProduct.stock && currentProduct.stock > 0) {
          quantityInput.value = String(currentProduct.stock);
          showErrorNotification(`Solo hay ${currentProduct.stock} unidades disponibles`);
        }
      });
    }

    // Agregar evento al botón de agregar al carrito
    if (addToCartBtn) {
      addToCartBtn.addEventListener('click', handleAddToCart);
    }

    // Actualizar precios si estamos en español y hay USD
    const currentLang = window.location.pathname.startsWith('/en') ? 'en' : 'es';
    if (currentLang === 'es') {
      updatePricesWithExchangeRate();
      setInterval(updatePricesWithExchangeRate, 60 * 60 * 1000);
    }
  });

  function updateCurrentProduct(sizeSelect: HTMLSelectElement) {
    const selectedOption = sizeSelect.options[sizeSelect.selectedIndex];
    currentProduct = {
      uuid: selectedOption.value,
      id: parseInt(selectedOption.getAttribute('data-id') || '0'),
      name: selectedOption.getAttribute('data-name') || '',
      price: parseFloat(selectedOption.getAttribute('data-price') || '0'),
      currency: selectedOption.getAttribute('data-currency') || 'MXN',
      stock: parseInt(selectedOption.getAttribute('data-stock') || '0'),
      image: selectedOption.getAttribute('data-image') || '',
      category: ''
    };
  }

  function updateDisplayedPrice() {
    const priceElement = document.getElementById('main-product-price');
    if (priceElement) {
      priceElement.textContent = formatPrice(currentProduct.price, currentProduct.currency);
    }
  }

  function updateAddToCartButton() {
    const addToCartBtn = document.getElementById('add-to-cart-btn');
    const disabledBtn = document.getElementById('add-to-cart-btn-disabled');
    
    if (currentProduct.stock > 0) {
      if (addToCartBtn) addToCartBtn.style.display = 'flex';
      if (disabledBtn) disabledBtn.style.display = 'none';
    } else {
      if (addToCartBtn) addToCartBtn.style.display = 'none';
      if (disabledBtn) disabledBtn.style.display = 'flex';
    }
  }

  async function handleAddToCart() {
    const quantityInput = document.getElementById('quantity') as HTMLInputElement;
    const quantity = parseInt(quantityInput?.value || '1');

    if (quantity < 1) {
      showErrorNotification('La cantidad debe ser al menos 1');
      return;
    }

    if (quantity > currentProduct.stock) {
      showErrorNotification(`Solo hay ${currentProduct.stock} unidades disponibles`);
      return;
    }

    // Verificar stock en tiempo real
    const stockAvailable = await checkStock(currentProduct.uuid, quantity);
    if (!stockAvailable) {
      return;
    }

    // Obtener carrito actual
    const cartData = localStorage.getItem('starfilters_cart');
    let cart = cartData ? JSON.parse(cartData) : { items: [], total: 0, itemCount: 0, currency: currentProduct.currency };

    // Buscar si el producto ya existe
    const existingItemIndex = cart.items.findIndex((item: any) => item.uuid === currentProduct.uuid);

    // Calcular la cantidad total
    const currentCartQuantity = existingItemIndex >= 0 ? cart.items[existingItemIndex].quantity : 0;
    const newTotalQuantity = currentCartQuantity + quantity;

    // Verificar stock para la cantidad total
    if (newTotalQuantity > currentProduct.stock) {
      showErrorNotification(`Ya tienes ${currentCartQuantity} en el carrito. Solo hay ${currentProduct.stock} disponibles.`);
      return;
    }

    if (existingItemIndex >= 0) {
      cart.items[existingItemIndex].quantity += quantity;
      cart.items[existingItemIndex].price = currentProduct.price;
      cart.items[existingItemIndex].currency = currentProduct.currency;
    } else {
      cart.items.push({
        uuid: currentProduct.uuid,
        product_id: currentProduct.id,
        name: currentProduct.name,
        price: currentProduct.price,
        currency: currentProduct.currency,
        quantity,
        image_url: currentProduct.image,
        category: currentProduct.category
      });
    }

    // Recalcular totales
    cart.total = cart.items.reduce((total: number, item: any) => total + (item.price * item.quantity), 0);
    cart.itemCount = cart.items.reduce((count: number, item: any) => count + item.quantity, 0);

    // Guardar en localStorage
    localStorage.setItem('starfilters_cart', JSON.stringify(cart));

    // Mostrar notificación
    showNotification(`${currentProduct.name} agregado al carrito (${quantity})`);

    // Disparar evento para actualizar navbar
    window.dispatchEvent(new CustomEvent('cartUpdated', { detail: cart }));
  }

  // Función para verificar stock en tiempo real
  async function checkStock(uuid: string, quantity: number): Promise<boolean> {
    try {
      const response = await fetch(`/api/check-stock?uuid=${uuid}&quantity=${quantity}`);
      const data = await response.json();
      
      if (!data.available) {
        if (data.stock === 0) {
          showErrorNotification('Este producto está agotado');
        } else {
          showErrorNotification(`Solo quedan ${data.stock} unidades disponibles`);
        }
        return false;
      }
      
      return true;
    } catch (error) {
      console.error('Error verificando stock:', error);
      return true;
    }
  }

  // Obtener tasa de cambio actual y actualizar precios USD
  async function updatePricesWithExchangeRate() {
    try {
      const response = await fetch('/api/exchange-rate');
      const data = await response.json();
      
      if (data.success && data.rate) {
        const variantRows = document.querySelectorAll('[data-currency="USD"]');
        variantRows.forEach((row) => {
          const priceUsdElement = row.querySelector('[data-price-usd]');
          const priceElement = row.querySelector('.variant-price');
          
          if (priceUsdElement && priceElement) {
            const priceUSD = parseFloat(priceUsdElement.getAttribute('data-price-usd') || '0');
            const priceMXN = priceUSD * data.rate;
            priceElement.textContent = formatPrice(priceMXN, 'MXN');
          }
        });
      }
    } catch (error) {
      console.error('Error actualizando precios con tasa de cambio:', error);
    }
  }

  // Función para formatear precio según moneda
  const currentLang = window.location.pathname.startsWith('/en') ? 'en' : 'es';
  const defaultCurrency = currentLang === 'en' ? 'USD' : 'MXN';
  
  function formatPrice(price: number, currency: string = defaultCurrency): string {
    return new Intl.NumberFormat(
      currency === 'USD' ? 'en-US' : 'es-MX',
      {
        style: 'currency',
        currency: currency
      }
    ).format(price);
  }

  function showNotification(message: string): void {
    const notification = document.createElement('div');
    notification.className = 'fixed top-20 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50 transition-all duration-300';
    notification.innerHTML = `
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
        <span>${message}</span>
      </div>
    `;
    document.body.appendChild(notification);

    setTimeout(() => {
      notification.style.opacity = '0';
      setTimeout(() => notification.remove(), 300);
    }, 3000);
  }

  function showErrorNotification(message: string): void {
    const notification = document.createElement('div');
    notification.className = 'fixed top-20 right-4 bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg z-50 transition-all duration-300';
    notification.innerHTML = `
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
        <span>${message}</span>
      </div>
    `;
    document.body.appendChild(notification);

    setTimeout(() => {
      notification.style.opacity = '0';
      setTimeout(() => notification.remove(), 300);
    }, 4000);
  }

  // Funciones globales para productos relacionados
  async function addToCartFromProduct(uuid: string, product_id: number, name: string, price: number, image_url: string, category: string, currency: string = 'MXN'): Promise<void> {
    const stockAvailable = await checkStock(uuid, 1);
    if (!stockAvailable) return;

    const cartData = localStorage.getItem('starfilters_cart');
    let cart = cartData ? JSON.parse(cartData) : { items: [], total: 0, itemCount: 0, currency: currency };

    const existingItemIndex = cart.items.findIndex((item: any) => item.uuid === uuid);

    if (existingItemIndex >= 0) {
      cart.items[existingItemIndex].quantity += 1;
    } else {
      cart.items.push({
        uuid,
        product_id,
        name,
        price,
        currency,
        quantity: 1,
        image_url,
        category
      });
    }

    cart.total = cart.items.reduce((total: number, item: any) => total + (item.price * item.quantity), 0);
    cart.itemCount = cart.items.reduce((count: number, item: any) => count + item.quantity, 0);

    localStorage.setItem('starfilters_cart', JSON.stringify(cart));
    showNotification(`${name} agregado al carrito`);
    window.dispatchEvent(new CustomEvent('cartUpdated', { detail: cart }));
  }

  (window as any).addToCartFromProduct = addToCartFromProduct;
</script>
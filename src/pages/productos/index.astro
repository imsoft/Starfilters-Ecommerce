  title={pageTitle}
  seoTitle={`${pageTitle} - Cat√°logo StarFilters`}
  description={categoryInfo?.description || "Explora nuestro cat√°logo completo de productos. Productos de alta calidad con env√≠o a toda la Rep√∫blica Mexicana."}
  keywords={[
    'cat√°logo productos',
    'comprar productos',
    'productos industriales',
    'tienda productos M√©xico'
  ]}
>
  <SEO 
    slot="seo"
    title="Productos"
    description="Explora nuestro cat√°logo completo de productos. Productos de alta calidad con env√≠o a toda la Rep√∫blica Mexicana."
    ogType="website"
    keywords={[
      'cat√°logo productos',
      'comprar productos',
      'productos industriales'
    ]}
  />
  
  <!-- Breadcrumb Schema -->
  <script slot="seo" type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  <div class="bg-background py-24">
    <!-- Breadcrumb -->
    <div class="mx-auto max-w-xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
